               <p>
            
                  <persName id="t18280221-223-person1301">
                  WILLIAM 
                  BARKER
               <interp inst="t18280221-223-person1301" type="surname" value="BARKER"></interp>
                     <interp inst="t18280221-223-person1301" type="given" value="WILLIAM"></interp>
                     <interp inst="t18280221-223-person1301" type="gender" value="male"></interp>
