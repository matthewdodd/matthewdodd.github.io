                  <persName id="t18310630-169-person1242">
                  WILLIAM 
                  SPRATT
               <interp inst="t18310630-169-person1242" type="surname" value="SPRATT"></interp>
                     <interp inst="t18310630-169-person1242" type="given" value="WILLIAM"></interp>
