               <p>574. 
               <persName id="t18260216-213-defend1227" type="defendantName">
                  JOHN 
                  FRANEY
               <interp inst="t18260216-213-defend1227" type="surname" value="FRANEY"></interp>
                     <interp inst="t18260216-213-defend1227" type="given" value="JOHN"></interp>
