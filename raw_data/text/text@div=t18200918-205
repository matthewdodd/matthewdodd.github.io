                  <persName id="t18200918-205-person2026">
                  SAMUEL 
                  VERDY READ
               <interp inst="t18200918-205-person2026" type="surname" value="VERDY READ"></interp>
                     <interp inst="t18200918-205-person2026" type="given" value="SAMUEL"></interp>
