                  <xptr type="pageFacsimile" doc="177512060085"></xptr>
            
                  <persName id="t17751206-49-person877">
                  JOHN
                   HOLLWELL
               <interp inst="t17751206-49-person877" type="surname" value="HOLLWELL"></interp>
                     <interp inst="t17751206-49-person877" type="given" value="JOHN"></interp>
