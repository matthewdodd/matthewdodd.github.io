                  <persName id="t18310630-220-person1660">
                  ROBERT 
                  WILLIAMSON ANDERSON
               <interp inst="t18310630-220-person1660" type="surname" value="WILLIAMSON ANDERSON"></interp>
                     <interp inst="t18310630-220-person1660" type="given" value="ROBERT"></interp>
                     <interp inst="t18310630-220-person1660" type="gender" value="male"></interp>
