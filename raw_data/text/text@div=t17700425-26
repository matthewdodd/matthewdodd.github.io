            , and 
               
                  <persName id="t17700425-26-defend328" type="defendantName">
                     Francis
                      Comfort, otherwise <rs id="t17700425-26-alias-2" type="alias">
                        <join result="nameAlias" targOrder="Y" targets="t17700425-26-defend328 t17700425-26-alias-2"></join>Comford</rs>
