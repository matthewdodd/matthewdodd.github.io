               <p>191. 
               
                  <persName id="t18060219-62-defend640" type="defendantName">
                     PATRICK 
                     LEARY
                  <interp inst="t18060219-62-defend640" type="surname" value="LEARY"></interp>
                     <interp inst="t18060219-62-defend640" type="given" value="PATRICK"></interp>
