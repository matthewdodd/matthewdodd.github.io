               <p>215. 
               
                  <persName id="t18311201-215-defend1676" type="defendantName">
                     JOHN 
                     GURREN
                  <interp inst="t18311201-215-defend1676" type="surname" value="GURREN"></interp>
                     <interp inst="t18311201-215-defend1676" type="given" value="JOHN"></interp>
