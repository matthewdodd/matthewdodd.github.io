                  </persName>
                
            , of <placeName id="t17441205-35-defloc227">St. George the Martyr</placeName>
                  <interp inst="t17441205-35-defloc227" type="placeName" value="St. George the Martyr"></interp>
                  <interp inst="t17441205-35-defloc227" type="type" value="defendantHome"></interp>
                  <join result="persNamePlace" targOrder="Y" targets="t17441205-35-defend398 t17441205-35-defloc227"></join>
