                     <hi rend="largeCaps">JOHN SMITH</hi>
                  </persName>
                  <rs id="t18520223-296-offence-1" type="offenceDescription">
                     <interp inst="t18520223-296-offence-1" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18520223-296-offence-1" type="offenceSubcategory" value="burglary"></interp>, burglariously breaking and entering the dwelling house of <persName id="t18520223-name-91" type="victimName">
                        <interp inst="t18520223-name-91" type="gender" value="male"></interp>
                        <interp inst="t18520223-name-91" type="surname" value="RILEY"></interp>
                        <interp inst="t18520223-name-91" type="given" value="JOHN"></interp>
