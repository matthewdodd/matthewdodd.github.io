               <p>
            
                  <persName id="t18010114-79-person794">
                  SAMUEL 
                  THOMAS
               <interp inst="t18010114-79-person794" type="surname" value="THOMAS"></interp>
                     <interp inst="t18010114-79-person794" type="given" value="SAMUEL"></interp>
                     <interp inst="t18010114-79-person794" type="gender" value="male"></interp>
