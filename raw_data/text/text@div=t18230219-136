                  </persName>
               
            , and 
               <persName id="t18230219-136-defend1246" type="defendantName">
                  
                        
                           <persName id="t18230219-136-defend1248" type="defendantName">
                              EDWARD 
                              BUREAU
                           <interp inst="t18230219-136-defend1248" type="surname" value="BUREAU"></interp>
                        <interp inst="t18230219-136-defend1248" type="given" value="EDWARD"></interp>
                        <interp inst="t18230219-136-defend1248" type="gender" value="male"></interp>
                     </persName>
                        
                     , and SARAH HIS <rs id="t18230219-136-deflabel767" type="occupation">WIFE</rs>
                     <join result="persNameOccupation" targOrder="Y" targets="t18230219-136-defend1246 t18230219-136-deflabel767"></join>
                     <interp inst="t18230219-136-defend1246" type="surname" value="BUREAU"></interp>
