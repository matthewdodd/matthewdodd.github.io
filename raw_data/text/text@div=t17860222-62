            , and 
               
                  <persName id="t17860222-62-defend741" type="defendantName">
                     WILLIAM 
                     HARDY
                  <interp inst="t17860222-62-defend741" type="surname" value="HARDY"></interp>
                     <interp inst="t17860222-62-defend741" type="given" value="WILLIAM"></interp>
                     <interp inst="t17860222-62-defend741" type="gender" value="male"></interp>
