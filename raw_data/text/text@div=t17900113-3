                  <persName id="t17900113-3-defend93" type="defendantName">
                     JOHN 
                     MITTON
                  <interp inst="t17900113-3-defend93" type="surname" value="MITTON"></interp>
                     <interp inst="t17900113-3-defend93" type="given" value="JOHN"></interp>
