               <p>
            
                  <persName id="t17920704-6-person140">
                  JOHN
                   ROWNTREE
               <interp inst="t17920704-6-person140" type="surname" value="ROWNTREE"></interp>
                     <interp inst="t17920704-6-person140" type="given" value="JOHN"></interp>
