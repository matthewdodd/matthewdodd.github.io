                     <interp inst="t17990508-19-defend200" type="age" value="23"></interp>
                  </persName>
               
             was indicted for <rs id="t17990508-19-off98" type="offenceDescription">
                     <interp inst="t17990508-19-off98" type="offenceCategory" value="theft"></interp>
                     <interp inst="t17990508-19-off98" type="offenceSubcategory" value="grandLarceny"></interp>
               feloniously stealing, on the <rs id="t17990508-19-cd99" type="crimeDate">1st of May</rs>
                     <join result="offenceCrimeDate" targOrder="Y" targets="t17990508-19-off98 t17990508-19-cd99"></join>, a cheese, value 6s.
            </rs> the property of 
               
                  <persName id="t17990508-19-victim202" type="victimName">
                     Benjamin 
                     Wood
                  <interp inst="t17990508-19-victim202" type="surname" value="Wood"></interp>
                     <interp inst="t17990508-19-victim202" type="given" value="Benjamin"></interp>
                     <interp inst="t17990508-19-victim202" type="gender" value="male"></interp>
                  </persName>
               
             the <rs id="t17990508-19-viclabel100" type="occupation">elder</rs>
                  <join result="persNameOccupation" targOrder="Y" targets="t17990508-19-victim202 t17990508-19-viclabel100"></join>, 
               
                  <persName id="t17990508-19-victim204" type="victimName">
                     John 
                     Fossick
                  <interp inst="t17990508-19-victim204" type="surname" value="Fossick"></interp>
                     <interp inst="t17990508-19-victim204" type="given" value="John"></interp>
                     <interp inst="t17990508-19-victim204" type="gender" value="male"></interp>
                  </persName>
               
            , and 
               
                  <persName id="t17990508-19-victim206" type="victimName">
                     Benjamin 
                     Wood
                  <interp inst="t17990508-19-victim206" type="surname" value="Wood"></interp>
                     <interp inst="t17990508-19-victim206" type="given" value="Benjamin"></interp>
                     <interp inst="t17990508-19-victim206" type="gender" value="male"></interp>
