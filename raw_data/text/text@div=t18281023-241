                  <persName id="t18281023-241-person1269">
                  JAMES 
                  SULLIVAN
               <interp inst="t18281023-241-person1269" type="surname" value="SULLIVAN"></interp>
                     <interp inst="t18281023-241-person1269" type="given" value="JAMES"></interp>
                     <interp inst="t18281023-241-person1269" type="gender" value="male"></interp>
