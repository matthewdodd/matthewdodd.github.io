               <p>547. 
               
                  <persName id="t18160529-72-defend727" type="defendantName">
                     JOHN 
                     HOLLOWAY
                  <interp inst="t18160529-72-defend727" type="surname" value="HOLLOWAY"></interp>
                     <interp inst="t18160529-72-defend727" type="given" value="JOHN"></interp>
