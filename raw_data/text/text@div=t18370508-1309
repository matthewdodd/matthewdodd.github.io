                        <join result="offenceCrimeDate" targOrder="Y" targets="t18370508-1309-offence-1 t18370508-cd-144"></join>22nd of April</rs>, 1 apron, value 4<hi rend="italic">s</hi>.; 5 pillow-cases, value 7<hi rend="italic">s</hi>.; 4 handkerchiefs, value 8<hi rend="italic">s</hi>.; 2 cravats, value 3<hi rend="italic">s</hi>.; 9 towels, value fit.; 1 pair of stockings, value 1<hi rend="italic">s</hi>.; 1 sheet, value 4<hi rend="italic">s</hi>.; 5 knives, value 3<hi rend="italic">s</hi>.; 3 forks, value 1<hi rend="italic">s</hi>.; 1 coverlid, value 2<hi rend="italic">s</hi>.; 2lbs. weight of candles, value 1<hi rend="italic">s</hi>.; 1lb. weight of stone blue, value 1<hi rend="italic">s</hi>. 6<hi rend="italic">d</hi>.; 1lb. weight of powder blue, value 4<hi rend="italic">s</hi>.; and 2 table-cloths, value 10<hi rend="italic">s</hi>.; the goods of <persName id="t18370508-name-867" type="victimName">
                        <interp inst="t18370508-name-867" type="gender" value="male"></interp>
