               <p>480. 
               
                  <persName id="t18060917-73-defend693" type="defendantName">
                     GEORGE 
                     FORD
                  <interp inst="t18060917-73-defend693" type="surname" value="FORD"></interp>
                     <interp inst="t18060917-73-defend693" type="given" value="GEORGE"></interp>
