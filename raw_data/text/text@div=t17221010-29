               <persName id="t17221010-29-person206">
                  Richard 
                  Trantum 
               <interp inst="t17221010-29-person206" type="surname" value="Trantum"></interp>
                     <interp inst="t17221010-29-person206" type="given" value="Richard"></interp>
                     <interp inst="t17221010-29-person206" type="gender" value="male"></interp>
