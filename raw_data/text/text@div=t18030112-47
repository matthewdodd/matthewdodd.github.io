                  <persName id="t18030112-47-person294">
                  JOHN 
                  THOMAS
               <interp inst="t18030112-47-person294" type="surname" value="THOMAS"></interp>
                     <interp inst="t18030112-47-person294" type="given" value="JOHN"></interp>
