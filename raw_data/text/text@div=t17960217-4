               <p>
                  <xptr type="pageFacsimile" doc="179602170005"></xptr>
            
                  <persName id="t17960217-4-person81">
                  JOHN
                   SLUTER
               <interp inst="t17960217-4-person81" type="surname" value="SLUTER"></interp>
                     <interp inst="t17960217-4-person81" type="given" value="JOHN"></interp>
                     <interp inst="t17960217-4-person81" type="gender" value="male"></interp>
