               <p>600. 
               
                  <persName id="t17930911-53-defend650" type="defendantName">
                     THOMAS 
                     COOKE otherwise <rs id="t17930911-53-alias-6" type="alias">
                        <join result="nameAlias" targOrder="Y" targets="t17930911-53-defend650 t17930911-53-alias-6"></join>EVERSAL</rs>
                     <interp inst="t17930911-53-defend650" type="surname" value="COOKE"></interp>
