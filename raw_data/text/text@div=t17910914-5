                  <persName id="t17910914-5-person103">
                  THOMAS
                   MONKHOUSE
               <interp inst="t17910914-5-person103" type="surname" value="MONKHOUSE"></interp>
                     <interp inst="t17910914-5-person103" type="given" value="THOMAS"></interp>
                     <interp inst="t17910914-5-person103" type="gender" value="male"></interp>
