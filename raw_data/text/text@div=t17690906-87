                  <persName id="t17690906-87-person854">
                  Mary 
                  Palmer 
               <interp inst="t17690906-87-person854" type="surname" value="Palmer"></interp>
                     <interp inst="t17690906-87-person854" type="given" value="Mary"></interp>
                     <interp inst="t17690906-87-person854" type="gender" value="female"></interp>
