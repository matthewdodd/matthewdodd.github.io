               <p>
            
                  <persName id="t18131027-65-person695">
                  ALEXANDER 
                  LEVI
               <interp inst="t18131027-65-person695" type="surname" value="LEVI"></interp>
                     <interp inst="t18131027-65-person695" type="given" value="ALEXANDER"></interp>
