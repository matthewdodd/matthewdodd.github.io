                  ; in the dwelling house of the said 
                     <persName id="t17931204-8-person132">
                        Samuel
                         Galindo
                     <interp inst="t17931204-8-person132" type="surname" value="Galindo"></interp>
                        <interp inst="t17931204-8-person132" type="given" value="Samuel"></interp>
