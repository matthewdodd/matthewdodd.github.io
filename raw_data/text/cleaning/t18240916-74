               <p>
            
               
                  <persName id="t18240916-74-victim667" type="victimName">
                     JEMIMA 
                     NEWTON
                  <interp inst="t18240916-74-victim667" type="surname" value="NEWTON"></interp>
                     <interp inst="t18240916-74-victim667" type="given" value="JEMIMA"></interp>
                     <interp inst="t18240916-74-victim667" type="gender" value="female"></interp>
