                  <persName id="t17960406-83-person902">
                  THOMAS
                   BIRCH
               <interp inst="t17960406-83-person902" type="surname" value="BIRCH"></interp>
                     <interp inst="t17960406-83-person902" type="given" value="THOMAS"></interp>
