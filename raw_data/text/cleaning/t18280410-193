                  <persName id="t18280410-193-victim1095" type="victimName">
                  GEORGE 
                  AVELING
               <interp inst="t18280410-193-victim1095" type="surname" value="AVELING"></interp>
                     <interp inst="t18280410-193-victim1095" type="given" value="GEORGE"></interp>
