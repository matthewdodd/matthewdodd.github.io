               <p>456. 
               
                  <persName id="t18340220-138-defend1380" type="defendantName">
                     SARAH 
                     FULLER, alias <rs id="t18340220-138-alias-4" type="alias">
                        <join result="nameAlias" targOrder="Y" targets="t18340220-138-defend1380 t18340220-138-alias-4"></join>Mary Matthews</rs>, alias <rs id="t18340220-138-alias-5" type="alias">
                        <join result="nameAlias" targOrder="Y" targets="t18340220-138-defend1380 t18340220-138-alias-5"></join>Hunt</rs>
                     <interp inst="t18340220-138-defend1380" type="surname" value="FULLER"></interp>
                     <interp inst="t18340220-138-defend1380" type="given" value="SARAH"></interp>
