                     <join result="persNameOccupation" targOrder="Y" targets="t17900224-38-victim397 t17900224-38-viclabel221"></join>
                     <interp inst="t17900224-38-victim397" type="surname" value="Eddington"></interp>
                     <interp inst="t17900224-38-victim397" type="given" value="John"></interp>
