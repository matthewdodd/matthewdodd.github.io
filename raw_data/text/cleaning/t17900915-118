                  <persName id="t17900915-118-person1156">
                  GEORGE
                   PEARMAN
               <interp inst="t17900915-118-person1156" type="surname" value="PEARMAN"></interp>
                     <interp inst="t17900915-118-person1156" type="given" value="GEORGE"></interp>
                     <interp inst="t17900915-118-person1156" type="gender" value="male"></interp>
