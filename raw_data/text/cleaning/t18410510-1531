                     <hi rend="largeCaps">HENRY HYAMS</hi>
                  </persName> and <persName id="def2-1531-18410510" type="defendantName">
                     <interp inst="def2-1531-18410510" type="gender" value="male"></interp>
                     <interp inst="def2-1531-18410510" type="age" value="18"></interp>
