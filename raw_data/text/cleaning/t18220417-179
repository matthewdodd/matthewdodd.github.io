                  <persName id="t18220417-179-person1668">
                  WILLIAM 
                  NICHOLSON
               <interp inst="t18220417-179-person1668" type="surname" value="NICHOLSON"></interp>
                     <interp inst="t18220417-179-person1668" type="given" value="WILLIAM"></interp>
                     <interp inst="t18220417-179-person1668" type="gender" value="male"></interp>
