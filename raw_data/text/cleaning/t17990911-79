               <p>461. 
               <persName id="t17990911-79-defend691" type="defendantName">
                  THOMAS 
                  PITSMAN, otherwise <rs id="t17990911-79-alias-3" type="alias">
                        <join result="nameAlias" targOrder="Y" targets="t17990911-79-defend691 t17990911-79-alias-3"></join>FITSMAN</rs>, otherwise <rs id="t17990911-79-alias-4" type="alias">
                        <join result="nameAlias" targOrder="Y" targets="t17990911-79-defend691 t17990911-79-alias-4"></join>HAWKIINS</rs>
                     <interp inst="t17990911-79-defend691" type="surname" value="PITSMAN"></interp>
