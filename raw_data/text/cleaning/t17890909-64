               <p>637. 
               
                  <persName id="t17890909-64-defend608" type="defendantName">
                     JOHN 
                     GATES
                  <interp inst="t17890909-64-defend608" type="surname" value="GATES"></interp>
                     <interp inst="t17890909-64-defend608" type="given" value="JOHN"></interp>
