                     <interp inst="t18180617-118-defend1006" type="age" value="14"></interp>
                  </persName>
               
             and 
               
                  <persName id="t18180617-118-defend1008" type="defendantName">
                     EDWARD 
                     ALLEN
                  <interp inst="t18180617-118-defend1008" type="surname" value="ALLEN"></interp>
                     <interp inst="t18180617-118-defend1008" type="given" value="EDWARD"></interp>
                     <interp inst="t18180617-118-defend1008" type="gender" value="male"></interp>
                  </persName>
               
             were indicted for <rs id="t18180617-118-off655" type="offenceDescription">
                     <interp inst="t18180617-118-off655" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18180617-118-off655" type="offenceSubcategory" value="grandLarceny"></interp>
               stealing, on the <rs id="t18180617-118-cd656" type="crimeDate">6th of June</rs>
                     <join result="offenceCrimeDate" targOrder="Y" targets="t18180617-118-off655 t18180617-118-cd656"></join>, four shawls, value 38s.
            </rs>, the goods of 
               
                  <persName id="t18180617-118-victim1010" type="victimName">
                     Thomas 
                     Walker
                  <interp inst="t18180617-118-victim1010" type="surname" value="Walker"></interp>
                     <interp inst="t18180617-118-victim1010" type="given" value="Thomas"></interp>
