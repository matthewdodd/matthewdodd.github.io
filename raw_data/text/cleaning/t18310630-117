               <p>1305. 
               
                  <persName id="t18310630-117-defend894" type="defendantName">
                     THOMAS 
                     HICKSON
                  <interp inst="t18310630-117-defend894" type="surname" value="HICKSON"></interp>
                     <interp inst="t18310630-117-defend894" type="given" value="THOMAS"></interp>
