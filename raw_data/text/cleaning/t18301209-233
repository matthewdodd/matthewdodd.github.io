                     <interp inst="t18301209-233-defend1960" type="age" value="14"></interp>
                  </persName>
               
             was indicted for <rs id="t18301209-233-off1304" type="offenceDescription">
                     <interp inst="t18301209-233-off1304" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18301209-233-off1304" type="offenceSubcategory" value="simpleLarceny"></interp>
               stealing, on the <rs id="t18301209-233-cd1305" type="crimeDate">31st of October</rs>
                     <join result="offenceCrimeDate" targOrder="Y" targets="t18301209-233-off1304 t18301209-233-cd1305"></join>
                     <join result="offenceCrimeDate" targOrder="Y" targets="t18301209-233-off1307 t18301209-233-cd1305"></join>
                     <join result="offenceCrimeDate" targOrder="Y" targets="t18301209-233-off1308 t18301209-233-cd1305"></join>, 3 silver spoons, value 6s.; 1 gold ring, value 10s., and 1 sword-helf, value 4s.
            </rs>, the goods of 
               
                  <persName id="t18301209-233-victim1962" type="victimName">
                     Ann 
                     Randall
                  <interp inst="t18301209-233-victim1962" type="surname" value="Randall"></interp>
                     <interp inst="t18301209-233-victim1962" type="given" value="Ann"></interp>
                     <interp inst="t18301209-233-victim1962" type="gender" value="female"></interp>
                  </persName>
               
            , <rs id="t18301209-233-viclabel1306" type="occupation">widow</rs>
                  <join result="persNameOccupation" targOrder="Y" targets="t18301209-233-victim1962 t18301209-233-viclabel1306"></join>; and 
               
                  <persName id="t18301209-233-defend1964" type="defendantName">
                     JOHN 
                     MORRIS
                  <interp inst="t18301209-233-defend1964" type="surname" value="MORRIS"></interp>
                     <interp inst="t18301209-233-defend1964" type="given" value="JOHN"></interp>
                     <interp inst="t18301209-233-defend1964" type="gender" value="male"></interp>
