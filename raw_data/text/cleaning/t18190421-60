                     <interp inst="t18190421-60-off343" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18190421-60-off343" type="offenceSubcategory" value="pocketpicking"></interp>
               stealing, on the <rs id="t18190421-60-cd344" type="crimeDate">25th of March</rs>
                     <join result="offenceCrimeDate" targOrder="Y" targets="t18190421-60-off343 t18190421-60-cd344"></join>, one handkerchief, value 2 s., the goods of 
                     
                        <persName id="t18190421-60-victim728" type="victimName">
                           Henry 
                           Hart
                        <interp inst="t18190421-60-victim728" type="surname" value="Hart"></interp>
                        <interp inst="t18190421-60-victim728" type="given" value="Henry"></interp>
