               <p>
                  <hi rend="largeCaps">THOMPSON</hi> pleaded <hi rend="smallCaps">
                     <rs id="t18481023-2345-verdict-1" type="verdictDescription">
                        <interp inst="t18481023-2345-verdict-1" type="verdictCategory" value="guilty"></interp>
