                     <interp inst="t18261026-106-off581" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18261026-106-off581" type="offenceSubcategory" value="grandLarceny"></interp>
               stealing, on the <rs id="t18261026-106-cd582" type="crimeDate">19th of October</rs>
                     <join result="offenceCrimeDate" targOrder="Y" targets="t18261026-106-off581 t18261026-106-cd582"></join>, 1 sheet, value 2s., and 1 gown, value 5s.
            </rs>, the goods of 
               <persName id="t18261026-106-victim719" type="victimName">
                  Elizabeth 
                  Brown
               <interp inst="t18261026-106-victim719" type="surname" value="Brown"></interp>
                     <interp inst="t18261026-106-victim719" type="given" value="Elizabeth"></interp>
                     <interp inst="t18261026-106-victim719" type="gender" value="female"></interp>
                     <join result="offenceVictim" targOrder="Y" targets="t18261026-106-off581 t18261026-106-victim719"></join>
