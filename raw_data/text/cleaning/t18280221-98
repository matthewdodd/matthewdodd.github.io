                  <persName id="t18280221-98-person705">
                  RICHARD 
                  HEARTWELL
               <interp inst="t18280221-98-person705" type="surname" value="HEARTWELL"></interp>
                     <interp inst="t18280221-98-person705" type="given" value="RICHARD"></interp>
                     <interp inst="t18280221-98-person705" type="gender" value="male"></interp>
