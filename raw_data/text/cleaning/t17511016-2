                  <persName id="t17511016-2-person36">
                  Thomas 
                  Wheller 
               <interp inst="t17511016-2-person36" type="surname" value="Wheller"></interp>
                     <interp inst="t17511016-2-person36" type="given" value="Thomas"></interp>
