               <p>
            
                  <persName id="t17870523-12-person190">
                  DAVID
                   HERON PUGH
               <interp inst="t17870523-12-person190" type="surname" value="HERON PUGH"></interp>
                     <interp inst="t17870523-12-person190" type="given" value="DAVID"></interp>
                     <interp inst="t17870523-12-person190" type="gender" value="male"></interp>
