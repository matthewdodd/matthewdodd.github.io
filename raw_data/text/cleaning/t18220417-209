                        <join result="offenceVictim" targOrder="Y" targets="t18220417-209-off1099 t18220417-209-victim1904"></join>
                     </persName>
                     
                  , and fixed to the dwelling-house of 
                     <persName id="t18220417-209-person1905">
                        Susannah 
                        Turner
                     <interp inst="t18220417-209-person1905" type="surname" value="Turner"></interp>
                        <interp inst="t18220417-209-person1905" type="given" value="Susannah"></interp>
                        <interp inst="t18220417-209-person1905" type="gender" value="female"></interp>
