                  <persName id="t18310908-149-defend1208" type="defendantName">
                     JAMES 
                     CARNEY
                  <interp inst="t18310908-149-defend1208" type="surname" value="CARNEY"></interp>
                     <interp inst="t18310908-149-defend1208" type="given" value="JAMES"></interp>
                     <interp inst="t18310908-149-defend1208" type="gender" value="male"></interp>
                     <interp inst="t18310908-149-defend1208" type="age" value="16"></interp>
                  </persName>
               
             were indicted for <rs id="t18310908-149-off795" type="offenceDescription">
                     <interp inst="t18310908-149-off795" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18310908-149-off795" type="offenceSubcategory" value="pocketpicking"></interp>
               stealing, on the <rs id="t18310908-149-cd796" type="crimeDate">22nd of July</rs>
                     <join result="offenceCrimeDate" targOrder="Y" targets="t18310908-149-off795 t18310908-149-cd796"></join>, 1 handkerchief, value 2s., the goods of 
                     
                        <persName id="t18310908-149-victim1210" type="victimName">
                           Robert 
                           Norris
                        <interp inst="t18310908-149-victim1210" type="surname" value="Norris"></interp>
