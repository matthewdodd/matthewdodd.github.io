               <p>
               
                  <persName id="t17860830-11-person175" type="jurorName">
                     Charles
                      Smith
                  <interp inst="t17860830-11-person175" type="surname" value="Smith"></interp>
                     <interp inst="t17860830-11-person175" type="given" value="Charles"></interp>
                     <interp inst="t17860830-11-person175" type="gender" value="male"></interp>
                  </persName>
               
               </p>
               <p>
               
                  <persName id="t17860830-11-person176" type="jurorName">
                     Thomas
                      Grays
                  <interp inst="t17860830-11-person176" type="surname" value="Grays"></interp>
                     <interp inst="t17860830-11-person176" type="given" value="Thomas"></interp>
                     <interp inst="t17860830-11-person176" type="gender" value="male"></interp>
