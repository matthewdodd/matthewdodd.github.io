               <persName id="t18291029-178-person1411">
                     <rs id="t18291029-178-alias-3" type="alias">
                        <join result="nameAlias" targOrder="Y" targets="t18291029-178-person1411 t18291029-178-alias-3"></join>James Pearce</rs>
