               <p>1345. 
               <persName id="t18270531-332-defend1781" type="defendantName">
                  JOHN 
                  MITCHELL
               <interp inst="t18270531-332-defend1781" type="surname" value="MITCHELL"></interp>
                     <interp inst="t18270531-332-defend1781" type="given" value="JOHN"></interp>
