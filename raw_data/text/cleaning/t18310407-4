                     <interp inst="t18310407-4-defend144" type="age" value="17"></interp>
                  </persName>
             and 
               
                  <persName id="t18310407-4-defend146" type="defendantName">
                     CATHERINE 
                     COLLINS
                  <interp inst="t18310407-4-defend146" type="surname" value="COLLINS"></interp>
                     <interp inst="t18310407-4-defend146" type="given" value="CATHERINE"></interp>
