               <p>526. 
               
                  <persName id="t17980912-59-defend614" type="defendantName">
                     THOMAS 
                     CHAPMAN
                  <interp inst="t17980912-59-defend614" type="surname" value="CHAPMAN"></interp>
                     <interp inst="t17980912-59-defend614" type="given" value="THOMAS"></interp>
