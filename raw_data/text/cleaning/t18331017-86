                        <interp inst="t18331017-86-victim878" type="gender" value="female"></interp>
                        <join result="offenceVictim" targOrder="Y" targets="t18331017-86-off479 t18331017-86-victim878"></join>
                     </persName>
                     
                  , in the dwelling-house of 
                     <persName id="t18331017-86-person879">
                        Susan 
                        Ebrington
                     <interp inst="t18331017-86-person879" type="surname" value="Ebrington"></interp>
                        <interp inst="t18331017-86-person879" type="given" value="Susan"></interp>
