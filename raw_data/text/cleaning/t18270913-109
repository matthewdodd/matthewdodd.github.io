               <p>1697. 
               
                  <persName id="t18270913-109-defend1172" type="defendantName">
                     MARTHA 
                     SMITH
                  <interp inst="t18270913-109-defend1172" type="surname" value="SMITH"></interp>
                     <interp inst="t18270913-109-defend1172" type="given" value="MARTHA"></interp>
