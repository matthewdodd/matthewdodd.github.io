            , and 
               
                  <persName id="t18130915-52-victim523" type="victimName">
                     Daniel 
                     Adams
                  <interp inst="t18130915-52-victim523" type="surname" value="Adams"></interp>
                     <interp inst="t18130915-52-victim523" type="given" value="Daniel"></interp>
                     <interp inst="t18130915-52-victim523" type="gender" value="male"></interp>
