               <p>
            
                  <persName id="t17950416-82-person905">
                  SAMUEL
                   PHIPPS
               <interp inst="t17950416-82-person905" type="surname" value="PHIPPS"></interp>
                     <interp inst="t17950416-82-person905" type="given" value="SAMUEL"></interp>
                     <interp inst="t17950416-82-person905" type="gender" value="male"></interp>
