                  <xptr type="pageFacsimile" doc="183309050111"></xptr>1374. 
               
                  <persName id="t18330905-171-defend1632" type="defendantName">
                     THOMAS 
                     COLEMAN
                  <interp inst="t18330905-171-defend1632" type="surname" value="COLEMAN"></interp>
