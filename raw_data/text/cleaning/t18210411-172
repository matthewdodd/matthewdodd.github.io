                  <persName id="t18210411-172-victim1689" type="victimName">
                     SAMUEL 
                     DALTON
                  <interp inst="t18210411-172-victim1689" type="surname" value="DALTON"></interp>
                     <interp inst="t18210411-172-victim1689" type="given" value="SAMUEL"></interp>
