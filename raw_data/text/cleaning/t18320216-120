             and 
               
                  <persName id="t18320216-120-defend1027" type="defendantName">
                     GEORGE 
                     LOFTHOUSE
                  <interp inst="t18320216-120-defend1027" type="surname" value="LOFTHOUSE"></interp>
                     <interp inst="t18320216-120-defend1027" type="given" value="GEORGE"></interp>
                     <interp inst="t18320216-120-defend1027" type="gender" value="male"></interp>
                     <interp inst="t18320216-120-defend1027" type="age" value="17"></interp>
