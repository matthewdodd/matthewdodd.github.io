               <p>
            
               
                  <persName id="t18191201-151-victim1519" type="victimName">
                     WILLIAM 
                     MOORE
                  <interp inst="t18191201-151-victim1519" type="surname" value="MOORE"></interp>
                     <interp inst="t18191201-151-victim1519" type="given" value="WILLIAM"></interp>
