             and 
               
                  <persName id="t18130407-24-defend257" type="defendantName">
                     JOHN 
                     HOLMES
                  <interp inst="t18130407-24-defend257" type="surname" value="HOLMES"></interp>
                     <interp inst="t18130407-24-defend257" type="given" value="JOHN"></interp>
