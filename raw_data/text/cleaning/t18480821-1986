                     <hi rend="largeCaps">THOMAS ROBERTS</hi>
                  </persName>, <persName id="def2-1986-18480821" type="defendantName">
                     <interp inst="def2-1986-18480821" type="gender" value="male"></interp>
                     <interp inst="def2-1986-18480821" type="age" value="20"></interp>
