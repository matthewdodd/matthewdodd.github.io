                  <persName id="t17950520-17-person188">
                  JOHN
                   HINDE
               <interp inst="t17950520-17-person188" type="surname" value="HINDE"></interp>
                     <interp inst="t17950520-17-person188" type="given" value="JOHN"></interp>
                     <interp inst="t17950520-17-person188" type="gender" value="male"></interp>
