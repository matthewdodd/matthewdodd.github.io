                  <persName id="t18170917-313-person2155">
                  PHILIP 
                  ALLMAN
               <interp inst="t18170917-313-person2155" type="surname" value="ALLMAN"></interp>
                     <interp inst="t18170917-313-person2155" type="given" value="PHILIP"></interp>
                     <interp inst="t18170917-313-person2155" type="gender" value="male"></interp>
