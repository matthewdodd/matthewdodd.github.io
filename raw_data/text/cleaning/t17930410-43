               <p>327 
               <persName id="t17930410-43-defend417" type="defendantName">
                  JOB 
                  TRISTRAM
               <interp inst="t17930410-43-defend417" type="surname" value="TRISTRAM"></interp>
                     <interp inst="t17930410-43-defend417" type="given" value="JOB"></interp>
