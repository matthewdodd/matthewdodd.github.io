                     <interp inst="t18261026-130-off717" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18261026-130-off717" type="offenceSubcategory" value="grandLarceny"></interp>
               stealing, on the <rs id="t18261026-130-cd718" type="crimeDate">14th of October</rs>
                     <join result="offenceCrimeDate" targOrder="Y" targets="t18261026-130-off717 t18261026-130-cd718"></join>, 1 cloak, value 8s.
            </rs>, the goods of 
               <persName id="t18261026-130-victim849" type="victimName">
                  Frederick 
                  Hopkins
               <interp inst="t18261026-130-victim849" type="surname" value="Hopkins"></interp>
                     <interp inst="t18261026-130-victim849" type="given" value="Frederick"></interp>
                     <interp inst="t18261026-130-victim849" type="gender" value="male"></interp>
                     <join result="offenceVictim" targOrder="Y" targets="t18261026-130-off717 t18261026-130-victim849"></join>
