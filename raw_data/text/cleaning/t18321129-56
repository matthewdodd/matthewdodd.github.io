                     </persName>
                     
                   and others
            </rs>; and 
               
                  <persName id="t18321129-56-defend591" type="defendantName">
                     JOSEPH 
                     SMITH
                  <interp inst="t18321129-56-defend591" type="surname" value="SMITH"></interp>
