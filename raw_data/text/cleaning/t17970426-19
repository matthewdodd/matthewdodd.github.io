                  <persName id="t17970426-19-person194">
                  ANN
                   THOMAS
               <interp inst="t17970426-19-person194" type="surname" value="THOMAS"></interp>
                     <interp inst="t17970426-19-person194" type="given" value="ANN"></interp>
                     <interp inst="t17970426-19-person194" type="gender" value="female"></interp>
