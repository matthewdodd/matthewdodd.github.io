                     <interp inst="def1-1123-18490507" type="given" value="CHARLES"></interp>
                     <hi rend="largeCaps">CHARLES M'CLARENS</hi>
                  </persName> and <persName id="def2-1123-18490507" type="defendantName">
                     <interp inst="def2-1123-18490507" type="gender" value="male"></interp>
