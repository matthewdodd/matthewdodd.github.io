               <p>535. 
               
                  <persName id="t18080713-62-defend626" type="defendantName">
                     EDWARD 
                     CHURCHILL, alias <rs id="t18080713-62-alias-6" type="alias">
                        <join result="nameAlias" targOrder="Y" targets="t18080713-62-defend626 t18080713-62-alias-6"></join>ROACH</rs>
                     <interp inst="t18080713-62-defend626" type="surname" value="CHURCHILL"></interp>
                     <interp inst="t18080713-62-defend626" type="given" value="EDWARD"></interp>
