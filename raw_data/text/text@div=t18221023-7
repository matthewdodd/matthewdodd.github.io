                     <interp inst="t18221023-7-off30" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18221023-7-off30" type="offenceSubcategory" value="theftFromPlace"></interp>
               that she being <rs id="t18221023-7-deflabel31" type="occupation">servant</rs>
                     <join result="persNameOccupation" targOrder="Y" targets="t18221023-7-defend134 t18221023-7-deflabel31"></join> to 
                     
                        <persName id="t18221023-7-victim136" type="victimName">
                           Edward 
                           Byers
                        <interp inst="t18221023-7-victim136" type="surname" value="Byers"></interp>
