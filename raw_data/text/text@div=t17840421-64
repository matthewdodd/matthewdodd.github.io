                  <persName id="t17840421-64-person770">
                  JOHN
                   BAKER
               <interp inst="t17840421-64-person770" type="surname" value="BAKER"></interp>
                     <interp inst="t17840421-64-person770" type="given" value="JOHN"></interp>
                     <interp inst="t17840421-64-person770" type="gender" value="male"></interp>
