               <p>186. 
               <persName id="t18060219-57-defend591" type="defendantName">
                  
                     JOHN 
                     LUASE
                  , alias <rs id="t18060219-57-alias-2" type="alias">
                        <join result="nameAlias" targOrder="Y" targets="t18060219-57-defend591 t18060219-57-alias-2"></join>LUCASE</rs>
                     <interp inst="t18060219-57-defend591" type="surname" value="LUASE"></interp>
