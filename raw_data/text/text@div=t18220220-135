             and 
               
                  <persName id="t18220220-135-defend1319" type="defendantName">
                     JAMES 
                     BRAGG
                  <interp inst="t18220220-135-defend1319" type="surname" value="BRAGG"></interp>
                     <interp inst="t18220220-135-defend1319" type="given" value="JAMES"></interp>
