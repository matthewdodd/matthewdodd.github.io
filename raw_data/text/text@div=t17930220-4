               <p>
            
                  <persName id="t17930220-4-person93">
                  THOMAS
                   CLARKE
               <interp inst="t17930220-4-person93" type="surname" value="CLARKE"></interp>
                     <interp inst="t17930220-4-person93" type="given" value="THOMAS"></interp>
