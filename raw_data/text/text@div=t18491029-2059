                     <interp inst="def1-2059-18491029" type="given" value="THOMAS"></interp>
                     <hi rend="largeCaps">THOMAS CONOLLY</hi>
                  </persName> and <persName id="def2-2059-18491029" type="defendantName">
                     <interp inst="def2-2059-18491029" type="gender" value="male"></interp>
                     <interp inst="def2-2059-18491029" type="surname" value="REECE"></interp>
