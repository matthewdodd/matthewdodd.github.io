               <interp inst="t18260914-67-defend558" type="surname" value="BIGNALL"></interp>
                     <interp inst="t18260914-67-defend558" type="given" value="JOHN"></interp>
                     <interp inst="t18260914-67-defend558" type="gender" value="male"></interp>
                     <interp inst="t18260914-67-defend558" type="age" value="18"></interp>
                  </persName>
             were indicted for <rs id="t18260914-67-off402" type="offenceDescription">
                     <interp inst="t18260914-67-off402" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18260914-67-off402" type="offenceSubcategory" value="pocketpicking"></interp>
               stealing, on the <rs id="t18260914-67-cd403" type="crimeDate">10th of September</rs>
                     <join result="offenceCrimeDate" targOrder="Y" targets="t18260914-67-off402 t18260914-67-cd403"></join>, 1 handkerchief, value 5s., the goods of 
                     <persName id="t18260914-67-victim559" type="victimName">
                        Thomas 
                        Manley
                     <interp inst="t18260914-67-victim559" type="surname" value="Manley"></interp>
