            , 
               
                  <persName id="t17870912-6-defend100" type="defendantName">
                     FARRELL 
                     KERNON
                  <interp inst="t17870912-6-defend100" type="surname" value="KERNON"></interp>
                     <interp inst="t17870912-6-defend100" type="given" value="FARRELL"></interp>
                     <interp inst="t17870912-6-defend100" type="gender" value="male"></interp>
