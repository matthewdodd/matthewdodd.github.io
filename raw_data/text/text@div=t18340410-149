               <persName id="t18340410-149-defend934" type="defendantName">
                  MARY, the <rs id="t18340410-149-deflabel835" type="occupation">wife</rs>
                     <join result="persNameOccupation" targOrder="Y" targets="t18340410-149-defend934 t18340410-149-deflabel835"></join> of CHARLES ELLIOTT
               <interp inst="t18340410-149-defend934" type="surname" value="ELLIOTT"></interp>
                     <interp inst="t18340410-149-defend934" type="given" value="MARY"></interp>
