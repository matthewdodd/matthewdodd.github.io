               <p>175. 
               <persName id="t17840114-30-defend317" type="defendantName">
                  WILLIAM 
                  COX, otherwise <rs id="t17840114-30-alias-2" type="alias">
                        <join result="nameAlias" targOrder="Y" targets="t17840114-30-defend317 t17840114-30-alias-2"></join>VANDERPLATY</rs>
                     <interp inst="t17840114-30-defend317" type="surname" value="COX"></interp>
