             and 
               <persName id="t18280110-161-defend1019" type="defendantName">
                  CORNELIUS 
                  MAHONEY
               <interp inst="t18280110-161-defend1019" type="surname" value="MAHONEY"></interp>
                     <interp inst="t18280110-161-defend1019" type="given" value="CORNELIUS"></interp>
