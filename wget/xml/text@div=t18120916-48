            </rs>, <rs id="t18120916-48-punish271" type="punishmentDescription">
                     <interp inst="t18120916-48-punish271" type="punishmentCategory" value="death"></interp>
                     <join result="defendantPunishment" targOrder="Y" targets="t18120916-48-defend433 t18120916-48-punish271"></join>
