                     <interp inst="t17910216-41-person526" type="gender" value="female"></interp>
                  </persName>
            , 
               <persName id="t17910216-41-person527">
                  ELIZABETH
                   SHARP
               <interp inst="t17910216-41-person527" type="surname" value="SHARP"></interp>
                     <interp inst="t17910216-41-person527" type="given" value="ELIZABETH"></interp>
