                  , <rs id="t18080914-100-viclabel583" type="occupation">junior</rs>
                     <join result="persNameOccupation" targOrder="Y" targets="t18080914-100-victim875 t18080914-100-viclabel583"></join>, and 
                     
                        <persName id="t18080914-100-victim877" type="victimName">
