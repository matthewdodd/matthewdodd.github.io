               <p>1091. 
               
                  <persName id="t18220703-102-defend880" type="defendantName">
                     WILLIAM RICHARD 
                     NUPPER
                  <interp inst="t18220703-102-defend880" type="surname" value="NUPPER"></interp>
                     <interp inst="t18220703-102-defend880" type="given" value="WILLIAM RICHARD"></interp>
