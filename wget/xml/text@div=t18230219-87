                  <persName id="t18230219-87-person836">
                  JOHN 
                  PEMBERTON
               <interp inst="t18230219-87-person836" type="surname" value="PEMBERTON"></interp>
                     <interp inst="t18230219-87-person836" type="given" value="JOHN"></interp>
                     <interp inst="t18230219-87-person836" type="gender" value="male"></interp>
