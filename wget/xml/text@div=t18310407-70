               <p>
            
                  <persName id="t18310407-70-person670">
                  BENJAMIN 
                  BARBER
               <interp inst="t18310407-70-person670" type="surname" value="BARBER"></interp>
                     <interp inst="t18310407-70-person670" type="given" value="BENJAMIN"></interp>
                     <interp inst="t18310407-70-person670" type="gender" value="male"></interp>
