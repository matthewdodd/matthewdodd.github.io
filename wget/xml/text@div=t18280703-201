               <p>1549. 
               <persName id="t18280703-201-defend1117" type="defendantName">
                  JOSEPH 
                  WARE alias <rs id="t18280703-201-alias-8" type="alias">
                        <join result="nameAlias" targOrder="Y" targets="t18280703-201-defend1117 t18280703-201-alias-8"></join>SHEPPARD</rs>
                     <interp inst="t18280703-201-defend1117" type="surname" value="WARE"></interp>
