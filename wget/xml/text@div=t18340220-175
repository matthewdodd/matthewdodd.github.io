                   and others, his masters
            </rs>; and 
               
                  <persName id="t18340220-175-defend1668" type="defendantName">
                     JOHN 
                     HOPSON
                  <interp inst="t18340220-175-defend1668" type="surname" value="HOPSON"></interp>
                     <interp inst="t18340220-175-defend1668" type="given" value="JOHN"></interp>
                     <interp inst="t18340220-175-defend1668" type="gender" value="male"></interp>
