               <interp inst="t17830723-1-person83" type="surname" value="PINTO"></interp>
                     <interp inst="t17830723-1-person83" type="given" value="EMANUEL"></interp>
                     <interp inst="t17830723-1-person83" type="gender" value="male"></interp>
                  </persName>
            , <rs id="t17830723-1-verdict5" type="verdictDescription">
                     <interp inst="t17830723-1-verdict5" type="verdictCategory" value="guilty"></interp>
               GUILTY
            </rs>, (Death.)</p>
               <p>
            
                  <persName id="t17830723-1-person84">
                  ANTONIO
                   DA COSTA
               <interp inst="t17830723-1-person84" type="surname" value="DA COSTA"></interp>
                     <interp inst="t17830723-1-person84" type="given" value="ANTONIO"></interp>
