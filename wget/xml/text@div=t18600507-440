                        <interp inst="t18600507-440-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18600507-440-punishment-50" type="punishmentDescription">
                        <interp inst="t18600507-440-punishment-50" type="punishmentCategory" value="imprison"></interp>
