                        <interp inst="t18670128-244-verdict-2" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18670128-244-punishment-48" type="punishmentDescription">
                        <interp inst="t18670128-244-punishment-48" type="punishmentCategory" value="imprison"></interp>
