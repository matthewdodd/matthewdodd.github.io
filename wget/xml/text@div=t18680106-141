                        <interp inst="t18680106-141-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18680106-141-punishment-33" type="punishmentDescription">
                        <interp inst="t18680106-141-punishment-33" type="punishmentCategory" value="imprison"></interp>
