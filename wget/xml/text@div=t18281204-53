                     <interp inst="t18281204-53-defend529" type="gender" value="male"></interp>
                     <interp inst="t18281204-53-defend529" type="age" value="21"></interp>
                  </persName>
               
             was indicted for <rs id="t18281204-53-off264" type="offenceDescription">
                     <interp inst="t18281204-53-off264" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18281204-53-off264" type="offenceSubcategory" value="animalTheft"></interp>
               stealing, on the <rs id="t18281204-53-cd265" type="crimeDate">1st of November</rs>
                     <join result="offenceCrimeDate" targOrder="Y" targets="t18281204-53-off264 t18281204-53-cd265"></join>, at St. Mary, Islington, 1 gelding, price 4l.
            </rs>, the property of 
               <persName id="t18281204-53-victim530" type="victimName">
                  Edward 
                  Sherwood
               <interp inst="t18281204-53-victim530" type="surname" value="Sherwood"></interp>
                     <interp inst="t18281204-53-victim530" type="given" value="Edward"></interp>
                     <interp inst="t18281204-53-victim530" type="gender" value="male"></interp>
                     <join result="offenceVictim" targOrder="Y" targets="t18281204-53-off264 t18281204-53-victim530"></join>
