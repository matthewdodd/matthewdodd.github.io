                        <interp inst="t18140706-38-victim356" type="given" value="George"></interp>
                        <interp inst="t18140706-38-victim356" type="gender" value="male"></interp>
                     </persName>
                     
                  , <rs id="t18140706-38-viclabel218" type="occupation">junior</rs>
                     <join result="persNameOccupation" targOrder="Y" targets="t18140706-38-victim356 t18140706-38-viclabel218"></join>, and 
                     <persName id="t18140706-38-victim357" type="victimName">
                        Leader 
                        Stevenson
                     <interp inst="t18140706-38-victim357" type="surname" value="Stevenson"></interp>
