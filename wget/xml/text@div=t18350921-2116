                     <interp inst="t18350921-2116-verdict-2" type="verdictSubcategory" value="no_subcategory"></interp>
                     <hi rend="italic">Guilty</hi>
                  </rs>—<rs id="t18350921-2116-punishment-148" type="punishmentDescription">
                     <interp inst="t18350921-2116-punishment-148" type="punishmentCategory" value="miscPunish"></interp>
