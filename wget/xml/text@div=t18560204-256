                        <interp inst="t18560204-256-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18560204-256-punishment-35" type="punishmentDescription">
                        <interp inst="t18560204-256-punishment-35" type="punishmentCategory" value="imprison"></interp>
