               <p>623. 
               
                  <persName id="t17830910-29-defend278" type="defendantName">
                     THOMAS 
                     COMPTON otherwise <rs id="t17830910-29-alias-3" type="alias">
                        <join result="nameAlias" targOrder="Y" targets="t17830910-29-defend278 t17830910-29-alias-3"></join>COLEMAN</rs>
