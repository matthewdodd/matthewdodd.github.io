                     <interp inst="t18450407-804-verdict-1" type="verdictCategory" value="guilty"></interp>
                     <interp inst="t18450407-804-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>
                     <hi rend="smallCaps">GUILTY</hi> 
                     <hi rend="italic">on the 1st and 4th Counts.</hi>
                  </rs> Aged 28.—<hi rend="italic">
