                  , <rs id="t17930529-42-viclabel228" type="occupation">widow</rs>
                     <join result="persNameOccupation" targOrder="Y" targets="t17930529-42-victim545 t17930529-42-viclabel228"></join>; 
                     
                        <persName id="t17930529-42-victim547" type="victimName">
