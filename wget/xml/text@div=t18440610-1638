                        <join result="offenceVictim" targOrder="Y" targets="t18440610-1638-offence-1 t18440610-name-615"></join>William Henry Lindsay</persName>: and 1 gown, 1<hi rend="italic">s</hi>. 6<hi rend="italic">d</hi>.; 1 petticoat, 1<hi rend="italic">s</hi>.; 3 handkerchiefs, 6<hi rend="italic">d</hi>.; 4 aprons, 2<hi rend="italic">s</hi>.; and 1 night-gown, 1<hi rend="italic">s</hi>.; the goods of <persName id="t18440610-name-616" type="victimName">
                        <interp inst="t18440610-name-616" type="gender" value="female"></interp>
