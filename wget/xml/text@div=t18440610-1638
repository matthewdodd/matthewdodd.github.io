                     <interp inst="t18440610-1638-offence-1" type="offenceSubcategory" value="theftFromPlace"></interp> for stealing 1 sheet, value 4<hi rend="italic">s</hi>.; 4 caps, 3<hi rend="italic">s</hi>.; 1 pair of stays, 6<hi rend="italic">d</hi>.; 2 handkerchiefs, 2<hi rend="italic">s</hi>. 4<hi rend="italic">d</hi>.; 8 curtains, 1<hi rend="italic">s</hi>. 6<hi rend="italic">d</hi>.; 3 pinafores, 3<hi rend="italic">s</hi>.; 1 shift, 2<hi rend="italic">s</hi>.; 1 pair of trowsers, 10<hi rend="italic">s</hi>.; 5 petticoats, 5<hi rend="italic">s</hi>.; 5 night-gowns, 5<hi rend="italic">s</hi>.; 5 shirts, 5<hi rend="italic">s</hi>.; 1 napkin, 2<hi rend="italic">d</hi>.; 3 pillow-cases, 4<hi rend="italic">s</hi>. 6<hi rend="italic">d</hi>.; 1 toilet-cover, 1<hi rend="italic">s</hi>.; and 2 frocks, 1<hi rend="italic">s</hi>.; the goods of <persName id="t18440610-name-615" type="victimName">
                        <interp inst="t18440610-name-615" type="gender" value="male"></interp>
