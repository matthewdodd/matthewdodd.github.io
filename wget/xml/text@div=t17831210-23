               <p>23. 
               
                  <persName id="t17831210-23-defend340" type="defendantName">
                     MARGARET 
                     DUVALL, otherwise <rs id="t17831210-23-alias-5" type="alias">
                        <join result="nameAlias" targOrder="Y" targets="t17831210-23-defend340 t17831210-23-alias-5"></join>HENSHAW</rs>
                     <interp inst="t17831210-23-defend340" type="surname" value="DUVALL"></interp>
