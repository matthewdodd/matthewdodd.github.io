            , <rs id="t17340116-11-off42" type="offenceDescription">
                     <interp inst="t17340116-11-off42" type="offenceCategory" value="violentTheft"></interp>
                     <interp inst="t17340116-11-off42" type="offenceSubcategory" value="highwayRobbery"></interp>
               assaulting 
                     
                        <persName id="t17340116-11-victim97" type="victimName">
                           William 
                           Payton 
