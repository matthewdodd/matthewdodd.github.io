               <p>368. 
               
                  <persName id="t17940604-25-defend243" type="defendantName">
                     THOMAS 
                     PRUDEN
                  <interp inst="t17940604-25-defend243" type="surname" value="PRUDEN"></interp>
                     <interp inst="t17940604-25-defend243" type="given" value="THOMAS"></interp>
