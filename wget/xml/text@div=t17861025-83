                  <persName id="t17861025-83-person1109">
                  JOSEPH
                   HALL
               <interp inst="t17861025-83-person1109" type="surname" value="HALL"></interp>
                     <interp inst="t17861025-83-person1109" type="given" value="JOSEPH"></interp>
                     <interp inst="t17861025-83-person1109" type="gender" value="male"></interp>
