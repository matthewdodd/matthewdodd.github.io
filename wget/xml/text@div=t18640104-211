                        <interp inst="t18640104-211-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18640104-211-punishment-53" type="punishmentDescription">
                        <interp inst="t18640104-211-punishment-53" type="punishmentCategory" value="imprison"></interp>
