               <p>
                  <hi rend="smallCaps">
                     <persName id="t18680608-name-238" type="witnessName">
                        <interp inst="t18680608-name-238" type="gender" value="female"></interp>
                        <interp inst="t18680608-name-238" type="surname" value="ADAMS"></interp>
