                  <persName id="t18230625-126-person1101">
                  WILLIAM 
                  WARD
               <interp inst="t18230625-126-person1101" type="surname" value="WARD"></interp>
                     <interp inst="t18230625-126-person1101" type="given" value="WILLIAM"></interp>
