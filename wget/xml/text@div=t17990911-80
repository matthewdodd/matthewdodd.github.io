               <p>462. 
               
                  <persName id="t17990911-80-defend695" type="defendantName">
                     JOHN 
                     WEAR
                  <interp inst="t17990911-80-defend695" type="surname" value="WEAR"></interp>
                     <interp inst="t17990911-80-defend695" type="given" value="JOHN"></interp>
