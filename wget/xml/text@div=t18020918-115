               <p>700. 
               <persName id="t18020918-115-defend787" type="defendantName">
                  WILLIAM 
                  M'LEVEN
               <interp inst="t18020918-115-defend787" type="surname" value="M'LEVEN"></interp>
                     <interp inst="t18020918-115-defend787" type="given" value="WILLIAM"></interp>
