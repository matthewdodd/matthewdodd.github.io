                     <join result="defendantPunishment" targOrder="Y" targets="def1-527-18670610 t18670610-527-punishment-1"></join>
                     <hi rend="italic">Eighteen Months' Imprisonment.</hi>
                  </rs> 
                  <hi rend="smallCaps">BULL</hi>—<hi rend="smallCaps">
                     <rs id="t18670610-527-verdict-2" type="verdictDescription">
                        <interp inst="t18670610-527-verdict-2" type="verdictCategory" value="guilty"></interp>
                        <interp inst="t18670610-527-verdict-2" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.*—<hi rend="italic">
                     <rs id="t18670610-527-punishment-2" type="punishmentDescription">
