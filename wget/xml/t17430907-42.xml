                  <rs id="t17430907-42-punish219" type="punishmentDescription">
                     <interp inst="t17430907-42-punish219" type="punishmentCategory" value="transport"></interp>
                     <join result="defendantPunishment" targOrder="Y" targets="t17430907-42-defend407 t17430907-42-punish219"></join>
               
