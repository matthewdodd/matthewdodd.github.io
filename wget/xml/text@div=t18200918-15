                        <interp inst="t18200918-15-victim202" type="gender" value="male"></interp>
                     </persName>
                     
                  ; and one purse, value 1 s.; one ring, value 4 s., and three guineas, the goods and monies of 
                     
                        <persName id="t18200918-15-victim204" type="victimName">
                           Martha 
                           Medlicott
                        <interp inst="t18200918-15-victim204" type="surname" value="Medlicott"></interp>
                        <interp inst="t18200918-15-victim204" type="given" value="Martha"></interp>
                        <interp inst="t18200918-15-victim204" type="gender" value="female"></interp>
                     </persName>
                     
                  , <rs id="t18200918-15-viclabel80" type="occupation">spinster</rs>
                     <join result="persNameOccupation" targOrder="Y" targets="t18200918-15-victim204 t18200918-15-viclabel80"></join>, in the dwelling-house of the said 
                     <persName id="t18200918-15-person205">
                        James 
                        Swallow
                     <interp inst="t18200918-15-person205" type="surname" value="Swallow"></interp>
