                     <join result="defendantPunishment" targOrder="Y" targets="t17910914-13-defend160 t17910914-13-punish79"></join>
               privately whipped
            </rs>, and <rs id="t17910914-13-punish80" type="punishmentDescription">
                     <interp inst="t17910914-13-punish80" type="punishmentCategory" value="imprison"></interp>
