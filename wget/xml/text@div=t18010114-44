                  </persName>
               
            , 
               
                  <persName id="t18010114-44-victim442" type="victimName">
                     George 
                     Roebuck
                  <interp inst="t18010114-44-victim442" type="surname" value="Roebuck"></interp>
                     <interp inst="t18010114-44-victim442" type="given" value="George"></interp>
                     <interp inst="t18010114-44-victim442" type="gender" value="male"></interp>
                  </persName>
               
            , 
               
                  <persName id="t18010114-44-victim444" type="victimName">
