                     <hi rend="largeCaps">THOMAS BUCHANNAN</hi> (22)</persName>, and <persName id="def4-634-18630406" type="defendantName">
                     <interp inst="def4-634-18630406" type="gender" value="male"></interp>
                     <interp inst="def4-634-18630406" type="age" value="20"></interp>
