                     <interp inst="def2-634-18630406" type="given" value="HENRY"></interp>
                     <hi rend="largeCaps">HENRY BAKER</hi> (19)</persName>, <persName id="def3-634-18630406" type="defendantName">
                     <interp inst="def3-634-18630406" type="gender" value="male"></interp>
