                  <persName id="t18321129-194-person1735">
                  JOSEPH 
                  SPENCER
               <interp inst="t18321129-194-person1735" type="surname" value="SPENCER"></interp>
                     <interp inst="t18321129-194-person1735" type="given" value="JOSEPH"></interp>
                     <interp inst="t18321129-194-person1735" type="gender" value="male"></interp>
