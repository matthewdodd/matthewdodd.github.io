                     <interp inst="def2-40-18781118" type="given" value="THOMAS"></interp>
                     <hi rend="largeCaps">THOMAS DAVIS</hi> (36)</persName>, and <persName id="def3-40-18781118" type="defendantName">
                     <interp inst="def3-40-18781118" type="gender" value="male"></interp>
                     <interp inst="def3-40-18781118" type="age" value="32"></interp>
