                     <hi rend="largeCaps">COURTNEY CLARK SMITH</hi> (33)</persName>, <persName id="def2-40-18781118" type="defendantName">
                     <interp inst="def2-40-18781118" type="gender" value="male"></interp>
                     <interp inst="def2-40-18781118" type="age" value="36"></interp>
