                        <interp inst="t18610923-816-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18610923-816-punishment-74" type="punishmentDescription">
                        <interp inst="t18610923-816-punishment-74" type="punishmentCategory" value="imprison"></interp>
