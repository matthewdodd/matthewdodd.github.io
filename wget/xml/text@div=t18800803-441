               <interp inst="t18800803-441" type="date" value="18800803"></interp>
               <join result="criminalCharge" id="t18800803-441-charge-1" targOrder="Y" targets="def1-441-18800803 t18800803-441-offence-1 t18800803-441-verdict-1"></join>
