             and 
               
                  <persName id="t18060219-75-victim746" type="victimName">
                     Edward 
                     Cleaver
                  <interp inst="t18060219-75-victim746" type="surname" value="Cleaver"></interp>
                     <interp inst="t18060219-75-victim746" type="given" value="Edward"></interp>
                     <interp inst="t18060219-75-victim746" type="gender" value="male"></interp>
