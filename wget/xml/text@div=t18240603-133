                  <persName id="t18240603-133-person1168">
                  GEORGE 
                  COX
               <interp inst="t18240603-133-person1168" type="surname" value="COX"></interp>
                     <interp inst="t18240603-133-person1168" type="given" value="GEORGE"></interp>
                     <interp inst="t18240603-133-person1168" type="gender" value="male"></interp>
