               <p>355. <hi rend="largeCaps">
                     <persName id="def1-355-18431211" type="defendantName">
                        <interp inst="def1-355-18431211" type="gender" value="male"></interp>
                        <interp inst="def1-355-18431211" type="surname" value="DAVIS"></interp>
                        <interp inst="def1-355-18431211" type="given" value="GEORGE"></interp>GEORGE DAVIS</persName>,<persName id="def2-355-18431211" type="defendantName">
                        <interp inst="def2-355-18431211" type="gender" value="male"></interp>
                        <interp inst="def2-355-18431211" type="age" value="21"></interp>
                        <interp inst="def2-355-18431211" type="surname" value="DAVIS"></interp>
                        <interp inst="def2-355-18431211" type="given" value="CHARLES"></interp> CHARLES DAVIS</persName>
                  </hi>, and <persName id="def3-355-18431211" type="defendantName">
                     <interp inst="def3-355-18431211" type="gender" value="female"></interp>
                     <interp inst="def3-355-18431211" type="age" value="23"></interp>
