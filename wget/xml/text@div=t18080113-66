                  <persName id="t18080113-66-person699">
                  SAMUEL 
                  CHANDLER
               <interp inst="t18080113-66-person699" type="surname" value="CHANDLER"></interp>
                     <interp inst="t18080113-66-person699" type="given" value="SAMUEL"></interp>
                     <interp inst="t18080113-66-person699" type="gender" value="male"></interp>
