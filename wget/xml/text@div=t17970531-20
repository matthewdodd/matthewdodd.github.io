                  <persName id="t17970531-20-person243">
                  RICHARD
                   THOMAS
               <interp inst="t17970531-20-person243" type="surname" value="THOMAS"></interp>
                     <interp inst="t17970531-20-person243" type="given" value="RICHARD"></interp>
                     <interp inst="t17970531-20-person243" type="gender" value="male"></interp>
