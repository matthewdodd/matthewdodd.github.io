                     <hi rend="largeCaps">JOHN BROWN</hi>
                  </persName> and <persName id="def2-1642-18360704" type="defendantName">
                     <interp inst="def2-1642-18360704" type="gender" value="male"></interp>
                     <interp inst="def2-1642-18360704" type="age" value="19"></interp>
