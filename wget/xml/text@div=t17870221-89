                     <interp inst="t17870221-89-person906" type="gender" value="male"></interp>
                  </persName>
            , 
               <persName id="t17870221-89-person907">
                  WILLIAM
                   COOPER
               <interp inst="t17870221-89-person907" type="surname" value="COOPER"></interp>
