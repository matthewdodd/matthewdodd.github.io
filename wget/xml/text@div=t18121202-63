            , and 
               <persName id="t18121202-63-victim720" type="victimName">
                  John 
                  Edwards
               <interp inst="t18121202-63-victim720" type="surname" value="Edwards"></interp>
                     <interp inst="t18121202-63-victim720" type="given" value="John"></interp>
