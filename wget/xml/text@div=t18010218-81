             and 
               
                  <persName id="t18010218-81-defend515" type="defendantName">
                     THOMAS 
                     FERGUSON
                  <interp inst="t18010218-81-defend515" type="surname" value="FERGUSON"></interp>
                     <interp inst="t18010218-81-defend515" type="given" value="THOMAS"></interp>
                     <interp inst="t18010218-81-defend515" type="gender" value="male"></interp>
                  </persName>
               
             were indicted for <rs id="t18010218-81-off441" type="offenceDescription">
                     <interp inst="t18010218-81-off441" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18010218-81-off441" type="offenceSubcategory" value="grandLarceny"></interp>
               feloniously stealing, on the <rs id="t18010218-81-cd442" type="crimeDate">19th of January</rs>
                     <join result="offenceCrimeDate" targOrder="Y" targets="t18010218-81-off441 t18010218-81-cd442"></join>, a coil of rope, value 39s.
            </rs> the property of 
               <persName id="t18010218-81-victim516" type="victimName">
                  James and 
                        
                           <persName id="t18010218-81-victim518" type="victimName">
                              Edward 
                              Ogle
                           <interp inst="t18010218-81-victim518" type="surname" value="Ogle"></interp>
                        <interp inst="t18010218-81-victim518" type="given" value="Edward"></interp>
