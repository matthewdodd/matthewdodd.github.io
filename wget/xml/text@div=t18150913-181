                     <interp inst="t18150913-181-off1018" type="offenceSubcategory" value="highwayRobbery"></interp>
               feloniously assaulting 
                     
                        <persName id="t18150913-181-victim1614" type="victimName">
                           William 
                           Jeffard
                        <interp inst="t18150913-181-victim1614" type="surname" value="Jeffard"></interp>
                        <interp inst="t18150913-181-victim1614" type="given" value="William"></interp>
