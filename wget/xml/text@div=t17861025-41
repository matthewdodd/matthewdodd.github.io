                     <interp inst="t17861025-41-person587" type="gender" value="male"></interp>
                  </persName>
            , 
               <persName id="t17861025-41-person588">
                  JOSEPH
                   THOMPSON
               <interp inst="t17861025-41-person588" type="surname" value="THOMPSON"></interp>
