                     <interp inst="t17800628-4-verdict20" type="verdictCategory" value="guilty"></interp>
                     <interp inst="t17800628-4-verdict20" type="verdictSubcategory" value="withRecommendation"></interp>
               GUILTY
            </rs> (<rs id="t17800628-4-punish21" type="punishmentDescription">
