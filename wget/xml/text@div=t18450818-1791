                     <hi rend="largeCaps">ROBERT WHITBY</hi>, <hi rend="italic">alias<rs id="t18450818-alias-3" type="alias">
                           <join result="nameAlias" targOrder="Y" targets="def1-1791-18450818 t18450818-alias-3"></join> John Rock</rs>
