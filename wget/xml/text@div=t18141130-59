                        <interp inst="t18141130-59-victim668" type="gender" value="male"></interp>
                     </persName>
                     
                   and 
                     
                        <persName id="t18141130-59-victim670" type="victimName">
                           Peter 
                           Spencer
                        <interp inst="t18141130-59-victim670" type="surname" value="Spencer"></interp>
