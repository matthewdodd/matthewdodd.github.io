            . And 
               <persName id="t18130602-53-defend379" type="defendantName">
                  
                     ROBERT 
                     BRADY
                  , alias <rs id="t18130602-53-alias-1" type="alias">
                        <join result="nameAlias" targOrder="Y" targets="t18130602-53-defend379 t18130602-53-alias-1"></join>HAZARD</rs>
                     <interp inst="t18130602-53-defend379" type="surname" value="BRADY"></interp>
