                        <interp inst="t18610408-401-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18610408-401-punishment-110" type="punishmentDescription">
                        <interp inst="t18610408-401-punishment-110" type="punishmentCategory" value="imprison"></interp>
