                  <hi rend="smallCaps">
                     <rs id="t18531024-1087-verdict-1" type="verdictDescription">
                        <interp inst="t18531024-1087-verdict-1" type="verdictCategory" value="guilty"></interp>
                        <interp inst="t18531024-1087-verdict-1" type="verdictSubcategory" value="pleadedGuilty"></interp>GUILTY</rs>
