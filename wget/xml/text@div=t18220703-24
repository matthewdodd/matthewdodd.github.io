               <p>
            
                  <persName id="t18220703-24-person259">
                  HENRY 
                  LIPMAN
               <interp inst="t18220703-24-person259" type="surname" value="LIPMAN"></interp>
                     <interp inst="t18220703-24-person259" type="given" value="HENRY"></interp>
                     <interp inst="t18220703-24-person259" type="gender" value="male"></interp>
