                  <persName id="t18211205-76-person919">
                  WILLIAM 
                  DOWNING
               <interp inst="t18211205-76-person919" type="surname" value="DOWNING"></interp>
                     <interp inst="t18211205-76-person919" type="given" value="WILLIAM"></interp>
                     <interp inst="t18211205-76-person919" type="gender" value="male"></interp>
