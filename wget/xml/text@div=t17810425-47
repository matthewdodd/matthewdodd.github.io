               <p>242. 
               
                  <persName id="t17810425-47-defend480" type="defendantName">
                     THOMAS 
                     NORMANSEL
                  <interp inst="t17810425-47-defend480" type="surname" value="NORMANSEL"></interp>
                     <interp inst="t17810425-47-defend480" type="given" value="THOMAS"></interp>
