                     <rs id="t18490101-386-verdict-1" type="verdictDescription">
                        <interp inst="t18490101-386-verdict-1" type="verdictCategory" value="guilty"></interp>
                        <interp inst="t18490101-386-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>. Aged 51.—<hi rend="italic">
                     <rs id="t18490101-386-punishment-23" type="punishmentDescription">
                        <interp inst="t18490101-386-punishment-23" type="punishmentCategory" value="imprison"></interp>
