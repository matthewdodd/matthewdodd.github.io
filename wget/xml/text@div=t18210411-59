                        <join result="offenceVictim" targOrder="Y" targets="t18210411-59-off355 t18210411-59-victim630"></join>
                     </persName>
                  , in the dwelling-house of 
                     <persName id="t18210411-59-person631">
                        Hannah 
                        Spencer
                     <interp inst="t18210411-59-person631" type="surname" value="Spencer"></interp>
