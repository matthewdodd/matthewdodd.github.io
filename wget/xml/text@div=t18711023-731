               <p>
                  <hi rend="smallCaps">
                     <persName id="t18711023-name-134" type="witnessName">
                        <interp inst="t18711023-name-134" type="gender" value="indeterminate"></interp>
                        <interp inst="t18711023-name-134" type="surname" value="COLE"></interp>
                        <interp inst="t18711023-name-134" type="given" value="THORNE"></interp>MR. THORNE COLE</persName>
