                     <interp inst="t18341205-249-offence-1" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18341205-249-offence-1" type="offenceSubcategory" value="stealingFromMaster"></interp> for stealing, on the <rs id="t18341205-cd-45" type="crimeDate">
                        <join result="offenceCrimeDate" targOrder="Y" targets="t18341205-249-offence-1 t18341205-cd-45"></join>13th of De<lb></lb>cember</rs>, 1 opera-glass, value 10<hi rend="italic">s</hi>.; I opera-glass case, value 1<hi rend="italic">s</hi>.; 2 shawls, value 3<hi rend="italic">s</hi>.; 6 yards of flannel, value 5<hi rend="italic">s</hi>.; 12 yards of silk, value 30<hi rend="italic">s</hi>.; 6 spoons, value 6<hi rend="italic">d</hi>.; 1 pair of boots, value 2<hi rend="italic">s</hi>.; 1 coat, value 10<hi rend="italic">s</hi>.; 1 Bible, value 2<hi rend="italic">s</hi>.; 1 pair of ear-rings, value 5<hi rend="italic">s</hi>.; 7 yards of lace, value 2<hi rend="italic">s</hi>.; and 1 handkerchief, value 2<hi rend="italic">s</hi>.; the goods of <persName id="t18341205-name-363" type="victimName">
                        <interp inst="t18341205-name-363" type="gender" value="male"></interp>
                        <interp inst="t18341205-name-363" type="surname" value="KELDAY"></interp>
