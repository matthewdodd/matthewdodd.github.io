               <p>638. 
               
                  <persName id="t18030914-47-defend418" type="defendantName">
                     THOMAS 
                     WARD
                  <interp inst="t18030914-47-defend418" type="surname" value="WARD"></interp>
                     <interp inst="t18030914-47-defend418" type="given" value="THOMAS"></interp>
