                        <interp inst="t18771210-127-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>—<hi rend="italic">
                     <rs id="t18771210-127-punishment-47" type="punishmentDescription">
