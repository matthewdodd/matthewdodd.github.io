                        <interp inst="t18460202-647-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18460202-647-punishment-167" type="punishmentDescription">
                        <interp inst="t18460202-647-punishment-167" type="punishmentCategory" value="imprison"></interp>
