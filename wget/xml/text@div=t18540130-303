                  <hi rend="largeCaps">STONE</hi> 
                  <hi rend="smallCaps">
                     <rs id="t18540130-303-verdict-1" type="verdictDescription">
                        <interp inst="t18540130-303-verdict-1" type="verdictCategory" value="guilty"></interp>
                        <interp inst="t18540130-303-verdict-1" type="verdictSubcategory" value="pleadedGuilty"></interp>PLEADED GUILTY</rs>
                  </hi>. Aged 26.—<hi rend="italic">
                     <rs id="t18540130-303-punishment-87" type="punishmentDescription">
                        <interp inst="t18540130-303-punishment-87" type="punishmentCategory" value="imprison"></interp>
