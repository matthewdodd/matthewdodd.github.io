                  </persName>
               
             and 
               <persName id="t18170115-123-victim917" type="victimName">
                  William 
                  Pool
               <interp inst="t18170115-123-victim917" type="surname" value="Pool"></interp>
                     <interp inst="t18170115-123-victim917" type="given" value="William"></interp>
                     <interp inst="t18170115-123-victim917" type="gender" value="male"></interp>
