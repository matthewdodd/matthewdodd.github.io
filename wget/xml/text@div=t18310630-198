               <p>
            
               
                  <persName id="t18310630-198-victim1493" type="victimName">
                     GEORGE HENRY 
                     HAINES
                  <interp inst="t18310630-198-victim1493" type="surname" value="HAINES"></interp>
                     <interp inst="t18310630-198-victim1493" type="given" value="GEORGE HENRY"></interp>
