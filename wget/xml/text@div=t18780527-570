                        <interp inst="t18780527-570-verdict-1" type="verdictSubcategory" value=""></interp>NOT GUILTY</rs>
                  </hi>.<hi rend="largeCaps">SMITH</hi>—<hi rend="smallCaps">
                     <rs id="t18780527-570-verdict-2" type="verdictDescription">
                        <interp inst="t18780527-570-verdict-2" type="verdictCategory" value="guilty"></interp>
                        <interp inst="t18780527-570-verdict-2" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.**—<hi rend="italic">
                     <rs id="t18780527-570-punishment-24" type="punishmentDescription">
                        <interp inst="t18780527-570-punishment-24" type="punishmentCategory" value="imprison"></interp>
