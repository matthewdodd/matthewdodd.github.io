                  <persName id="t18141026-154-person1306">
                  JOHN 
                  IRGRAM
               <interp inst="t18141026-154-person1306" type="surname" value="IRGRAM"></interp>
                     <interp inst="t18141026-154-person1306" type="given" value="JOHN"></interp>
                     <interp inst="t18141026-154-person1306" type="gender" value="male"></interp>
