               <p>
            
               
                  <persName id="t18280911-346-victim1874" type="victimName">
                     JOHN 
                     MANNING
                  <interp inst="t18280911-346-victim1874" type="surname" value="MANNING"></interp>
                     <interp inst="t18280911-346-victim1874" type="given" value="JOHN"></interp>
