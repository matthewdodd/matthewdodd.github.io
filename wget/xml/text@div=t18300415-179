                  <persName id="t18300415-179-person1588">
                  ELIZABETH 
                  LEVERTON
               <interp inst="t18300415-179-person1588" type="surname" value="LEVERTON"></interp>
                     <interp inst="t18300415-179-person1588" type="given" value="ELIZABETH"></interp>
