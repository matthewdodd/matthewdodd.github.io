                  <persName id="t18120115-104-person1014">
                  JOHN 
                  STOW
               <interp inst="t18120115-104-person1014" type="surname" value="STOW"></interp>
                     <interp inst="t18120115-104-person1014" type="given" value="JOHN"></interp>
                     <interp inst="t18120115-104-person1014" type="gender" value="male"></interp>
