               <p>1604. 
               
                  <persName id="t18290910-72-defend753" type="defendantName">
                     STEPHEN 
                     WINTER
                  <interp inst="t18290910-72-defend753" type="surname" value="WINTER"></interp>
                     <interp inst="t18290910-72-defend753" type="given" value="STEPHEN"></interp>
