                  </persName>
               
             and 
               
                  <persName id="t18290611-274-defend1981" type="defendantName">
                     HENRY JUBILEE 
                     CONWAY
                  <interp inst="t18290611-274-defend1981" type="surname" value="CONWAY"></interp>
                     <interp inst="t18290611-274-defend1981" type="given" value="HENRY JUBILEE"></interp>
