                        <interp inst="t18540703-849-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18540703-849-punishment-41" type="punishmentDescription">
                        <interp inst="t18540703-849-punishment-41" type="punishmentCategory" value="imprison"></interp>
