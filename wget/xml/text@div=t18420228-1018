                     <hi rend="largeCaps">ELIZABETH ANN FERNLEY</hi>
                  </persName>
                  <rs id="t18420228-1018-offence-2" type="offenceDescription">
                     <interp inst="t18420228-1018-offence-2" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18420228-1018-offence-2" type="offenceSubcategory" value="receiving"></interp>, for feloniously receiving the same, knowing them to be stolen: and </rs>
                  <persName id="def6-1018-18420228" type="defendantName">
                     <interp inst="def6-1018-18420228" type="gender" value="female"></interp>
                     <interp inst="def6-1018-18420228" type="surname" value="DE SOIZA"></interp>
