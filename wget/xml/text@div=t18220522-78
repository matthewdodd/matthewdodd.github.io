                  <persName id="t18220522-78-person745">
                  JOSEPH 
                  CLARK
               <interp inst="t18220522-78-person745" type="surname" value="CLARK"></interp>
                     <interp inst="t18220522-78-person745" type="given" value="JOSEPH"></interp>
