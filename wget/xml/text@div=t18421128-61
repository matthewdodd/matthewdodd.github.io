                        <interp inst="def3-61-18421128" type="given" value="GEORGE NATHANIEL"></interp> GEORGE NA<lb></lb>THANIEL STEPHENS</persName>,<persName id="def4-61-18421128" type="defendantName">
                        <interp inst="def4-61-18421128" type="gender" value="male"></interp>
