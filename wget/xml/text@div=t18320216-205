                  <persName id="t18320216-205-person1707">
                  MARY 
                  DALE
               <interp inst="t18320216-205-person1707" type="surname" value="DALE"></interp>
                     <interp inst="t18320216-205-person1707" type="given" value="MARY"></interp>
                     <interp inst="t18320216-205-person1707" type="gender" value="female"></interp>
