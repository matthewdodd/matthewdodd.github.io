                     <hi rend="largeCaps">THOMAS HENRY LEIGH TOLER</hi> (52)</persName> and <persName id="def2-494-18790428" type="defendantName">
                     <interp inst="def2-494-18790428" type="gender" value="male"></interp>
                     <interp inst="def2-494-18790428" type="age" value="34"></interp>
                     <interp inst="def2-494-18790428" type="surname" value="BARRETT"></interp>
                     <interp inst="def2-494-18790428" type="given" value="WILLIAM JOHN GENTLE"></interp>
                     <hi rend="largeCaps">WILLIAM JOHN GENTLE BARRETT</hi> (34)</persName>
                  <rs id="t18790428-494-offence-1" type="offenceDescription">
                     <interp inst="t18790428-494-offence-1" type="offenceCategory" value="deception"></interp>
                     <interp inst="t18790428-494-offence-1" type="offenceSubcategory" value="fraud"></interp>, Unlawfully obtaining 3<hi rend="italic">l</hi>. 5<hi rend="italic">s</hi>. and 5<hi rend="italic">l</hi>. from <persName id="t18790428-name-295" type="victimName">
                        <interp inst="t18790428-name-295" type="gender" value="female"></interp>
                        <interp inst="t18790428-name-295" type="surname" value="REYNOLDS"></interp>
