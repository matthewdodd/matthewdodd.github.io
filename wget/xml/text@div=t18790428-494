                        <join result="offenceVictim" targOrder="Y" targets="t18790428-494-offence-1 t18790428-name-295"></join>Elizabeth Reynolds</persName>, 3<hi rend="italic">l</hi>. 13<hi rend="italic">s</hi>. 6<hi rend="italic">d</hi>. from <persName id="t18790428-name-296" type="victimName">
                        <interp inst="t18790428-name-296" type="gender" value="male"></interp>
                        <interp inst="t18790428-name-296" type="surname" value="TEASDALE"></interp>
