                     <interp inst="t18440506-1355-offence-1" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18440506-1355-offence-1" type="offenceSubcategory" value="simpleLarceny"></interp> for stealing 1 hatchet, value 1<hi rend="italic">s</hi>.; 1 pistol, 2<hi rend="italic">s</hi>. 6<hi rend="italic">d</hi>.; and 1 powder-flask, 1<hi rend="italic">s</hi>.; the goods of <persName id="t18440506-name-130" type="victimName">
                        <interp inst="t18440506-name-130" type="gender" value="male"></interp>
                        <interp inst="t18440506-name-130" type="surname" value="MERRICK"></interp>
