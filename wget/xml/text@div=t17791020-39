                     </persName>
                  , 
                     <persName id="t17791020-39-person457">
                        William
                         Bishop
                     <interp inst="t17791020-39-person457" type="surname" value="Bishop"></interp>
                        <interp inst="t17791020-39-person457" type="given" value="William"></interp>
                        <interp inst="t17791020-39-person457" type="gender" value="male"></interp>
                     </persName>
                  , and 
