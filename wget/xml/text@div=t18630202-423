                        <interp inst="t18630202-423-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18630202-423-punishment-77" type="punishmentDescription">
                        <interp inst="t18630202-423-punishment-77" type="punishmentCategory" value="imprison"></interp>
