               <p>I am a <rs id="t17760417-42-viclabel233" type="occupation">linen draper</rs>
                  <join result="persNameOccupation" targOrder="Y" targets="t17760417-42-victim383 t17760417-42-viclabel233"></join> in <placeName id="t17760417-42-crimeloc234">Oxford-street</placeName>
