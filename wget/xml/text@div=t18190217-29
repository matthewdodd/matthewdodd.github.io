                  </persName>
            , dated 15th of August, 1818, directed to 
               <persName id="t18190217-29-person322">
                  Henry 
                  Revell
               <interp inst="t18190217-29-person322" type="surname" value="Revell"></interp>
                     <interp inst="t18190217-29-person322" type="given" value="Henry"></interp>
                     <interp inst="t18190217-29-person322" type="gender" value="male"></interp>
                  </persName>
             Reynolds, 
               <persName id="t18190217-29-person323">
                  Robert 
                  Joseph Chambers
               <interp inst="t18190217-29-person323" type="surname" value="Joseph Chambers"></interp>
                     <interp inst="t18190217-29-person323" type="given" value="Robert"></interp>
                     <interp inst="t18190217-29-person323" type="gender" value="male"></interp>
                  </persName>
            , 
               <persName id="t18190217-29-person324">
                  William 
                  Conant
               <interp inst="t18190217-29-person324" type="surname" value="Conant"></interp>
                     <interp inst="t18190217-29-person324" type="given" value="William"></interp>
