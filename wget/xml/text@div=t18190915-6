                     <interp inst="t18190915-6-off30" type="offenceCategory" value="violentTheft"></interp>
                     <interp inst="t18190915-6-off30" type="offenceSubcategory" value="highwayRobbery"></interp>
               feloniously assaulting 
                     
                        <persName id="t18190915-6-victim127" type="victimName">
                           Joseph 
                           Burn
                        <interp inst="t18190915-6-victim127" type="surname" value="Burn"></interp>
                        <interp inst="t18190915-6-victim127" type="given" value="Joseph"></interp>
