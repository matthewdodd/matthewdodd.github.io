                  <rs id="t18510303-722-offence-1" type="offenceDescription">
                     <interp inst="t18510303-722-offence-1" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18510303-722-offence-1" type="offenceSubcategory" value="embezzlement"></interp>, embezzling 3<hi rend="italic">l</hi>. 10<hi rend="italic">s</hi>.; of <persName id="t18510303-name-274" type="victimName">
                        <interp inst="t18510303-name-274" type="gender" value="male"></interp>
                        <interp inst="t18510303-name-274" type="surname" value="WALLACE"></interp>
