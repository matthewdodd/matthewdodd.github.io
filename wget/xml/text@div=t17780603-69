                     <interp inst="t17780603-69-defend535" type="gender" value="male"></interp>
                  </persName>
               
             and ELIZABETH, the <rs id="t17780603-69-deflabel329" type="occupation">wife</rs>
                  <join result="persNameOccupation" targOrder="Y" targets="t17780603-69-defend542 t17780603-69-deflabel329"></join> of 
               <persName id="t17780603-69-person536">
                  Isaac
                   Pigott
