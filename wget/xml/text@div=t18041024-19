               <p>534. 
               
                  <persName id="t18041024-19-defend190" type="defendantName">
                     JOHN 
                     RIPPINGHAM
                  <interp inst="t18041024-19-defend190" type="surname" value="RIPPINGHAM"></interp>
                     <interp inst="t18041024-19-defend190" type="given" value="JOHN"></interp>
                     <interp inst="t18041024-19-defend190" type="gender" value="male"></interp>
