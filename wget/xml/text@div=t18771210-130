                     <interp inst="t18771210-130-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>
                     <hi rend="smallCaps">GUILTY</hi> 
                     <hi rend="italic">
on the Second and Third Counts only—</hi>
                  </rs>
