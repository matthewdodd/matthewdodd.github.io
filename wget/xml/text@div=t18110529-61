               <p>440. 
               
                  <persName id="t18110529-61-defend514" type="defendantName">
                     THOMAS 
                     SOMERSET
                  <interp inst="t18110529-61-defend514" type="surname" value="SOMERSET"></interp>
                     <interp inst="t18110529-61-defend514" type="given" value="THOMAS"></interp>
