               <join result="criminalCharge" id="t18650227-283-charge-2" targOrder="Y" targets="def2-283-18650227 t18650227-283-offence-1 t18650227-283-verdict-3"></join>
               <join result="criminalCharge" id="t18650227-283-charge-3" targOrder="Y" targets="def3-283-18650227 t18650227-283-offence-1 t18650227-283-verdict-2"></join>
