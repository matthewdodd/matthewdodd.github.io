            , <rs id="t18110710-56-viclabel337" type="occupation">Jun.</rs>
                  <join result="persNameOccupation" targOrder="Y" targets="t18110710-56-victim533 t18110710-56-viclabel337"></join> and 
               
                  <persName id="t18110710-56-victim535" type="victimName">
                     Edward 
                     Spooner
