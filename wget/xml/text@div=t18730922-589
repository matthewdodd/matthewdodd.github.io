                        <interp inst="t18730922-589-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18730922-589-punishment-16" type="punishmentDescription">
