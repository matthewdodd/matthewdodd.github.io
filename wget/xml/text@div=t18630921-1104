               <p>
                  <hi rend="largeCaps">HENRY DUGARD</hi> 
                  <hi rend="smallCaps">
                     <rs id="t18630921-1104-verdict-1" type="verdictDescription">
                        <interp inst="t18630921-1104-verdict-1" type="verdictCategory" value="guilty"></interp>
                        <interp inst="t18630921-1104-verdict-1" type="verdictSubcategory" value="pleadedGuilty"></interp>PLEADED GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18630921-1104-punishment-22" type="punishmentDescription">
                        <interp inst="t18630921-1104-punishment-22" type="punishmentCategory" value="imprison"></interp>
