                  <join result="persNameOccupation" targOrder="Y" targets="t18211205-170-victim1742 t18211205-170-viclabel1049"></join>, <placeName id="t18211205-170-crimeloc1050">High-street, Clerkenwell</placeName>
                  <interp inst="t18211205-170-crimeloc1050" type="placeName" value="High-street, Clerkenwell"></interp>
