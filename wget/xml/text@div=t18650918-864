                     <rs id="t18650918-864-verdict-1" type="verdictDescription">
                        <interp inst="t18650918-864-verdict-1" type="verdictCategory" value="guilty"></interp>
                        <interp inst="t18650918-864-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.**—<hi rend="italic">
                     <rs id="t18650918-864-punishment-35" type="punishmentDescription">
                        <interp inst="t18650918-864-punishment-35" type="punishmentCategory" value="imprison"></interp>
