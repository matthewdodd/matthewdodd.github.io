                     <interp inst="t18220911-259-off1368" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18220911-259-off1368" type="offenceSubcategory" value="grandLarceny"></interp>
               stealing, on the <rs id="t18220911-259-cd1369" type="crimeDate">2d of September</rs>
                     <join result="offenceCrimeDate" targOrder="Y" targets="t18220911-259-off1368 t18220911-259-cd1369"></join>, one counterpane, value 3 s.
            </rs>, the goods of 
               
                  <persName id="t18220911-259-victim2396" type="victimName">
                     Alice 
                     Pitcher
                  <interp inst="t18220911-259-victim2396" type="surname" value="Pitcher"></interp>
                     <interp inst="t18220911-259-victim2396" type="given" value="Alice"></interp>
