                        <interp inst="t18740504-353-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>—<hi rend="italic">
                     <rs id="t18740504-353-punishment-21" type="punishmentDescription">
                        <interp inst="t18740504-353-punishment-21" type="punishmentCategory" value="imprison"></interp>
