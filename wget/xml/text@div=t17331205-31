                     <interp inst="t17331205-31-defend247" type="gender" value="male"></interp>
                  </persName>
            , was indicted for <rs id="t17331205-31-off141" type="offenceDescription">
                     <interp inst="t17331205-31-off141" type="offenceCategory" value="violentTheft"></interp>
                     <interp inst="t17331205-31-off141" type="offenceSubcategory" value="highwayRobbery"></interp>
               assaulting 
                     
                        <persName id="t17331205-31-victim249" type="victimName">
