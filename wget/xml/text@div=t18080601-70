               <p>
            
                  <persName id="t18080601-70-person593">
                  MARY 
                  SMITH
               <interp inst="t18080601-70-person593" type="surname" value="SMITH"></interp>
                     <interp inst="t18080601-70-person593" type="given" value="MARY"></interp>
                     <interp inst="t18080601-70-person593" type="gender" value="female"></interp>
