               <p>508. 
               
                  <persName id="t18220220-185-defend1685" type="defendantName">
                     MARY 
                     GEARE
                  <interp inst="t18220220-185-defend1685" type="surname" value="GEARE"></interp>
                     <interp inst="t18220220-185-defend1685" type="given" value="MARY"></interp>
