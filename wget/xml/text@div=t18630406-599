               <p>
                  <hi rend="largeCaps">GRIFFITHS</hi> 
                  <hi rend="smallCaps">
                     <rs id="t18630406-599-verdict-1" type="verdictDescription">
                        <interp inst="t18630406-599-verdict-1" type="verdictCategory" value="guilty"></interp>
                        <interp inst="t18630406-599-verdict-1" type="verdictSubcategory" value="pleadedGuilty"></interp>PLEADED GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18630406-599-punishment-52" type="punishmentDescription">
                        <interp inst="t18630406-599-punishment-52" type="punishmentCategory" value="imprison"></interp>
