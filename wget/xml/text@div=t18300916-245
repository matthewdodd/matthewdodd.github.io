               <p>
            
                  <persName id="t18300916-245-person2017">
                  JOHN 
                  GEORGE MICHELE
               <interp inst="t18300916-245-person2017" type="surname" value="GEORGE MICHELE"></interp>
                     <interp inst="t18300916-245-person2017" type="given" value="JOHN"></interp>
                     <interp inst="t18300916-245-person2017" type="gender" value="male"></interp>
