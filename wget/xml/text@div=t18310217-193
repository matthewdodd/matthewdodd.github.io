               <p>
            
                  <persName id="t18310217-193-person1870">
                  JOHN 
                  WHINERY SPENCER
               <interp inst="t18310217-193-person1870" type="surname" value="WHINERY SPENCER"></interp>
                     <interp inst="t18310217-193-person1870" type="given" value="JOHN"></interp>
                     <interp inst="t18310217-193-person1870" type="gender" value="male"></interp>
