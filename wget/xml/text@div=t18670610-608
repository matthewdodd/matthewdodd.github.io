                        <interp inst="t18670610-608-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.**—<hi rend="italic">
                     <rs id="t18670610-608-punishment-73" type="punishmentDescription">
