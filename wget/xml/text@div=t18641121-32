               <join result="criminalCharge" id="t18641121-32-charge-4" targOrder="Y" targets="def2-32-18641121 t18641121-32-offence-3 t18641121-32-verdict-2"></join>
               <join result="criminalCharge" id="t18641121-32-charge-5" targOrder="Y" targets="def2-32-18641121 t18641121-32-offence-4 t18641121-32-verdict-2"></join>
