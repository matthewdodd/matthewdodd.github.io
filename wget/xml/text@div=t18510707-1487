                     <interp inst="t18510707-1487-verdict-1" type="verdictCategory" value="guilty"></interp>
                     <interp inst="t18510707-1487-verdict-1" type="verdictSubcategory" value="lesserOffence"></interp>
                     <hi rend="smallCaps">GUILTY</hi> 
                     <hi rend="italic">of an Assault</hi>.</rs> Aged 18.—<hi rend="italic">
                     <rs id="t18510707-1487-punishment-53" type="punishmentDescription">
                        <interp inst="t18510707-1487-punishment-53" type="punishmentCategory" value="imprison"></interp>
