                        <interp inst="t18800913-532-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18800913-532-punishment-52" type="punishmentDescription">
                        <interp inst="t18800913-532-punishment-52" type="punishmentCategory" value="imprison"></interp>
