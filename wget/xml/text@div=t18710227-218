                     <hi rend="largeCaps">EFFIE WATSON</hi> (23)</persName>
                  <rs id="t18710227-218-offence-1" type="offenceDescription">
                     <interp inst="t18710227-218-offence-1" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18710227-218-offence-1" type="offenceSubcategory" value="pocketpicking"></interp>, Stealing 18<hi rend="italic">s</hi>. 6<hi rend="italic">d</hi>. of <persName id="t18710227-name-155" type="victimName">
                        <interp inst="t18710227-name-155" type="gender" value="male"></interp>
                        <interp inst="t18710227-name-155" type="surname" value="CHURCH"></interp>
                        <interp inst="t18710227-name-155" type="given" value="CHRISTOPHER JAMES"></interp>
