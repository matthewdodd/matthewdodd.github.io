               <p>
                  <xptr type="pageFacsimile" doc="177612040003"></xptr>
            
                  <persName id="t17761204-1-person52">
                  JOHN
                   FITZPATRICK
               <interp inst="t17761204-1-person52" type="surname" value="FITZPATRICK"></interp>
