                  <persName id="t18311201-190-person1526">
                  ALEXANDER 
                  WILLIAM STEWART
               <interp inst="t18311201-190-person1526" type="surname" value="WILLIAM STEWART"></interp>
                     <interp inst="t18311201-190-person1526" type="given" value="ALEXANDER"></interp>
