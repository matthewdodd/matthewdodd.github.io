                  <persName id="t18110710-78-person754">
                  WILLIAM 
                  BARROW
               <interp inst="t18110710-78-person754" type="surname" value="BARROW"></interp>
                     <interp inst="t18110710-78-person754" type="given" value="WILLIAM"></interp>
