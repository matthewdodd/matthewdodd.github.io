                        <interp inst="t18591024-970-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18591024-970-punishment-75" type="punishmentDescription">
                        <interp inst="t18591024-970-punishment-75" type="punishmentCategory" value="imprison"></interp>
