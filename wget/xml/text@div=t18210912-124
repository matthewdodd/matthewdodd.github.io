               <p>
            
                  <persName id="t18210912-124-person1354">
                  THOMAS 
                  DUNCAN
               <interp inst="t18210912-124-person1354" type="surname" value="DUNCAN"></interp>
                     <interp inst="t18210912-124-person1354" type="given" value="THOMAS"></interp>
                     <interp inst="t18210912-124-person1354" type="gender" value="male"></interp>
