                        <interp inst="t18710501-367-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18710501-367-punishment-9" type="punishmentDescription">
                        <interp inst="t18710501-367-punishment-9" type="punishmentCategory" value="imprison"></interp>
