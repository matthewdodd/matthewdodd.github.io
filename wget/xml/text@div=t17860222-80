                  ANN
                   PUGH
               <interp inst="t17860222-80-person851" type="surname" value="PUGH"></interp>
                     <interp inst="t17860222-80-person851" type="given" value="ANN"></interp>
                     <interp inst="t17860222-80-person851" type="gender" value="female"></interp>
