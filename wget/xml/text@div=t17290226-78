                  <persName id="t17290226-78-defend433" type="defendantName">
                     Katherine 
                      Geahogan , alias <rs id="t17290226-78-alias-7" type="alias">
                        <join result="nameAlias" targOrder="Y" targets="t17290226-78-defend433 t17290226-78-alias-7"></join>Gorgon</rs>, alias <rs id="t17290226-78-alias-8" type="alias">
