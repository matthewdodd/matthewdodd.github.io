                  , <rs id="t18211205-52-viclabel310" type="occupation">Esq.</rs>
                     <join result="persNameOccupation" targOrder="Y" targets="t18211205-52-victim633 t18211205-52-viclabel310"></join>, at <placeName id="t18211205-52-crimeloc311">St. George, Hanover-square</placeName>
                     <interp inst="t18211205-52-crimeloc311" type="placeName" value="St. George, Hanover-square"></interp>
                     <interp inst="t18211205-52-crimeloc311" type="type" value="crimeLocation"></interp>
                     <join result="offencePlace" targOrder="Y" targets="t18211205-52-off309 t18211205-52-crimeloc311"></join>
