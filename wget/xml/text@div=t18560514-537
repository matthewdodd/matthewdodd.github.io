               <p>
                  <hi rend="largeCaps">JONES</hi> 
                  <hi rend="smallCaps">
                     <rs id="t18560514-537-verdict-1" type="verdictDescription">
                        <interp inst="t18560514-537-verdict-1" type="verdictCategory" value="guilty"></interp>
                        <interp inst="t18560514-537-verdict-1" type="verdictSubcategory" value="pleadedGuilty"></interp>PLEADED GUILTY</rs>
                  </hi>. Aged 18.—<hi rend="italic">
                     <rs id="t18560514-537-punishment-45" type="punishmentDescription">
                        <interp inst="t18560514-537-punishment-45" type="punishmentCategory" value="imprison"></interp>
