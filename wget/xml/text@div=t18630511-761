                        <interp inst="t18630511-761-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18630511-761-punishment-108" type="punishmentDescription">
                        <interp inst="t18630511-761-punishment-108" type="punishmentCategory" value="imprison"></interp>
