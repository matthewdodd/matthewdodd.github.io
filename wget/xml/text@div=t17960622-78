                  <persName id="t17960622-78-person856">
                  JOHN
                   COOK
               <interp inst="t17960622-78-person856" type="surname" value="COOK"></interp>
                     <interp inst="t17960622-78-person856" type="given" value="JOHN"></interp>
                     <interp inst="t17960622-78-person856" type="gender" value="male"></interp>
