                        <interp inst="t18241202-50-victim347" type="gender" value="male"></interp>
                     </persName>
                   and 
                     <persName id="t18241202-50-victim348" type="victimName">
                        Thomas 
                        Shepparson
                     <interp inst="t18241202-50-victim348" type="surname" value="Shepparson"></interp>
                        <interp inst="t18241202-50-victim348" type="given" value="Thomas"></interp>
                        <interp inst="t18241202-50-victim348" type="gender" value="male"></interp>
                     </persName>
                  , his masters
            </rs>; and 
               <persName id="t18241202-50-defend349" type="defendantName">
                  JOHN 
                  CODAY
               <interp inst="t18241202-50-defend349" type="surname" value="CODAY"></interp>
                     <interp inst="t18241202-50-defend349" type="given" value="JOHN"></interp>
                     <interp inst="t18241202-50-defend349" type="gender" value="male"></interp>
