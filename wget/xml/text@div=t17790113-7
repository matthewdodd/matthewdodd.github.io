             and 
               
                  <persName id="t17790113-7-defend104" type="defendantName">
                     JAMES
                      COWEN
                  <interp inst="t17790113-7-defend104" type="surname" value="COWEN"></interp>
                     <interp inst="t17790113-7-defend104" type="given" value="JAMES"></interp>
                     <interp inst="t17790113-7-defend104" type="gender" value="male"></interp>
