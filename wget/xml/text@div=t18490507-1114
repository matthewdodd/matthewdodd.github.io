                  <hi rend="smallCaps">
                     <persName id="t18490507-name-324" type="witnessName">
                        <interp inst="t18490507-name-324" type="gender" value="male"></interp>
                        <interp inst="t18490507-name-324" type="surname" value="SLATFORD"></interp>
