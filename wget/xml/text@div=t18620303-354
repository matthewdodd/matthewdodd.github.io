                        <interp inst="t18620303-354-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18620303-354-punishment-85" type="punishmentDescription">
                        <interp inst="t18620303-354-punishment-85" type="punishmentCategory" value="imprison"></interp>
