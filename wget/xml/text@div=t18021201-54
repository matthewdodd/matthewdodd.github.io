               <p>
            
                  <persName id="t18021201-54-person383">
                  SAMUEL 
                  TROUGHTON
               <interp inst="t18021201-54-person383" type="surname" value="TROUGHTON"></interp>
                     <interp inst="t18021201-54-person383" type="given" value="SAMUEL"></interp>
                     <interp inst="t18021201-54-person383" type="gender" value="male"></interp>
