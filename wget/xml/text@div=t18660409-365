                     <hi rend="largeCaps">WILLIAM LOTT</hi> (17)</persName>, and <persName id="def2-365-18660409" type="defendantName">
                     <interp inst="def2-365-18660409" type="gender" value="male"></interp>
                     <interp inst="def2-365-18660409" type="age" value="18"></interp>
