               <p>570. 
               
                  <persName id="t18070916-34-defend347" type="defendantName">
                     JAMES 
                     ARNAUT
                  <interp inst="t18070916-34-defend347" type="surname" value="ARNAUT"></interp>
                     <interp inst="t18070916-34-defend347" type="given" value="JAMES"></interp>
