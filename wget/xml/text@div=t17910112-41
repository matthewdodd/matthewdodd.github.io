             and 
               
                  <persName id="t17910112-41-defend442" type="defendantName">
                     MARY 
                     VALLENS
                  <interp inst="t17910112-41-defend442" type="surname" value="VALLENS"></interp>
                     <interp inst="t17910112-41-defend442" type="given" value="MARY"></interp>
                     <interp inst="t17910112-41-defend442" type="gender" value="female"></interp>
