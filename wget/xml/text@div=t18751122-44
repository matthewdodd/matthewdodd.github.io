                        <interp inst="t18751122-44-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>—<hi rend="italic">
                     <rs id="t18751122-44-punishment-43" type="punishmentDescription">
