            , and 
               <persName id="t18091101-81-defend671" type="defendantName">
                  
                     ROBERT 
                     SHIPLEY
                  , <rs id="t18091101-81-deflabel493" type="occupation">junior</rs>
                     <join result="persNameOccupation" targOrder="Y" targets="t18091101-81-defend671 t18091101-81-deflabel493"></join>
