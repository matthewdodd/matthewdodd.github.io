               <p>1831. 
               <persName id="t18280911-277-defend1533" type="defendantName">
                  ROBERT ALEXANDER 
                  MORTIMER
               <interp inst="t18280911-277-defend1533" type="surname" value="MORTIMER"></interp>
                     <interp inst="t18280911-277-defend1533" type="given" value="ROBERT ALEXANDER"></interp>
