               <p>696 
               
                  <persName id="t18090920-69-defend667" type="defendantName">
                     WILLIAM EAKINS 
                     DYER
                  <interp inst="t18090920-69-defend667" type="surname" value="DYER"></interp>
                     <interp inst="t18090920-69-defend667" type="given" value="WILLIAM EAKINS"></interp>
