                  <hi rend="largeCaps">SIMPSON</hi> 
                  <hi rend="smallCaps">
                     <rs id="t18760403-287-verdict-1" type="verdictDescription">
                        <interp inst="t18760403-287-verdict-1" type="verdictCategory" value="guilty"></interp>
