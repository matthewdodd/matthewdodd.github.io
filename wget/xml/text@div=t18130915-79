             and 
               
                  <persName id="t18130915-79-defend763" type="defendantName">
                     MARY 
                     HARVEY
                  <interp inst="t18130915-79-defend763" type="surname" value="HARVEY"></interp>
                     <interp inst="t18130915-79-defend763" type="given" value="MARY"></interp>
                     <interp inst="t18130915-79-defend763" type="gender" value="female"></interp>
                  </persName>
               
             were indicted for <rs id="t18130915-79-off461" type="offenceDescription">
                     <interp inst="t18130915-79-off461" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18130915-79-off461" type="offenceSubcategory" value="grandLarceny"></interp>
               feloniously stealing, on the <rs id="t18130915-79-cd462" type="crimeDate">23rd of August</rs>
                     <join result="offenceCrimeDate" targOrder="Y" targets="t18130915-79-off461 t18130915-79-cd462"></join>
                     <join result="offenceCrimeDate" targOrder="Y" targets="t18130915-79-off463 t18130915-79-cd462"></join>, a man's hat, value 5 s. forty eight shillings, in monies numbered, and four 1 l. bank notes
            </rs>, the property of 
               
                  <persName id="t18130915-79-victim765" type="victimName">
                     Henry 
                     Campbell
                  <interp inst="t18130915-79-victim765" type="surname" value="Campbell"></interp>
                     <interp inst="t18130915-79-victim765" type="given" value="Henry"></interp>
                     <interp inst="t18130915-79-victim765" type="gender" value="male"></interp>
