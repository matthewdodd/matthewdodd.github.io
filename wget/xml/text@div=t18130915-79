            . And 
               
                  <persName id="t18130915-79-defend767" type="defendantName">
                     THOMAS 
                     HARVEY
                  <interp inst="t18130915-79-defend767" type="surname" value="HARVEY"></interp>
                     <interp inst="t18130915-79-defend767" type="given" value="THOMAS"></interp>
                     <interp inst="t18130915-79-defend767" type="gender" value="male"></interp>
