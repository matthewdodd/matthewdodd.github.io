                        <interp inst="t18660709-639-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18660709-639-punishment-45" type="punishmentDescription">
                        <interp inst="t18660709-639-punishment-45" type="punishmentCategory" value="imprison"></interp>
