                        <interp inst="t18771022-763-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>—<hi rend="italic">
                     <rs id="t18771022-763-punishment-15" type="punishmentDescription">
