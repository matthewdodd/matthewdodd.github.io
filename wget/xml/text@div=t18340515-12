             and 
               
                  <persName id="t18340515-12-defend235" type="defendantName">
                     HENRY 
                     LLOYD
                  <interp inst="t18340515-12-defend235" type="surname" value="LLOYD"></interp>
                     <interp inst="t18340515-12-defend235" type="given" value="HENRY"></interp>
