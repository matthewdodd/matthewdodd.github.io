            , and 
               
                  <persName id="t18290910-276-defend2592" type="defendantName">
                     JOHN 
                     WOOD
                  <interp inst="t18290910-276-defend2592" type="surname" value="WOOD"></interp>
                     <interp inst="t18290910-276-defend2592" type="given" value="JOHN"></interp>
                     <interp inst="t18290910-276-defend2592" type="gender" value="male"></interp>
