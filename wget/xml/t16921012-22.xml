<div1 type="trialAccount" id="t16921012-22">
               <interp inst="t16921012-22" type="collection" value="BAILEY"></interp>
               <interp inst="t16921012-22" type="year" value="1692"></interp>
               <interp inst="t16921012-22" type="uri" value="sessionsPapers/16921012"></interp>
