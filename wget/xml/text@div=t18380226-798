               <p>
                  <hi rend="smallCaps">
                     <persName id="t18380226-name-872" type="witnessName">
                        <interp inst="t18380226-name-872" type="gender" value="male"></interp>
                        <interp inst="t18380226-name-872" type="surname" value="KEMP"></interp>
