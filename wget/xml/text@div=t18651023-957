                        <interp inst="t18651023-957-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18651023-957-punishment-39" type="punishmentDescription">
                        <interp inst="t18651023-957-punishment-39" type="punishmentCategory" value="imprison"></interp>
