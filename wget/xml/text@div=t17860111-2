                     <interp inst="t17860111-2-person448" type="given" value="NATHANIEL"></interp>
                     <interp inst="t17860111-2-person448" type="gender" value="male"></interp>
                  </persName>
            , 
               <persName id="t17860111-2-person449">
                  LEONARD
                   GOODRIDGE
               <interp inst="t17860111-2-person449" type="surname" value="GOODRIDGE"></interp>
                     <interp inst="t17860111-2-person449" type="given" value="LEONARD"></interp>
