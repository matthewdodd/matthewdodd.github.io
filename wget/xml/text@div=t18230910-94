               <p>
            
                  <persName id="t18230910-94-person1045">
                  LEWIS 
                  MARKS
               <interp inst="t18230910-94-person1045" type="surname" value="MARKS"></interp>
                     <interp inst="t18230910-94-person1045" type="given" value="LEWIS"></interp>
                     <interp inst="t18230910-94-person1045" type="gender" value="male"></interp>
