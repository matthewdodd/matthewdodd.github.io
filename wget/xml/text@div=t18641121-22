                     <interp inst="t18641121-22-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>
                     <hi rend="smallCaps">GUILTY</hi>.—</rs> 
                  <rs id="t18641121-22-punishment-22" type="punishmentDescription">
