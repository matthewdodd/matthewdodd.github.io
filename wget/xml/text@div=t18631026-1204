                        <interp inst="t18631026-1204-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18631026-1204-punishment-31" type="punishmentDescription">
