                     <hi rend="largeCaps">JOHN SHEARMAN</hi>
                  </persName> and <persName id="def2-1885-18491029" type="defendantName">
                     <interp inst="def2-1885-18491029" type="gender" value="male"></interp>
                     <interp inst="def2-1885-18491029" type="surname" value="TURNER"></interp>
