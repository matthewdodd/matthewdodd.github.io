                     <interp inst="def1-337-18580222" type="surname" value="SPILLEN"></interp>
                     <interp inst="def1-337-18580222" type="given" value="PATRICK"></interp>
                     <hi rend="largeCaps">PATRICK SPILLEN</hi> (51)</persName>
                  <rs id="t18580222-337-offence-1" type="offenceDescription">
                     <interp inst="t18580222-337-offence-1" type="offenceCategory" value="breakingPeace"></interp>
                     <interp inst="t18580222-337-offence-1" type="offenceSubcategory" value="wounding"></interp>, Feloniously cutting and wounding <persName id="t18580222-name-297" type="victimName">
                        <interp inst="t18580222-name-297" type="gender" value="female"></interp>
                        <interp inst="t18580222-name-297" type="surname" value="SPILLEN"></interp>
