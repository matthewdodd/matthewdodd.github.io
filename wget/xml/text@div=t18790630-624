                        <interp inst="t18790630-name-170" type="gender" value="female"></interp>
                        <interp inst="t18790630-name-170" type="surname" value="BERKHERT"></interp>
                        <interp inst="t18790630-name-170" type="given" value="GEORGINA EMILY"></interp>
                        <join result="offenceVictim" targOrder="Y" targets="t18790630-624-offence-1 t18790630-name-170"></join>Georgina Emily Berkhert</persName>.</rs>
