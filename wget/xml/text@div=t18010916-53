               <p>680. 
               
                  <persName id="t18010916-53-defend383" type="defendantName">
                     MARY 
                     BRIGGS
                  <interp inst="t18010916-53-defend383" type="surname" value="BRIGGS"></interp>
                     <interp inst="t18010916-53-defend383" type="given" value="MARY"></interp>
