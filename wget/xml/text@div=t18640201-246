                     <interp inst="def4-246-18640201" type="given" value="BASILIO DE LOS"></interp>
                     <hi rend="largeCaps">BASILIO DE LOS SANTOS</hi>, <hi rend="italic">alias</hi> 
                     <hi rend="largeCaps">JOSEPH SANDO</hi> (22)</persName>, <persName id="def5-246-18640201" type="defendantName">
                     <interp inst="def5-246-18640201" type="gender" value="male"></interp>
