                  <hi rend="smallCaps">
                     <persName id="t18730818-name-488" type="witnessName">
                        <interp inst="t18730818-name-488" type="gender" value="male"></interp>
                        <interp inst="t18730818-name-488" type="surname" value="WILLIAMS"></interp>
                        <interp inst="t18730818-name-488" type="given" value="MONTAGU"></interp>MR. MONTAGU WILLIAMS</persName>
