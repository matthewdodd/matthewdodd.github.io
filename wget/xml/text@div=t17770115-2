               <p>67, 68. 
               
                  <persName id="t17770115-2-defend59" type="defendantName">
                     WILLIAM
                      DAVIS
                  <interp inst="t17770115-2-defend59" type="surname" value="DAVIS"></interp>
                     <interp inst="t17770115-2-defend59" type="given" value="WILLIAM"></interp>
                     <interp inst="t17770115-2-defend59" type="gender" value="male"></interp>
