               <p>
            
                  <persName id="t18310512-101-person739">
                  THOMAS 
                  BETTS
               <interp inst="t18310512-101-person739" type="surname" value="BETTS"></interp>
                     <interp inst="t18310512-101-person739" type="given" value="THOMAS"></interp>
                     <interp inst="t18310512-101-person739" type="gender" value="male"></interp>
