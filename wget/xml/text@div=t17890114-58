             and 
               
                  <persName id="t17890114-58-defend554" type="defendantName">
                     JANE 
                     WHITING
                  <interp inst="t17890114-58-defend554" type="surname" value="WHITING"></interp>
                     <interp inst="t17890114-58-defend554" type="given" value="JANE"></interp>
