                        <interp inst="t18460202-662-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18460202-662-punishment-180" type="punishmentDescription">
                        <interp inst="t18460202-662-punishment-180" type="punishmentCategory" value="imprison"></interp>
