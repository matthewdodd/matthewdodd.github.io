                     <hi rend="largeCaps">ROBERT MARGARUM</hi> (33)</persName>, <hi rend="italic">and</hi> 
                  <persName id="def2-349-18770409" type="defendantName">
                     <interp inst="def2-349-18770409" type="gender" value="male"></interp>
