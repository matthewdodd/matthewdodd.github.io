                        <interp inst="t18631026-1228-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18631026-1228-punishment-44" type="punishmentDescription">
