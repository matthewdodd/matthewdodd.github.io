                     </persName>
                     
                  , <rs id="t18090215-19-viclabel103" type="occupation">esq</rs>
                     <join result="persNameOccupation" targOrder="Y" targets="t18090215-19-victim204 t18090215-19-viclabel103"></join>. in the house of 
                     <persName id="t18090215-19-person205">
                        Martha 
                        Atkins
                     <interp inst="t18090215-19-person205" type="surname" value="Atkins"></interp>
