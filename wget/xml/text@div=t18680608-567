                     <interp inst="def3-567-18680608" type="given" value="FRANCIS"></interp>
                     <hi rend="largeCaps">FRANCIS WARDELL</hi> (15)</persName>, <persName id="def4-567-18680608" type="defendantName">
                     <interp inst="def4-567-18680608" type="gender" value="male"></interp>
                     <interp inst="def4-567-18680608" type="age" value="17"></interp>
