                     <interp inst="t18451124-178-offence-1" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18451124-178-offence-1" type="offenceSubcategory" value="simpleLarceny"></interp> stealing 1 box, value 2<hi rend="italic">s</hi>. 6<hi rend="italic">d</hi>.; 1 shirt, 3<hi rend="italic">s</hi>.; 1 pair of braces, 1<hi rend="italic">s</hi>.; 1 scarf, 3<hi rend="italic">s</hi>.; 1 printed books, 6<hi rend="italic">d</hi>.; and 1 other book, 6<hi rend="italic">d</hi>.; the goods of <persName id="t18451124-name-982" type="victimName">
                        <interp inst="t18451124-name-982" type="gender" value="male"></interp>
                        <interp inst="t18451124-name-982" type="surname" value="SANSOM"></interp>
