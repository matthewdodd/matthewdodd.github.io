                     </persName>
                  , with intent to defraud 
                     
                        <persName id="t17960217-70-victim708" type="victimName">
                           Thomas 
                           Morgan
                        <interp inst="t17960217-70-victim708" type="surname" value="Morgan"></interp>
                        <interp inst="t17960217-70-victim708" type="given" value="Thomas"></interp>
