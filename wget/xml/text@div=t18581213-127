                        <interp inst="t18581213-127-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18581213-127-punishment-42" type="punishmentDescription">
                        <interp inst="t18581213-127-punishment-42" type="punishmentCategory" value="imprison"></interp>
