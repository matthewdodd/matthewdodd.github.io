               <join result="criminalCharge" id="t18610610-473-charge-1" targOrder="Y" targets="def1-473-18610610 t18610610-473-offence-1 t18610610-473-verdict-1"></join>
               <join result="criminalCharge" id="t18610610-473-charge-2" targOrder="Y" targets="def2-473-18610610 t18610610-473-offence-1 t18610610-473-verdict-2"></join>
