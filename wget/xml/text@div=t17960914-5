               <p>
                  <xptr type="pageFacsimile" doc="179609140013"></xptr>462. 
               
                  <persName id="t17960914-5-defend95" type="defendantName">
                     JOHN 
                     SELLERS
                  <interp inst="t17960914-5-defend95" type="surname" value="SELLERS"></interp>
                     <interp inst="t17960914-5-defend95" type="given" value="JOHN"></interp>
                     <interp inst="t17960914-5-defend95" type="gender" value="male"></interp>
                  </persName>
               
            , 
               
                  <persName id="t17960914-5-defend97" type="defendantName">
                     ELIZABETH 
                     JONES
                  <interp inst="t17960914-5-defend97" type="surname" value="JONES"></interp>
                     <interp inst="t17960914-5-defend97" type="given" value="ELIZABETH"></interp>
                     <interp inst="t17960914-5-defend97" type="gender" value="female"></interp>
                  </persName>
               
            , and 
               
                  <persName id="t17960914-5-defend99" type="defendantName">
                     RICHARD 
                     FOOTNER
                  <interp inst="t17960914-5-defend99" type="surname" value="FOOTNER"></interp>
                     <interp inst="t17960914-5-defend99" type="given" value="RICHARD"></interp>
