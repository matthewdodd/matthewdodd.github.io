               <p>491. 
               
                  <persName id="t17951028-22-defend269" type="defendantName">
                     MARY 
                     SMITH
                  <interp inst="t17951028-22-defend269" type="surname" value="SMITH"></interp>
                     <interp inst="t17951028-22-defend269" type="given" value="MARY"></interp>
                     <interp inst="t17951028-22-defend269" type="gender" value="female"></interp>
