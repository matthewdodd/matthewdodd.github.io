                  <persName id="t18210912-209-person2029">
                  GEORGE 
                  MITCHELL
               <interp inst="t18210912-209-person2029" type="surname" value="MITCHELL"></interp>
                     <interp inst="t18210912-209-person2029" type="given" value="GEORGE"></interp>
                     <interp inst="t18210912-209-person2029" type="gender" value="male"></interp>
