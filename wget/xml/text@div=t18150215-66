            . I <rs id="t18150215-66-viclabel388" type="occupation">keep a clothes warehouse</rs>
                  <join result="persNameOccupation" targOrder="Y" targets="t18150215-66-victim566 t18150215-66-viclabel388"></join>, <placeName id="t18150215-66-crimeloc389">No. 100, Cheapside</placeName>
