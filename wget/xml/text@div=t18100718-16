             and 
               
                  <persName id="t18100718-16-defend180" type="defendantName">
                     WILLIAM 
                     DAVIS
                  <interp inst="t18100718-16-defend180" type="surname" value="DAVIS"></interp>
                     <interp inst="t18100718-16-defend180" type="given" value="WILLIAM"></interp>
                     <interp inst="t18100718-16-defend180" type="gender" value="male"></interp>
