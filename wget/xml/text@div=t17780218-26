               <p>
            
                  <persName id="t17780218-26-person374">
                  SAMUEL
                   HATTON
               <interp inst="t17780218-26-person374" type="surname" value="HATTON"></interp>
                     <interp inst="t17780218-26-person374" type="given" value="SAMUEL"></interp>
                     <interp inst="t17780218-26-person374" type="gender" value="male"></interp>
