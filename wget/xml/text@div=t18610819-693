                        <interp inst="t18610819-693-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>, <rs id="t18610819-693-punishment-53" type="punishmentDescription">
                     <interp inst="t18610819-693-punishment-53" type="punishmentCategory" value="miscPunish"></interp>
                     <interp inst="t18610819-693-punishment-53" type="punishmentSubcategory" value="sureties"></interp>
                     <join result="defendantPunishment" targOrder="Y" targets="def1-693-18610819 t18610819-693-punishment-53"></join>
                     <join result="defendantPunishment" targOrder="Y" targets="def2-693-18610819 t18610819-693-punishment-53"></join>
