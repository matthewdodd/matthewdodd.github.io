               <join result="criminalCharge" id="t18170917-128-off636-c701" targOrder="Y" targets="t18170917-128-defend905 t18170917-128-off636 t18170917-128-verdict642"></join>
         
               <p>1235. 
               
                  <persName id="t18170917-128-defend904" type="defendantName">
                     JOHN 
                     HALE
                  <interp inst="t18170917-128-defend904" type="surname" value="HALE"></interp>
                     <interp inst="t18170917-128-defend904" type="given" value="JOHN"></interp>
