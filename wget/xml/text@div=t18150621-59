                     <interp inst="t18150621-59-victim523" type="gender" value="male"></interp>
                  </persName>
               
            , the <rs id="t18150621-59-viclabel335" type="occupation">elder</rs>
                  <join result="persNameOccupation" targOrder="Y" targets="t18150621-59-victim523 t18150621-59-viclabel335"></join>, 
               
                  <persName id="t18150621-59-victim525" type="victimName">
                     Charles 
                     Hibbert
                  <interp inst="t18150621-59-victim525" type="surname" value="Hibbert"></interp>
                     <interp inst="t18150621-59-victim525" type="given" value="Charles"></interp>
                     <interp inst="t18150621-59-victim525" type="gender" value="male"></interp>
                  </persName>
               
            , and 
               
                  <persName id="t18150621-59-victim527" type="victimName">
                     John 
                     Hibbert
                  <interp inst="t18150621-59-victim527" type="surname" value="Hibbert"></interp>
