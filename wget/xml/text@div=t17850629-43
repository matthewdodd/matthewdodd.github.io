             and MARY <rs id="t17850629-43-deflabel203" type="occupation">wife</rs>
                  <join result="persNameOccupation" targOrder="Y" targets="t17850629-43-defend403 t17850629-43-deflabel203"></join> of 
               <persName id="t17850629-43-person402">
