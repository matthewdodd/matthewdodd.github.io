                        <interp inst="t18681123-82-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>—<hi rend="italic">
                     <rs id="t18681123-82-punishment-77" type="punishmentDescription">
