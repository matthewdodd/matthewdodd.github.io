                        <interp inst="t18591024-994-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18591024-994-punishment-97" type="punishmentDescription">
