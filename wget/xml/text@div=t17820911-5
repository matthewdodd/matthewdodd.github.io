             and 
               
                  <persName id="t17820911-5-defend88" type="defendantName">
                     JAMES 
                     DAVIS
                  <interp inst="t17820911-5-defend88" type="surname" value="DAVIS"></interp>
                     <interp inst="t17820911-5-defend88" type="given" value="JAMES"></interp>
                     <interp inst="t17820911-5-defend88" type="gender" value="male"></interp>
                  </persName>
               
             were indicted, for <rs id="t17820911-5-off21" type="offenceDescription">
                     <interp inst="t17820911-5-off21" type="offenceCategory" value="violentTheft"></interp>
                     <interp inst="t17820911-5-off21" type="offenceSubcategory" value="highwayRobbery"></interp>
               that they on the King's<xptr type="pageFacsimile" doc="178209110007"></xptr> highway in and upon 
                     
                        <persName id="t17820911-5-victim90" type="victimName">
                           Henry 
                           Kitchen
                        <interp inst="t17820911-5-victim90" type="surname" value="Kitchen"></interp>
