                  <persName id="t18280110-160-person1014">
                  WILLIAM 
                  BATES
               <interp inst="t18280110-160-person1014" type="surname" value="BATES"></interp>
                     <interp inst="t18280110-160-person1014" type="given" value="WILLIAM"></interp>
                     <interp inst="t18280110-160-person1014" type="gender" value="male"></interp>
