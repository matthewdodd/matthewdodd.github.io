                        <interp inst="t18650410-482-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18650410-482-punishment-123" type="punishmentDescription">
                        <interp inst="t18650410-482-punishment-123" type="punishmentCategory" value="imprison"></interp>
