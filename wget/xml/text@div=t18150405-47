               <p>470. 
               
                  <persName id="t18150405-47-defend469" type="defendantName">
                     ABRAHAM 
                     ALLEN
                  <interp inst="t18150405-47-defend469" type="surname" value="ALLEN"></interp>
                     <interp inst="t18150405-47-defend469" type="given" value="ABRAHAM"></interp>
