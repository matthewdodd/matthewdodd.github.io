               <p>640. 
               
                  <persName id="t18200517-56-defend568" type="defendantName">
                     PETER 
                     MILLER
                  <interp inst="t18200517-56-defend568" type="surname" value="MILLER"></interp>
                     <interp inst="t18200517-56-defend568" type="given" value="PETER"></interp>
