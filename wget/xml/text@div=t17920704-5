               <p>315. 
               
                  <persName id="t17920704-5-defend105" type="defendantName">
                     RICHARD 
                     LIGHTOWLER
                  <interp inst="t17920704-5-defend105" type="surname" value="LIGHTOWLER"></interp>
                     <interp inst="t17920704-5-defend105" type="given" value="RICHARD"></interp>
