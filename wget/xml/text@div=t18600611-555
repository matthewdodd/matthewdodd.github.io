                     <rs id="t18600611-555-verdict-1" type="verdictDescription">
                        <interp inst="t18600611-555-verdict-1" type="verdictCategory" value="guilty"></interp>
                        <interp inst="t18600611-555-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18600611-555-punishment-42" type="punishmentDescription">
