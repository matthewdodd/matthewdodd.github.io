                  </persName>
            , <rs id="t17890114-24-verdict119" type="verdictDescription">
                     <interp inst="t17890114-24-verdict119" type="verdictCategory" value="guilty"></interp>
               GUILTY
            </rs>, <rs id="t17890114-24-punish120" type="punishmentDescription">
                     <interp inst="t17890114-24-punish120" type="punishmentCategory" value="death"></interp>
                     <join result="defendantPunishment" targOrder="Y" targets="t17890114-24-defend270 t17890114-24-punish120"></join>
