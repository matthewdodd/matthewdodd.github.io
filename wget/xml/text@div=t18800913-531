                        <interp inst="t18800913-531-verdict-1" type="verdictCategory" value="notGuilty"></interp>
                        <interp inst="t18800913-531-verdict-1" type="verdictSubcategory" value=""></interp>NOT GUILTY</rs>
                  </hi>
