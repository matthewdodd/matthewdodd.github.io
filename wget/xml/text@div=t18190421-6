                  ; one coat, value 10 s., the goods of 
                     
                        <persName id="t18190421-6-victim130" type="victimName">
                           Luke 
                           Bew
                        <interp inst="t18190421-6-victim130" type="surname" value="Bew"></interp>
                        <interp inst="t18190421-6-victim130" type="given" value="Luke"></interp>
                        <interp inst="t18190421-6-victim130" type="gender" value="male"></interp>
                     </persName>
                     
                  ; one coat, value 12 s., the goods of 
                     
                        <persName id="t18190421-6-victim132" type="victimName">
                           Robert 
                           Trimnell
                        <interp inst="t18190421-6-victim132" type="surname" value="Trimnell"></interp>
