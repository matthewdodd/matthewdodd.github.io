                        <interp inst="t18440916-geo-7" type="type" value="parish"></interp>
                        <join result="offencePlace" targOrder="Y" targets="t18440916-2251-offence-1 t18440916-geo-7"></join>St. John, Hackney</placeName>, 31 spoons, value 5<hi rend="italic">l</hi>.; 22 forks, 4<hi rend="italic">l</hi>.; 2 knife-rests, 5<hi rend="italic">s</hi>.; and 1 plate-basket, 1<hi rend="italic">s</hi>.; the goods of <persName id="t18440916-name-250" type="victimName">
                        <interp inst="t18440916-name-250" type="gender" value="male"></interp>
                        <interp inst="t18440916-name-250" type="surname" value="STEVENS"></interp>
