                     <hi rend="largeCaps">JOHN GRANT</hi> (22), <hi rend="italic">alias</hi> 
                     <hi rend="largeCaps">
                        <rs id="t18620407-alias-3" type="alias">
                           <join result="nameAlias" targOrder="Y" targets="def1-492-18620407 t18620407-alias-3"></join>GEORGE WRIGHT</rs>
