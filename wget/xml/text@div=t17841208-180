               <p>
                  <xptr type="pageFacsimile" doc="178412080169"></xptr>
            
                  <persName id="t17841208-180-person1518">
                  THOMAS
                   JONES
               <interp inst="t17841208-180-person1518" type="surname" value="JONES"></interp>
                     <interp inst="t17841208-180-person1518" type="given" value="THOMAS"></interp>
                     <interp inst="t17841208-180-person1518" type="gender" value="male"></interp>
