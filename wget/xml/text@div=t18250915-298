                     <join result="offenceCrimeDate" targOrder="Y" targets="t18250915-298-off1612 t18250915-298-cd1613"></join>, at <placeName id="t18250915-298-crimeloc1614">St. Pancras</placeName>
                     <interp inst="t18250915-298-crimeloc1614" type="placeName" value="St. Pancras"></interp>
