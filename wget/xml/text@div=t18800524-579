                        <interp inst="t18800524-579-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18800524-579-punishment-77" type="punishmentDescription">
                        <interp inst="t18800524-579-punishment-77" type="punishmentCategory" value="imprison"></interp>
