                     <interp inst="def1-47-18741123" type="occupation" value="soldier"></interp>
                     <hi rend="largeCaps">WILLIAM SMITH</hi> (20)</persName>, <persName id="def2-47-18741123" type="defendantName">
                     <interp inst="def2-47-18741123" type="gender" value="male"></interp>
                     <interp inst="def2-47-18741123" type="age" value="25"></interp>
                     <interp inst="def2-47-18741123" type="surname" value="DUFFY"></interp>
                     <interp inst="def2-47-18741123" type="given" value="PETER"></interp>
                     <interp inst="def2-47-18741123" type="occupation" value="soldier"></interp>
                     <hi rend="largeCaps">PETER DUFFY</hi> (25)</persName>, <persName id="def3-47-18741123" type="defendantName">
                     <interp inst="def3-47-18741123" type="gender" value="male"></interp>
                     <interp inst="def3-47-18741123" type="age" value="25"></interp>
                     <interp inst="def3-47-18741123" type="surname" value="BISHOP"></interp>
                     <interp inst="def3-47-18741123" type="given" value="ARTHUR"></interp>
                     <interp inst="def3-47-18741123" type="occupation" value="soldier"></interp>
                     <hi rend="largeCaps">ARTHUR BISHOP</hi> (25)</persName>, <persName id="def4-47-18741123" type="defendantName">
                     <interp inst="def4-47-18741123" type="gender" value="male"></interp>
                     <interp inst="def4-47-18741123" type="age" value="20"></interp>
