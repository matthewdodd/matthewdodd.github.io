            , who is sixteen years old, 
               <persName id="t17701024-55-person473">
                  Arthur
                   Dunbar
               <interp inst="t17701024-55-person473" type="surname" value="Dunbar"></interp>
                     <interp inst="t17701024-55-person473" type="given" value="Arthur"></interp>
