               <p>761. <persName id="def1-761-18771022" type="defendantName">
                     <interp inst="def1-761-18771022" type="gender" value="male"></interp>
                     <interp inst="def1-761-18771022" type="age" value="52"></interp>
                     <interp inst="def1-761-18771022" type="surname" value="SWINDLEHURST"></interp>
