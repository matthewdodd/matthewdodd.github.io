                        <interp inst="t18680406-389-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>—<hi rend="italic">
                     <rs id="t18680406-389-punishment-94" type="punishmentDescription">
                        <interp inst="t18680406-389-punishment-94" type="punishmentCategory" value="imprison"></interp>
