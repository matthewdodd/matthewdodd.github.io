                  <rs id="t18490820-1639-offence-1" type="offenceDescription">
                     <interp inst="t18490820-1639-offence-1" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18490820-1639-offence-1" type="offenceSubcategory" value="pocketpicking"></interp>, stealing 1 watch, value 7<hi rend="italic">l</hi>. the goods of <persName id="t18490820-name-819" type="victimName">
                        <interp inst="t18490820-name-819" type="gender" value="male"></interp>
                        <interp inst="t18490820-name-819" type="surname" value="KENDLE"></interp>
