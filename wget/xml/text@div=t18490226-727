                     <interp inst="t18490226-727-offence-1" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18490226-727-offence-1" type="offenceSubcategory" value="theftFromPlace"></interp>, stealing 231 lbs. weight of tin, value 17<hi rend="italic">l</hi>. 6<hi rend="italic">s</hi>., 6<hi rend="italic">d</hi>.; the goods of <persName id="t18490226-name-676" type="victimName">
                        <interp inst="t18490226-name-676" type="gender" value="male"></interp>
                        <interp inst="t18490226-name-676" type="surname" value="WARD"></interp>
