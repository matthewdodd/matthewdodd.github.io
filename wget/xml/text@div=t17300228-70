                     <interp inst="t17300228-70-off355" type="offenceCategory" value="violentTheft"></interp>
                     <interp inst="t17300228-70-off355" type="offenceSubcategory" value="highwayRobbery"></interp>
               assaulting 
                     
                        <persName id="t17300228-70-victim395" type="victimName">
