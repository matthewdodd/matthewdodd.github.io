                  <persName id="t18241028-178-victim1607" type="victimName">
                     CHARLES CASTEN 
                     DICK
                  <interp inst="t18241028-178-victim1607" type="surname" value="DICK"></interp>
                     <interp inst="t18241028-178-victim1607" type="given" value="CHARLES CASTEN"></interp>
