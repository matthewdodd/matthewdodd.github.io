                     <interp inst="t17921215-110-person1172" type="gender" value="male"></interp>
                  </persName>
            , 
               <persName id="t17921215-110-person1173">
                  William
                   Goodluck
               <interp inst="t17921215-110-person1173" type="surname" value="Goodluck"></interp>
                     <interp inst="t17921215-110-person1173" type="given" value="William"></interp>
                     <interp inst="t17921215-110-person1173" type="gender" value="male"></interp>
                  </persName>
            , and 
               <persName id="t17921215-110-person1174">
                  William
                   Lea
               <interp inst="t17921215-110-person1174" type="surname" value="Lea"></interp>
                     <interp inst="t17921215-110-person1174" type="given" value="William"></interp>
                     <interp inst="t17921215-110-person1174" type="gender" value="male"></interp>
                  </persName>
            . - (
               <persName id="t17921215-110-person1175">
                  William
                   Goodluck
               <interp inst="t17921215-110-person1175" type="surname" value="Goodluck"></interp>
                     <interp inst="t17921215-110-person1175" type="given" value="William"></interp>
                     <interp inst="t17921215-110-person1175" type="gender" value="male"></interp>
