               <p>739. 
               
                  <persName id="t17831029-21-defend347" type="defendantName">
                     ANDREW 
                     BECKMAN
                  <interp inst="t17831029-21-defend347" type="surname" value="BECKMAN"></interp>
                     <interp inst="t17831029-21-defend347" type="given" value="ANDREW"></interp>
                     <interp inst="t17831029-21-defend347" type="gender" value="male"></interp>
