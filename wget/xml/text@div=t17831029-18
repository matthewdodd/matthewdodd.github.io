             and 
               
                  <persName id="t17831029-18-defend322" type="defendantName">
                     WILLIAM 
                     TEMPLAR
                  <interp inst="t17831029-18-defend322" type="surname" value="TEMPLAR"></interp>
                     <interp inst="t17831029-18-defend322" type="given" value="WILLIAM"></interp>
                     <interp inst="t17831029-18-defend322" type="gender" value="male"></interp>
