                  <persName id="t18291029-205-person1696">
                  ABRAHAM 
                  BARKER
               <interp inst="t18291029-205-person1696" type="surname" value="BARKER"></interp>
                     <interp inst="t18291029-205-person1696" type="given" value="ABRAHAM"></interp>
                     <interp inst="t18291029-205-person1696" type="gender" value="male"></interp>
