                  ; and 1 bag, value 3d., the goods of 
                     
                        <persName id="t18301028-71-victim653" type="victimName">
                           Ann 
                           Gardiner
                        <interp inst="t18301028-71-victim653" type="surname" value="Gardiner"></interp>
