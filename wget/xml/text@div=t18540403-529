               <p>
                  <hi rend="largeCaps">BENDON</hi> 
                  <hi rend="smallCaps">
                     <rs id="t18540403-529-verdict-1" type="verdictDescription">
                        <interp inst="t18540403-529-verdict-1" type="verdictCategory" value="guilty"></interp>
                        <interp inst="t18540403-529-verdict-1" type="verdictSubcategory" value="pleadedGuilty"></interp>PLEADED GUILTY</rs>
