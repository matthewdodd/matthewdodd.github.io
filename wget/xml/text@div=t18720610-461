                     <join result="defendantPunishment" targOrder="Y" targets="def1-461-18720610 t18720610-461-punishment-16"></join>
                     <hi rend="italic">Eighteen Months' Imprisonment.</hi>
                  </rs> 
                  <hi rend="largeCaps">JANE KUYPERS</hi> 
                  <hi rend="italic">and</hi> 
                  <hi rend="largeCaps">ELIZABETH POLLARD</hi> 
                  <hi rend="italic">
                     <rs id="t18720610-461-punishment-17" type="punishmentDescription">
