             and 
               
                  <persName id="t17770219-37-defend373" type="defendantName">
                     JOHN
                      BAILEY
                  <interp inst="t17770219-37-defend373" type="surname" value="BAILEY"></interp>
                     <interp inst="t17770219-37-defend373" type="given" value="JOHN"></interp>
                     <interp inst="t17770219-37-defend373" type="gender" value="male"></interp>
