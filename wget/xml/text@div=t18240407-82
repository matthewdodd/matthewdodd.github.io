             and 
               
                  <persName id="t18240407-82-defend776" type="defendantName">
                     THOMAS 
                     OWDLGATE
                  <interp inst="t18240407-82-defend776" type="surname" value="OWDLGATE"></interp>
                     <interp inst="t18240407-82-defend776" type="given" value="THOMAS"></interp>
