               <p>690. 
               <persName id="t18240407-82-defend773" type="defendantName">
                  
                     JOHN 
                     SMITH
                   alias <rs id="t18240407-82-alias-6" type="alias">
                        <join result="nameAlias" targOrder="Y" targets="t18240407-82-defend773 t18240407-82-alias-6"></join>IVEY</rs>
