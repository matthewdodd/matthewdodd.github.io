                        <interp inst="t18690111-247-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18690111-247-punishment-84" type="punishmentDescription">
                        <interp inst="t18690111-247-punishment-84" type="punishmentCategory" value="imprison"></interp>
