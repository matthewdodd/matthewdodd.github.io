               <p>788. 
               <persName id="t18270405-35-defend268" type="defendantName">
                  EDWARD 
                  STEWARD
               <interp inst="t18270405-35-defend268" type="surname" value="STEWARD"></interp>
                     <interp inst="t18270405-35-defend268" type="given" value="EDWARD"></interp>
