                  <xptr type="pageFacsimile" doc="181802180032"></xptr>445. 
               
                  <persName id="t18180218-76-defend494" type="defendantName">
                     JAMES 
                     HAWES
                  <interp inst="t18180218-76-defend494" type="surname" value="HAWES"></interp>
                     <interp inst="t18180218-76-defend494" type="given" value="JAMES"></interp>
                     <interp inst="t18180218-76-defend494" type="gender" value="male"></interp>
