               <p>260. <persName id="def1-260-18740407" type="defendantName">
                     <interp inst="def1-260-18740407" type="gender" value="male"></interp>
                     <interp inst="def1-260-18740407" type="age" value="20"></interp>
                     <interp inst="def1-260-18740407" type="surname" value="LOCKHART"></interp>
                     <interp inst="def1-260-18740407" type="given" value="JAMES"></interp>
                     <hi rend="largeCaps">JAMES LOCKHART</hi> (20)</persName>, and <persName id="def2-260-18740407" type="defendantName">
                     <interp inst="def2-260-18740407" type="gender" value="male"></interp>
                     <interp inst="def2-260-18740407" type="age" value="18"></interp>
