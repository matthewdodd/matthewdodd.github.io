               <p>
            
                  <persName id="t18220703-10-person135">
                  MARY 
                  SMYERS
               <interp inst="t18220703-10-person135" type="surname" value="SMYERS"></interp>
                     <interp inst="t18220703-10-person135" type="given" value="MARY"></interp>
                     <interp inst="t18220703-10-person135" type="gender" value="female"></interp>
