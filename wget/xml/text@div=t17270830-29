                     <interp inst="t17270830-29-off134" type="offenceSubcategory" value="highwayRobbery"></interp>
               assaulting <rs id="t17270830-29-viclabel135" type="occupation">Mr.</rs>
                     <join result="persNameOccupation" targOrder="Y" targets="t17270830-29-victim173 t17270830-29-viclabel135"></join> 
                  
                     
