                  <persName id="t17960914-93-person923">
                  THOMAS
                   BIRKS
               <interp inst="t17960914-93-person923" type="surname" value="BIRKS"></interp>
                     <interp inst="t17960914-93-person923" type="given" value="THOMAS"></interp>
