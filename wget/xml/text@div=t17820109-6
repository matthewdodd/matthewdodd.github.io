                     <interp inst="t17820109-6-off29" type="offenceSubcategory" value="highwayRobbery"></interp>
               assaulting 
                     
                        <persName id="t17820109-6-victim104" type="victimName">
                           Benjamin 
                           Bayley
                        <interp inst="t17820109-6-victim104" type="surname" value="Bayley"></interp>
