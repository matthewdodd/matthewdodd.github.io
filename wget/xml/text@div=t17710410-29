                        <join result="offenceVictim" targOrder="Y" targets="t17710410-29-off154 t17710410-29-victim315"></join>
                     </persName>
                     
                  , <rs id="t17710410-29-viclabel155" type="occupation">spinster</rs>
                     <join result="persNameOccupation" targOrder="Y" targets="t17710410-29-victim315 t17710410-29-viclabel155"></join>
                     <join result="persNameOccupation" targOrder="Y" targets="t17710410-29-victim316 t17710410-29-viclabel155"></join>
                     <join result="persNameOccupation" targOrder="Y" targets="t17710410-29-person317 t17710410-29-viclabel155"></join>; otherwise, 
                     <persName id="t17710410-29-victim316" type="victimName">
                        Sarah, the <rs id="t17710410-29-viclabel156" type="occupation">wife</rs>
                        <join result="persNameOccupation" targOrder="Y" targets="t17710410-29-victim315 t17710410-29-viclabel156"></join>
