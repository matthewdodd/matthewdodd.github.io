                        <interp inst="t18771022-783-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>—<hi rend="italic">
                     <rs id="t18771022-783-punishment-31" type="punishmentDescription">
                        <interp inst="t18771022-783-punishment-31" type="punishmentCategory" value="imprison"></interp>
