                  <hi rend="smallCaps">
                     <persName id="t18450818-name-584" type="witnessName">
                        <interp inst="t18450818-name-584" type="gender" value="male"></interp>
                        <interp inst="t18450818-name-584" type="surname" value="SEXTON"></interp>
