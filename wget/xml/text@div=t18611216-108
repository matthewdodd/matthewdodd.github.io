                     <interp inst="t18611216-108-verdict-2" type="verdictSubcategory" value="no_subcategory"></interp>
                     <hi rend="smallCaps">GUILTY</hi> 
                     <hi rend="italic">on Second Count.—</hi>
                  </rs>
                  <hi rend="italic">
                     <rs id="t18611216-108-punishment-21" type="punishmentDescription">
