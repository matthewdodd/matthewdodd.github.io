                     <interp inst="t18251208-35-victim250" type="gender" value="male"></interp>
                  </persName>
            , 
               <persName id="t18251208-35-victim251" type="victimName">
                  Joaquin Ruiz 
                  <rs id="t18251208-35-viclabel169" type="occupation">de Alzedo</rs>
                     <join result="persNameOccupation" targOrder="Y" targets="t18251208-35-victim246 t18251208-35-viclabel169"></join>
                     <join result="persNameOccupation" targOrder="Y" targets="t18251208-35-victim247 t18251208-35-viclabel169"></join>
                     <join result="persNameOccupation" targOrder="Y" targets="t18251208-35-victim248 t18251208-35-viclabel169"></join>
                     <join result="persNameOccupation" targOrder="Y" targets="t18251208-35-victim249 t18251208-35-viclabel169"></join>
                     <join result="persNameOccupation" targOrder="Y" targets="t18251208-35-victim250 t18251208-35-viclabel169"></join>
                     <join result="persNameOccupation" targOrder="Y" targets="t18251208-35-victim251 t18251208-35-viclabel169"></join>
                     <join result="persNameOccupation" targOrder="Y" targets="t18251208-35-victim252 t18251208-35-viclabel169"></join>
                     <interp inst="t18251208-35-victim251" type="given" value="Joaquin Ruiz"></interp>
                     <interp inst="t18251208-35-victim251" type="gender" value="male"></interp>
                  </persName>
            , and 
               <persName id="t18251208-35-victim252" type="victimName">
                  Henry 
                  Hughes
               <interp inst="t18251208-35-victim252" type="surname" value="Hughes"></interp>
                     <interp inst="t18251208-35-victim252" type="given" value="Henry"></interp>
