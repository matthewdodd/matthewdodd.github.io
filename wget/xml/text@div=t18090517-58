                  <persName id="t18090517-58-person574">
                  WILLIAM 
                  MOIRE
               <interp inst="t18090517-58-person574" type="surname" value="MOIRE"></interp>
                     <interp inst="t18090517-58-person574" type="given" value="WILLIAM"></interp>
