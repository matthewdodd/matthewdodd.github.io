             and 
               
                  <persName id="t17970215-2-defend54" type="defendantName">
                     DANIEL 
                     MACKAWAY
                  <interp inst="t17970215-2-defend54" type="surname" value="MACKAWAY"></interp>
                     <interp inst="t17970215-2-defend54" type="given" value="DANIEL"></interp>
