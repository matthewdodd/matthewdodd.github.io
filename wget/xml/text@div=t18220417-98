             and 
               
                  <persName id="t18220417-98-defend966" type="defendantName">
                     JOHN 
                     CLARK
                  <interp inst="t18220417-98-defend966" type="surname" value="CLARK"></interp>
                     <interp inst="t18220417-98-defend966" type="given" value="JOHN"></interp>
