                     <hi rend="largeCaps">HENRY WHEELER</hi>
                  </persName> and <persName id="def2-414-18550409" type="defendantName">
                     <interp inst="def2-414-18550409" type="gender" value="male"></interp>
                     <interp inst="def2-414-18550409" type="age" value="21"></interp>
                     <interp inst="def2-414-18550409" type="surname" value="VERGO"></interp>
                     <interp inst="def2-414-18550409" type="given" value="GEORGE JOHN"></interp>
                     <hi rend="largeCaps">GEORGE JOHN VERGO</hi>
                  </persName>
                  <rs id="t18550409-414-offence-1" type="offenceDescription">
                     <interp inst="t18550409-414-offence-1" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18550409-414-offence-1" type="offenceSubcategory" value="pocketpicking"></interp>, stealing 1 handkerchief, value 2<hi rend="italic">s</hi>.; the goods of <persName id="t18550409-name-84" type="victimName">
                        <interp inst="t18550409-name-84" type="gender" value="male"></interp>
                        <interp inst="t18550409-name-84" type="surname" value="CORDEROY"></interp>
