                     <interp inst="t18270111-16-defend228" type="age" value="22"></interp>
                  </persName>
               
             and 
               
                  <persName id="t18270111-16-defend230" type="defendantName">
                     HENRY 
                     HITCHMAN
                  <interp inst="t18270111-16-defend230" type="surname" value="HITCHMAN"></interp>
                     <interp inst="t18270111-16-defend230" type="given" value="HENRY"></interp>
                     <interp inst="t18270111-16-defend230" type="gender" value="male"></interp>
