                        <interp inst="t18770917-748-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>—<hi rend="italic">
                     <rs id="t18770917-748-punishment-62" type="punishmentDescription">
                        <interp inst="t18770917-748-punishment-62" type="punishmentCategory" value="imprison"></interp>
