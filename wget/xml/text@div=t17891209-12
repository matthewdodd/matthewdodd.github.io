                     <interp inst="t17891209-12-person172" type="gender" value="male"></interp>
                  </persName>
            , 
               <persName id="t17891209-12-person173">
                  THOMAS
                   PARSONS
               <interp inst="t17891209-12-person173" type="surname" value="PARSONS"></interp>
