                        <interp inst="t18640815-name-206" type="surname" value="COE"></interp>
                        <interp inst="t18640815-name-206" type="given" value="JAMES THOMAS"></interp>
                        <join result="offenceVictim" targOrder="Y" targets="t18640815-786-offence-1 t18640815-name-206"></join>James Thomas Coe</persName>.</rs>
