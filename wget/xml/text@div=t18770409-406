                     <interp inst="t18770409-406-verdict-1" type="verdictCategory" value="guilty"></interp>
                     <interp inst="t18770409-406-verdict-1" type="verdictSubcategory" value="withRecommendation"></interp>
                     <hi rend="smallCaps">GUILTY</hi>. <hi rend="italic">
Recommended to mercy</hi>
                  </rs>—<hi rend="italic">
                     <rs id="t18770409-406-punishment-69" type="punishmentDescription">
                        <interp inst="t18770409-406-punishment-69" type="punishmentCategory" value="imprison"></interp>
