                        <interp inst="def2-897-18550917" type="surname" value="COLLINS"></interp>
                        <interp inst="def2-897-18550917" type="given" value="WILLIAM"></interp> WILLIAM COLLINS</persName>,<persName id="def3-897-18550917" type="defendantName">
                        <interp inst="def3-897-18550917" type="gender" value="male"></interp>
                        <interp inst="def3-897-18550917" type="surname" value="HURRY"></interp>
