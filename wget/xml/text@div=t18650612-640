                  <rs id="t18650612-640-offence-2" type="offenceDescription">
                     <interp inst="t18650612-640-offence-2" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18650612-640-offence-2" type="offenceSubcategory" value="receiving"></interp>, unlawfully receiving the same.</rs>
               </p>
               <p>
                  <hi rend="largeCaps">THOMPSON</hi> 
                  <rs id="t18650612-640-verdict-1" type="verdictDescription">
                     <interp inst="t18650612-640-verdict-1" type="verdictCategory" value="guilty"></interp>
                     <interp inst="t18650612-640-verdict-1" type="verdictSubcategory" value="pleadedGuilty"></interp>
                     <hi rend="smallCaps">PLEADED GUILTY</hi>.—</rs> 
                  <rs id="t18650612-640-punishment-52" type="punishmentDescription">
                     <interp inst="t18650612-640-punishment-52" type="punishmentCategory" value="noPunish"></interp>
