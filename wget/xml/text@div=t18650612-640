                        <join result="offenceVictim" targOrder="Y" targets="t18650612-640-offence-1 t18650612-name-347"></join>Charles Hutton</persName> and others divers goods; and </rs>
                  <persName id="def2-640-18650612" type="defendantName">
                     <interp inst="def2-640-18650612" type="gender" value="male"></interp>
                     <interp inst="def2-640-18650612" type="age" value="42"></interp>
                     <interp inst="def2-640-18650612" type="surname" value="GLEED"></interp>
