                  <persName id="t18290910-264-person2421">
                  JABEZ 
                  THURGOOD
               <interp inst="t18290910-264-person2421" type="surname" value="THURGOOD"></interp>
                     <interp inst="t18290910-264-person2421" type="given" value="JABEZ"></interp>
