                        <interp inst="t18780114-203a-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>—<hi rend="italic">
                     <rs id="t18780114-203a-punishment-51" type="punishmentDescription">
                        <interp inst="t18780114-203a-punishment-51" type="punishmentCategory" value="imprison"></interp>
