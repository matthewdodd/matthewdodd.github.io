                     <interp inst="def4-302-18800301" type="given" value="BENNET"></interp>
                     <hi rend="largeCaps">BENNET BARNES</hi> (40)</persName>, and <persName id="def5-302-18800301" type="defendantName">
                     <interp inst="def5-302-18800301" type="gender" value="male"></interp>
