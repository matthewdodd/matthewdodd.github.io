                     <interp inst="def1-302-18800301" type="given" value="ROBERT"></interp>
                     <hi rend="largeCaps">ROBERT LAIRD</hi> (53)</persName>, <persName id="def2-302-18800301" type="defendantName">
                     <interp inst="def2-302-18800301" type="gender" value="male"></interp>
                     <interp inst="def2-302-18800301" type="age" value="32"></interp>
                     <interp inst="def2-302-18800301" type="surname" value="GEAR"></interp>
                     <interp inst="def2-302-18800301" type="given" value="ROBERT"></interp>
                     <hi rend="largeCaps">ROBERT GEAR</hi> (32)</persName>, <persName id="def3-302-18800301" type="defendantName">
                     <interp inst="def3-302-18800301" type="gender" value="male"></interp>
                     <interp inst="def3-302-18800301" type="age" value="60"></interp>
                     <interp inst="def3-302-18800301" type="surname" value="WYMARK"></interp>
                     <interp inst="def3-302-18800301" type="given" value="WILLIAM"></interp>
                     <hi rend="largeCaps">WILLIAM WYMARK</hi> (60)</persName>, <persName id="def4-302-18800301" type="defendantName">
                     <interp inst="def4-302-18800301" type="gender" value="male"></interp>
                     <interp inst="def4-302-18800301" type="age" value="40"></interp>
