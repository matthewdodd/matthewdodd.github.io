               <p>156. 
               
                  <persName id="t18050220-32-defend337" type="defendantName">
                     JOHN 
                     HODGES
                  <interp inst="t18050220-32-defend337" type="surname" value="HODGES"></interp>
                     <interp inst="t18050220-32-defend337" type="given" value="JOHN"></interp>
                     <interp inst="t18050220-32-defend337" type="gender" value="male"></interp>
                     <interp inst="t18050220-32-defend337" type="age" value="22"></interp>
                  </persName>
               
            , 
               
                  <persName id="t18050220-32-defend339" type="defendantName">
                     EDWARD 
                     MAHON
                  <interp inst="t18050220-32-defend339" type="surname" value="MAHON"></interp>
                     <interp inst="t18050220-32-defend339" type="given" value="EDWARD"></interp>
