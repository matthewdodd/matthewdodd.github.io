                        <interp inst="t18051204-20-victim237" type="gender" value="male"></interp>
                     </persName>
                     
                   the <rs id="t18051204-20-viclabel123" type="occupation">younger</rs>
                     <join result="persNameOccupation" targOrder="Y" targets="t18051204-20-victim237 t18051204-20-viclabel123"></join>, a gown value 2 s. petticoat, value 1 s. and a cloak, value 2 s. the property of 
                     
                        <persName id="t18051204-20-victim239" type="victimName">
                           Ann 
                           Eastess
                        <interp inst="t18051204-20-victim239" type="surname" value="Eastess"></interp>
