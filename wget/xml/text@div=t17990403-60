                     <interp inst="t17990403-60-defend643" type="gender" value="male"></interp>
                  </persName>
               
            , and 
               
                  <persName id="t17990403-60-defend645" type="defendantName">
                     THOMAS 
                     HUGHES
                  <interp inst="t17990403-60-defend645" type="surname" value="HUGHES"></interp>
                     <interp inst="t17990403-60-defend645" type="given" value="THOMAS"></interp>
                     <interp inst="t17990403-60-defend645" type="gender" value="male"></interp>
                  </persName>
               
             the <rs id="t17990403-60-deflabel341" type="occupation">younger</rs>
                  <join result="persNameOccupation" targOrder="Y" targets="t17990403-60-defend645 t17990403-60-deflabel341"></join>, were indicted for <rs id="t17990403-60-off342" type="offenceDescription">
                     <interp inst="t17990403-60-off342" type="offenceCategory" value="theft"></interp>
                     <interp inst="t17990403-60-off342" type="offenceSubcategory" value="receiving"></interp>
               receiving, on the <rs id="t17990403-60-cd343" type="crimeDate">8th of December</rs>
                     <join result="offenceCrimeDate" targOrder="Y" targets="t17990403-60-off342 t17990403-60-cd343"></join>, a quantity of indigo and cochineal, the property of 
                     
                        <persName id="t17990403-60-victim647" type="victimName">
                           Gilbert 
                           Alder
                        <interp inst="t17990403-60-victim647" type="surname" value="Alder"></interp>
                        <interp inst="t17990403-60-victim647" type="given" value="Gilbert"></interp>
                        <interp inst="t17990403-60-victim647" type="gender" value="male"></interp>
                     </persName>
                     
                  , 
                     
                        <persName id="t17990403-60-victim649" type="victimName">
                           Thomas 
                           Ellis
                        <interp inst="t17990403-60-victim649" type="surname" value="Ellis"></interp>
