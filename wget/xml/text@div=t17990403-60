                        <interp inst="t17990403-60-victim649" type="gender" value="male"></interp>
                     </persName>
                     
                  , and 
                     
                        <persName id="t17990403-60-victim651" type="victimName">
                           John 
                           Buxton
                        <interp inst="t17990403-60-victim651" type="surname" value="Buxton"></interp>
