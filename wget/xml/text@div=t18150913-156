               <p>930. 
               
                  <persName id="t18150913-156-defend1433" type="defendantName">
                     HENRY 
                     LAWRENCE
                  <interp inst="t18150913-156-defend1433" type="surname" value="LAWRENCE"></interp>
                     <interp inst="t18150913-156-defend1433" type="given" value="HENRY"></interp>
