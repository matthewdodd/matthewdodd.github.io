                     <interp inst="t18330411-147-defend1092" type="age" value="28"></interp>
                  </persName>
            , 
               
                  <persName id="t18330411-147-defend1094" type="defendantName">
                     MARY 
                     LAMB
                  <interp inst="t18330411-147-defend1094" type="surname" value="LAMB"></interp>
                     <interp inst="t18330411-147-defend1094" type="given" value="MARY"></interp>
