               <p>
                  <hi rend="largeCaps">MARTIN</hi> 
                  <hi rend="smallCaps">
                     <rs id="t18760403-313-verdict-1" type="verdictDescription">
                        <interp inst="t18760403-313-verdict-1" type="verdictCategory" value="guilty"></interp>
