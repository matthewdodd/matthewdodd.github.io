                     <interp inst="t18470920-2236-verdict-1" type="verdictCategory" value="guilty"></interp>
                     <interp inst="t18470920-2236-verdict-1" type="verdictSubcategory" value="lesserOffence"></interp>
                     <hi rend="smallCaps">GUILTY</hi> 
                     <hi rend="italic">of an Assault.</hi>
                  </rs> Aged 54.—<hi rend="italic">
