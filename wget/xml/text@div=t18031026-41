               <p>745. 
               <persName id="t18031026-41-defend270" type="defendantName">
                  GEORGE 
                  CLAYTON
               <interp inst="t18031026-41-defend270" type="surname" value="CLAYTON"></interp>
                     <interp inst="t18031026-41-defend270" type="given" value="GEORGE"></interp>
