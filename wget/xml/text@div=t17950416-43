                   and 
                     <persName id="t17950416-43-victim445" type="victimName">
                        Francis 
                        Ostliff
                     <interp inst="t17950416-43-victim445" type="surname" value="Ostliff"></interp>
                        <interp inst="t17950416-43-victim445" type="given" value="Francis"></interp>
                        <interp inst="t17950416-43-victim445" type="gender" value="male"></interp>
                     </persName>
                  , on the <rs id="t17950416-43-cd246" type="crimeDate">10th of February</rs>
                     <join result="offenceCrimeDate" targOrder="Y" targets="t17950416-43-off245 t17950416-43-cd246"></join>, and burglariously stealing therein eight, live hogs, price 40s. the goods of the said 
                     <persName id="t17950416-43-person446">
                        William
                         Beckett
                     <interp inst="t17950416-43-person446" type="surname" value="Beckett"></interp>
