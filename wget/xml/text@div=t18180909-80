               <persName id="t18180909-80-victim678" type="victimName">
                  Eglinton 
                  Maxwell
               <interp inst="t18180909-80-victim678" type="surname" value="Maxwell"></interp>
                     <interp inst="t18180909-80-victim678" type="given" value="Eglinton"></interp>
                     <interp inst="t18180909-80-victim678" type="gender" value="male"></interp>
                  </persName>
