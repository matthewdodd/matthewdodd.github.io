                     <hi rend="largeCaps">SAMUEL ROMAIN</hi> (43)</persName>, and <persName id="def2-307-18730407" type="defendantName">
                     <interp inst="def2-307-18730407" type="gender" value="male"></interp>
                     <interp inst="def2-307-18730407" type="age" value="22"></interp>
