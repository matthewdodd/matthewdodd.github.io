                        <interp inst="t18610610-485-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18610610-485-punishment-32" type="punishmentDescription">
                        <interp inst="t18610610-485-punishment-32" type="punishmentCategory" value="imprison"></interp>
