                     <interp inst="def1-915-18480228" type="given" value="FRANCIS"></interp>
                     <hi rend="largeCaps">FRANCIS LOWES</hi>
                  </persName>
                  <rs id="t18480228-915-offence-1" type="offenceDescription">
                     <interp inst="t18480228-915-offence-1" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18480228-915-offence-1" type="offenceSubcategory" value="theftFromPlace"></interp>, stealing 112lbs. weight of lead, value 15<hi rend="italic">s</hi>.; the goods of <persName id="t18480228-name-960" type="victimName">
                        <interp inst="t18480228-name-960" type="gender" value="male"></interp>
                        <interp inst="t18480228-name-960" type="surname" value="LOWES"></interp>
                        <interp inst="t18480228-name-960" type="given" value="FRANCIS SENLING"></interp>
                        <join result="offenceVictim" targOrder="Y" targets="t18480228-915-offence-1 t18480228-name-960"></join>Francis Senling Lowes</persName>; and </rs>
                  <persName id="def2-915-18480228" type="defendantName">
                     <interp inst="def2-915-18480228" type="gender" value="male"></interp>
                     <interp inst="def2-915-18480228" type="surname" value="KIENLEN"></interp>
                     <interp inst="def2-915-18480228" type="given" value="THOMAS ADOLPHUS"></interp>
                     <hi rend="largeCaps">THOMAS ADOLPHUS KIENLEN</hi>
                  </persName>
                  <rs id="t18480228-915-offence-2" type="offenceDescription">
                     <interp inst="t18480228-915-offence-2" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18480228-915-offence-2" type="offenceSubcategory" value="receiving"></interp> receiving the same, knowing, &amp;c.:—2nd <hi rend="smallCaps">COUNT</hi>, of <persName id="t18480228-name-962" type="victimName">
                        <interp inst="t18480228-name-962" type="gender" value="male"></interp>
                        <interp inst="t18480228-name-962" type="surname" value="BARBER"></interp>
