                  <persName id="t18060115-17-person197">
                  JAMES 
                  STEVENS
               <interp inst="t18060115-17-person197" type="surname" value="STEVENS"></interp>
                     <interp inst="t18060115-17-person197" type="given" value="JAMES"></interp>
                     <interp inst="t18060115-17-person197" type="gender" value="male"></interp>
