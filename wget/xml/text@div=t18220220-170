                  <persName id="t18220220-170-person1576">
                  JOHN 
                  CHANDLER
               <interp inst="t18220220-170-person1576" type="surname" value="CHANDLER"></interp>
                     <interp inst="t18220220-170-person1576" type="given" value="JOHN"></interp>
                     <interp inst="t18220220-170-person1576" type="gender" value="male"></interp>
