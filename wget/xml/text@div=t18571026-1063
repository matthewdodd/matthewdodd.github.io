                     <interp inst="t18571026-1063-verdict-1" type="verdictSubcategory" value="lesserOffence"></interp>
                     <hi rend="smallCaps">GUILTY</hi>. <hi rend="italic">
of Uttering.</hi>
                  </rs>
                  <hi rend="italic">—<rs id="t18571026-1063-punishment-66" type="punishmentDescription">
                        <interp inst="t18571026-1063-punishment-66" type="punishmentCategory" value="imprison"></interp>
