                     <interp inst="def1-81-18701212" type="given" value="JOHN"></interp>
                     <hi rend="largeCaps">JOHN TOMLINSON</hi>
                  </persName> and <persName id="def2-81-18701212" type="defendantName">
                     <interp inst="def2-81-18701212" type="gender" value="male"></interp>
                     <interp inst="def2-81-18701212" type="age" value="55"></interp>
                     <interp inst="def2-81-18701212" type="surname" value="SMITH"></interp>
                     <interp inst="def2-81-18701212" type="given" value="GEORGE"></interp>
                     <hi rend="largeCaps">GEORGE SMITH</hi>
                  </persName> were <hi rend="italic">again</hi> indicted with <persName id="def3-81-18701212" type="defendantName">
                     <interp inst="def3-81-18701212" type="gender" value="female"></interp>
