                        <interp inst="t18760501-343-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>—<hi rend="italic">
                     <rs id="t18760501-343-punishment-7" type="punishmentDescription">
                        <interp inst="t18760501-343-punishment-7" type="punishmentCategory" value="imprison"></interp>
