               <p>
                  <hi rend="largeCaps">TILLETT</hi> pleaded <hi rend="largeCaps">
                     <rs id="t18390204-780-verdict-1" type="verdictDescription">
                        <interp inst="t18390204-780-verdict-1" type="verdictCategory" value="guilty"></interp>
                        <interp inst="t18390204-780-verdict-1" type="verdictSubcategory" value="pleadedGuilty"></interp>GUILTY</rs>
