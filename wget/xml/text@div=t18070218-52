            . 
               
                  <persName id="t18070218-52-victim586" type="victimName">
                     John Rose 
                     Drewe
                  <interp inst="t18070218-52-victim586" type="surname" value="Drewe"></interp>
                     <interp inst="t18070218-52-victim586" type="given" value="John Rose"></interp>
                     <interp inst="t18070218-52-victim586" type="gender" value="male"></interp>
                  </persName>
               
            , and 
               
                  <persName id="t18070218-52-victim588" type="victimName">
                     Henry 
                     Brooksbank
                  <interp inst="t18070218-52-victim588" type="surname" value="Brooksbank"></interp>
