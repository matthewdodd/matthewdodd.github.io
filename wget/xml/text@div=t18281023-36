                     <interp inst="t18281023-36-off231" type="offenceCategory" value="violentTheft"></interp>
                     <interp inst="t18281023-36-off231" type="offenceSubcategory" value="highwayRobbery"></interp>
               feloniously assaulting 
                     <persName id="t18281023-36-victim301" type="victimName">
                        James 
                        Riley
                     <interp inst="t18281023-36-victim301" type="surname" value="Riley"></interp>
