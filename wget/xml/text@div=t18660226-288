                     <interp inst="def3-288-18660226" type="given" value="THOMAS"></interp>
                     <interp inst="def3-288-18660226" type="occupation" value="sailor"></interp>
                     <hi rend="largeCaps">THOMAS DICK<lb></lb>SON</hi> (32)</persName>, <persName id="def4-288-18660226" type="defendantName">
                     <interp inst="def4-288-18660226" type="gender" value="male"></interp>
