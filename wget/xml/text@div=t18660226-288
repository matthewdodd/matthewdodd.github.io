               <p>288. <persName id="def1-288-18660226" type="defendantName">
                     <interp inst="def1-288-18660226" type="gender" value="male"></interp>
                     <interp inst="def1-288-18660226" type="age" value="23"></interp>
                     <interp inst="def1-288-18660226" type="surname" value="LIFFIN"></interp>
                     <interp inst="def1-288-18660226" type="given" value="JAMES"></interp>
                     <interp inst="def1-288-18660226" type="occupation" value="sailor"></interp>
                     <hi rend="largeCaps">JAMES LIFFIN</hi> (23)</persName>, <persName id="def2-288-18660226" type="defendantName">
                     <interp inst="def2-288-18660226" type="gender" value="male"></interp>
                     <interp inst="def2-288-18660226" type="age" value="23"></interp>
                     <interp inst="def2-288-18660226" type="surname" value="CARR"></interp>
                     <interp inst="def2-288-18660226" type="given" value="THOMAS"></interp>
                     <interp inst="def2-288-18660226" type="occupation" value="sailor"></interp>
                     <hi rend="largeCaps">THOMAS CARR</hi> (23)</persName>, <persName id="def3-288-18660226" type="defendantName">
                     <interp inst="def3-288-18660226" type="gender" value="male"></interp>
                     <interp inst="def3-288-18660226" type="age" value="32"></interp>
