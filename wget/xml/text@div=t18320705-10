               <p>1427. 
               
                  <persName id="t18320705-10-defend220" type="defendantName">
                     JOSEPH 
                     DRAYBRIDGE
                  <interp inst="t18320705-10-defend220" type="surname" value="DRAYBRIDGE"></interp>
                     <interp inst="t18320705-10-defend220" type="given" value="JOSEPH"></interp>
