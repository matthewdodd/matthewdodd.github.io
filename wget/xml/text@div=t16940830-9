                     <persName id="t16940830-9-victim49" type="victimName">
                        Bridget 
                        Gerrard
                     <interp inst="t16940830-9-victim49" type="surname" value="Gerrard"></interp>
                        <interp inst="t16940830-9-victim49" type="given" value="Bridget"></interp>
                        <interp inst="t16940830-9-victim49" type="gender" value="female"></interp>
                        <join result="offenceVictim" targOrder="Y" targets="t16940830-9-off37 t16940830-9-victim49"></join>
