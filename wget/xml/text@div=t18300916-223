               <p>1687. 
               
                  <persName id="t18300916-223-defend1831" type="defendantName">
                     HENRY 
                     BAKER
                  <interp inst="t18300916-223-defend1831" type="surname" value="BAKER"></interp>
                     <interp inst="t18300916-223-defend1831" type="given" value="HENRY"></interp>
