<div1 type="trialAccount" id="t17460409-6">
               <interp inst="t17460409-6" type="collection" value="BAILEY"></interp>
               <interp inst="t17460409-6" type="year" value="1746"></interp>
               <interp inst="t17460409-6" type="uri" value="sessionsPapers/17460409"></interp>
