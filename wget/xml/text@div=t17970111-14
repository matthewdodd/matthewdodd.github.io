                  <persName id="t17970111-14-person215">
                  ISAAC
                   BAKER
               <interp inst="t17970111-14-person215" type="surname" value="BAKER"></interp>
                     <interp inst="t17970111-14-person215" type="given" value="ISAAC"></interp>
