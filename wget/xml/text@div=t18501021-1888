               <p>
                  <hi rend="largeCaps">HAYNES</hi> pleaded</p>
               <p>
                  <hi rend="smallCaps">
                     <rs id="t18501021-1888-verdict-1" type="verdictDescription">
                        <interp inst="t18501021-1888-verdict-1" type="verdictCategory" value="guilty"></interp>
                        <interp inst="t18501021-1888-verdict-1" type="verdictSubcategory" value="pleadedGuilty"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18501021-1888-punishment-173" type="punishmentDescription">
                        <interp inst="t18501021-1888-punishment-173" type="punishmentCategory" value="imprison"></interp>
