                  <persName id="t18211024-108-person1010">
                  GEORGE 
                  GRIST
               <interp inst="t18211024-108-person1010" type="surname" value="GRIST"></interp>
                     <interp inst="t18211024-108-person1010" type="given" value="GEORGE"></interp>
                     <interp inst="t18211024-108-person1010" type="gender" value="male"></interp>
