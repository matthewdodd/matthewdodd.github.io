                  <persName id="t17680907-41-person433">
                  John 
                  Price 
               <interp inst="t17680907-41-person433" type="surname" value="Price"></interp>
                     <interp inst="t17680907-41-person433" type="given" value="John"></interp>
                     <interp inst="t17680907-41-person433" type="gender" value="male"></interp>
