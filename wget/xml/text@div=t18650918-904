                        <interp inst="t18650918-904-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18650918-904-punishment-82" type="punishmentDescription">
                        <interp inst="t18650918-904-punishment-82" type="punishmentCategory" value="imprison"></interp>
