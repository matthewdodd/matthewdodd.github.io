                  , <rs id="t17970712-56-viclabel312" type="occupation">Bart.</rs>
                     <join result="persNameOccupation" targOrder="Y" targets="t17970712-56-victim595 t17970712-56-viclabel312"></join> 
                  
                     
                        <persName id="t17970712-56-victim597" type="victimName">
                           John 
                           Grant
                        <interp inst="t17970712-56-victim597" type="surname" value="Grant"></interp>
