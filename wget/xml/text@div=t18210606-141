             and 
               
                  <persName id="t18210606-141-defend1504" type="defendantName">
                     THOMAS 
                     BALLARD
                  <interp inst="t18210606-141-defend1504" type="surname" value="BALLARD"></interp>
                     <interp inst="t18210606-141-defend1504" type="given" value="THOMAS"></interp>
                     <interp inst="t18210606-141-defend1504" type="gender" value="male"></interp>
