                  <persName id="t17931030-45-person479">
                  THOMAS
                   DIBBLE
               <interp inst="t17931030-45-person479" type="surname" value="DIBBLE"></interp>
                     <interp inst="t17931030-45-person479" type="given" value="THOMAS"></interp>
