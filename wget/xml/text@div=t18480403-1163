                     <interp inst="def1-1163-18480403" type="given" value="WILLIAM"></interp>
                     <hi rend="largeCaps">WILLIAM LOADER</hi>
                  </persName>
                  <rs id="t18480403-1163-offence-1" type="offenceDescription">
                     <interp inst="t18480403-1163-offence-1" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18480403-1163-offence-1" type="offenceSubcategory" value="simpleLarceny"></interp>, stealing 1 iron railway chair, value 3<hi rend="italic">s</hi>.; the goods of the <persName id="t18480403-name-1054" type="victimName">
                        <interp inst="t18480403-name-1054" type="gender" value="indeterminate"></interp>
                        <join result="offenceVictim" targOrder="Y" targets="t18480403-1163-offence-1 t18480403-name-1054"></join>London, Brighton, and South Coast Railway Company</persName>.</rs>
