                     <interp inst="t18160214-55-off322" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18160214-55-off322" type="offenceSubcategory" value="embezzlement"></interp>
               he, being <rs id="t18160214-55-deflabel323" type="occupation">servant</rs>
                     <join result="persNameOccupation" targOrder="Y" targets="t18160214-55-defend632 t18160214-55-deflabel323"></join> to 
                     
                        <persName id="t18160214-55-victim634" type="victimName">
                           Charles Richard Constantine 
                           Gould
                        <interp inst="t18160214-55-victim634" type="surname" value="Gould"></interp>
                        <interp inst="t18160214-55-victim634" type="given" value="Charles Richard Constantine"></interp>
