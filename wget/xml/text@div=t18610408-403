                        <interp inst="t18610408-403-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18610408-403-punishment-112" type="punishmentDescription">
                        <interp inst="t18610408-403-punishment-112" type="punishmentCategory" value="imprison"></interp>
