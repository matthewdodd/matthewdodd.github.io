                        <interp inst="t18690816-789-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>—<hi rend="italic">
                     <rs id="t18690816-789-punishment-88" type="punishmentDescription">
