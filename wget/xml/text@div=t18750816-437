                        <interp inst="t18750816-437-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>—<hi rend="italic">
                     <rs id="t18750816-437-punishment-22" type="punishmentDescription">
                        <interp inst="t18750816-437-punishment-22" type="punishmentCategory" value="imprison"></interp>
