                  <join result="persNameOccupation" targOrder="Y" targets="t17871212-35-victim392 t17871212-35-viclabel177"></join> 
            
                  <persName id="t17871212-35-victim392" type="victimName">George Augustus Frederick <rs id="t17871212-35-viclabel178" type="occupation">Prince of Wales</rs>
