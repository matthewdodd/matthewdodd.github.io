                     <interp inst="t18280221-148-off790" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18280221-148-off790" type="offenceSubcategory" value="simpleLarceny"></interp>
               stealing, on the <rs id="t18280221-148-cd791" type="crimeDate">20th of January</rs>
                     <join result="offenceCrimeDate" targOrder="Y" targets="t18280221-148-off790 t18280221-148-cd791"></join>, 1 silver spoon, value 10s.
            </rs>, the goods of 
               <persName id="t18280221-148-victim926" type="victimName">
                  Edward 
                  Littledale
               <interp inst="t18280221-148-victim926" type="surname" value="Littledale"></interp>
                     <interp inst="t18280221-148-victim926" type="given" value="Edward"></interp>
