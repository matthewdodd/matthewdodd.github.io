                        <interp inst="t18770205-249-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>—<hi rend="italic">
                     <rs id="t18770205-249-punishment-37" type="punishmentDescription">
