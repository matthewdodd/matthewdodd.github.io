                        <join result="offenceVictim" targOrder="Y" targets="t18500916-1625-offence-1 t18500916-name-342"></join>George Thomas Goodbehere</persName>; and </rs>
                  <persName id="def2-1625-18500916" type="defendantName">
                     <interp inst="def2-1625-18500916" type="gender" value="male"></interp>
                     <interp inst="def2-1625-18500916" type="age" value="16"></interp>
