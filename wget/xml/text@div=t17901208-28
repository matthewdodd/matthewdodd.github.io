             and 
               
                  <persName id="t17901208-28-defend310" type="defendantName">
                     GEORGE 
                     PLATT
                  <interp inst="t17901208-28-defend310" type="surname" value="PLATT"></interp>
                     <interp inst="t17901208-28-defend310" type="given" value="GEORGE"></interp>
                     <interp inst="t17901208-28-defend310" type="gender" value="male"></interp>
