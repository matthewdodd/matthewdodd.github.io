             and 
               
                  <persName id="t18240603-39-defend383" type="defendantName">
                     ANN 
                     STEVENS
                  <interp inst="t18240603-39-defend383" type="surname" value="STEVENS"></interp>
                     <interp inst="t18240603-39-defend383" type="given" value="ANN"></interp>
                     <interp inst="t18240603-39-defend383" type="gender" value="female"></interp>
