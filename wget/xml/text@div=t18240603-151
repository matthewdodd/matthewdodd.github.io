                  <persName id="t18240603-151-person1301">
                  SAMUEL 
                  SMITH
               <interp inst="t18240603-151-person1301" type="surname" value="SMITH"></interp>
                     <interp inst="t18240603-151-person1301" type="given" value="SAMUEL"></interp>
                     <interp inst="t18240603-151-person1301" type="gender" value="male"></interp>
