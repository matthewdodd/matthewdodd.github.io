               <p>1374. 
               <persName id="t18180909-314-defend2173" type="defendantName">
                  RICHARD 
                  GERRING
               <interp inst="t18180909-314-defend2173" type="surname" value="GERRING"></interp>
                     <interp inst="t18180909-314-defend2173" type="given" value="RICHARD"></interp>
