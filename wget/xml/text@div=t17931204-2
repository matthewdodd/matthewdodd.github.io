               <p>
            
                  <persName id="t17931204-2-person67">
                  THOMAS
                   WELLS
               <interp inst="t17931204-2-person67" type="surname" value="WELLS"></interp>
                     <interp inst="t17931204-2-person67" type="given" value="THOMAS"></interp>
