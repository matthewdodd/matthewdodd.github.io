                        <interp inst="t18370227-name-359" type="given" value="CHRISTIAN"></interp>
                        <join result="offenceVictim" targOrder="Y" targets="t18370227-728-offence-1 t18370227-name-359"></join>Christian Stultz</persName>.</rs>
