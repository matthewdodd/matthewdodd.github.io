                  <hi rend="largeCaps">MORTON</hi>—<hi rend="smallCaps">
                     <rs id="t18571214-138-verdict-1" type="verdictDescription">
                        <interp inst="t18571214-138-verdict-1" type="verdictCategory" value="guilty"></interp>
