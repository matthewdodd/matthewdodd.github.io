               <persName id="t18270913-112-person1202">
                  Zackariah 
                  Brewster
               <interp inst="t18270913-112-person1202" type="surname" value="Brewster"></interp>
                     <interp inst="t18270913-112-person1202" type="given" value="Zackariah"></interp>
                     <interp inst="t18270913-112-person1202" type="gender" value="female"></interp>
