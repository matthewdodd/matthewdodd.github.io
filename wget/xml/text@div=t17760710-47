               <p>558. 
               
                  <persName id="t17760710-47-defend412" type="defendantName">
                     CHARLES
                      WIGG
                  <interp inst="t17760710-47-defend412" type="surname" value="WIGG"></interp>
                     <interp inst="t17760710-47-defend412" type="given" value="CHARLES"></interp>
                     <interp inst="t17760710-47-defend412" type="gender" value="male"></interp>
