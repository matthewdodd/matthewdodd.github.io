            , 
               
                  <persName id="t17910112-1-defend46" type="defendantName">
                     GEORGE 
                     COOKE
                  <interp inst="t17910112-1-defend46" type="surname" value="COOKE"></interp>
                     <interp inst="t17910112-1-defend46" type="given" value="GEORGE"></interp>
