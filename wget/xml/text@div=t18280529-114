               <persName id="t18280529-114-defend696" type="defendantName">
                  BARNABUS 
                  ALLEN
               <interp inst="t18280529-114-defend696" type="surname" value="ALLEN"></interp>
                     <interp inst="t18280529-114-defend696" type="given" value="BARNABUS"></interp>
