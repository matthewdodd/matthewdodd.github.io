                        <interp inst="t17790217-32-person372" type="gender" value="female"></interp>
                     </persName>
                  , <rs id="t17790217-32-viclabel181" type="occupation">widow</rs>
                     <join result="persNameOccupation" targOrder="Y" targets="t17790217-32-victim374 t17790217-32-viclabel181"></join>, in her dwelling-house
