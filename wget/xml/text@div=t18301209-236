                     <interp inst="t18301209-236-off1328" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18301209-236-off1328" type="offenceSubcategory" value="simpleLarceny"></interp>
               stealing, on the <rs id="t18301209-236-cd1329" type="crimeDate">7th of December</rs>
                     <join result="offenceCrimeDate" targOrder="Y" targets="t18301209-236-off1328 t18301209-236-cd1329"></join>, 50 lbs. weight of iron, value 5s.
            </rs>, the goods of the 
               <persName id="t18301209-236-victim1995" type="victimName">
                     <rs id="t18301209-236-viclabel1330" type="occupation">Independent Gas-light and Coke Company</rs>
                     <join result="persNameOccupation" targOrder="Y" targets="t18301209-236-victim1995 t18301209-236-viclabel1330"></join>
