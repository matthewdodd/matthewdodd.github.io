               <p>
            
                  <persName id="t18120115-88-person906">
                  WILLIAM 
                  HENRY HOBBS
               <interp inst="t18120115-88-person906" type="surname" value="HENRY HOBBS"></interp>
                     <interp inst="t18120115-88-person906" type="given" value="WILLIAM"></interp>
                     <interp inst="t18120115-88-person906" type="gender" value="male"></interp>
