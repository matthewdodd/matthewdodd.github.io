                        <interp inst="t18750111-125-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>—<hi rend="italic">
                     <rs id="t18750111-125-punishment-20" type="punishmentDescription">
