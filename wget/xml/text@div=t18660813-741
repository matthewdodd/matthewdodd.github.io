                        <interp inst="t18660813-741-verdict-2" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18660813-741-punishment-78" type="punishmentDescription">
                        <interp inst="t18660813-741-punishment-78" type="punishmentCategory" value="imprison"></interp>
