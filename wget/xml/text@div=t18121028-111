             and 
               
                  <persName id="t18121028-111-defend1111" type="defendantName">
                     JOHN 
                     THOMPSON
                  <interp inst="t18121028-111-defend1111" type="surname" value="THOMPSON"></interp>
                     <interp inst="t18121028-111-defend1111" type="given" value="JOHN"></interp>
