                  <persName id="t17740706-9-person114">
                  Richard
                   Newton
               <interp inst="t17740706-9-person114" type="surname" value="Newton"></interp>
                     <interp inst="t17740706-9-person114" type="given" value="Richard"></interp>
                     <interp inst="t17740706-9-person114" type="gender" value="male"></interp>
