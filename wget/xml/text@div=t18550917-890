                  <hi rend="largeCaps">FARRELL</hi>—<hi rend="smallCaps">
                     <rs id="t18550917-890-verdict-3" type="verdictDescription">
                        <interp inst="t18550917-890-verdict-3" type="verdictCategory" value="notGuilty"></interp>
