                  <persName id="t18140706-101-person841">
                  CHARLES 
                  BARNS
               <interp inst="t18140706-101-person841" type="surname" value="BARNS"></interp>
                     <interp inst="t18140706-101-person841" type="given" value="CHARLES"></interp>
