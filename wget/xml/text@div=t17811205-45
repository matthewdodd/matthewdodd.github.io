                     <interp inst="t17811205-45-person527" type="gender" value="male"></interp>
                  </persName>
            , his <rs id="t17811205-45-punish240" type="punishmentDescription">
                     <interp inst="t17811205-45-punish240" type="punishmentCategory" value="miscPunish"></interp>
