                  <persName id="t17810425-56-person553">
                  JAMES
                   WRIGHT
               <interp inst="t17810425-56-person553" type="surname" value="WRIGHT"></interp>
                     <interp inst="t17810425-56-person553" type="given" value="JAMES"></interp>
                     <interp inst="t17810425-56-person553" type="gender" value="male"></interp>
