                        <interp inst="t18600917-818-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18600917-818-punishment-76" type="punishmentDescription">
                        <interp inst="t18600917-818-punishment-76" type="punishmentCategory" value="imprison"></interp>
