                     <interp inst="def1-716-18520705" type="given" value="CHARLES"></interp>
                     <hi rend="largeCaps">CHARLES FLATMAN</hi>
                  </persName> and <persName id="def2-716-18520705" type="defendantName">
                     <interp inst="def2-716-18520705" type="gender" value="male"></interp>
                     <interp inst="def2-716-18520705" type="age" value="22"></interp>
