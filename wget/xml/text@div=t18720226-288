                     <join result="defendantPunishment" targOrder="Y" targets="def2-288-18720226 t18720226-288-punishment-60"></join>
                     <hi rend="italic">One Month's Imprisonment,</hi>
                  </rs>
                  <hi rend="italic"> and </hi>
                  <rs id="t18720226-288-punishment-61" type="punishmentDescription">
