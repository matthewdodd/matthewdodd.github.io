            , of <placeName id="t17320419-5-defloc24">Aldgate</placeName>
                  <interp inst="t17320419-5-defloc24" type="placeName" value="Aldgate"></interp>
                  <interp inst="t17320419-5-defloc24" type="type" value="defendantHome"></interp>
                  <join result="persNamePlace" targOrder="Y" targets="t17320419-5-defend51 t17320419-5-defloc24"></join>, was a 2d time indicted for <rs id="t17320419-5-off25" type="offenceDescription">
                     <interp inst="t17320419-5-off25" type="offenceCategory" value="violentTheft"></interp>
                     <interp inst="t17320419-5-off25" type="offenceSubcategory" value="highwayRobbery"></interp>
               assaulting 
                     
                        <persName id="t17320419-5-victim53" type="victimName">
                           John 
                           Davison 
                        <interp inst="t17320419-5-victim53" type="surname" value="Davison"></interp>
