                        <interp inst="def2-852-18470301" type="given" value="MARGARET"></interp> MARGARET HOARE</persName>
                  </hi>, and <persName id="def3-852-18470301" type="defendantName">
                     <interp inst="def3-852-18470301" type="gender" value="female"></interp>
                     <interp inst="def3-852-18470301" type="surname" value="ALBURY"></interp>
