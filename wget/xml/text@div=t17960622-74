                        <interp inst="t17960622-74-victim816" type="gender" value="male"></interp>
                     </persName>
                     
                  , the <rs id="t17960622-74-viclabel419" type="occupation">elder</rs>
                     <join result="persNameOccupation" targOrder="Y" targets="t17960622-74-victim816 t17960622-74-viclabel419"></join>, 
                     
                        <persName id="t17960622-74-victim818" type="victimName">
                           John 
                           Champion
