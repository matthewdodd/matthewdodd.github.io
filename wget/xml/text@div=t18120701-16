               <p>532. 
               
                  <persName id="t18120701-16-defend234" type="defendantName">
                     JOHN 
                     BOWMAN
                  <interp inst="t18120701-16-defend234" type="surname" value="BOWMAN"></interp>
                     <interp inst="t18120701-16-defend234" type="given" value="JOHN"></interp>
