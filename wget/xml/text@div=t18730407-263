               <interp inst="t18730407-263" type="date" value="18730407"></interp>
               <join result="criminalCharge" id="t18730407-263-charge-1" targOrder="Y" targets="def1-263-18730407 t18730407-263-offence-1 t18730407-263-verdict-2"></join>
