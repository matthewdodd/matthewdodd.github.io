             and 
               
                  <persName id="t18210411-147-defend1505" type="defendantName">
                     JAMES 
                     MOORE
                  <interp inst="t18210411-147-defend1505" type="surname" value="MOORE"></interp>
                     <interp inst="t18210411-147-defend1505" type="given" value="JAMES"></interp>
                     <interp inst="t18210411-147-defend1505" type="gender" value="male"></interp>
