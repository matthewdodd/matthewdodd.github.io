<div1 type="trialAccount" id="t16891009-29">
               <interp inst="t16891009-29" type="collection" value="BAILEY"></interp>
               <interp inst="t16891009-29" type="year" value="1689"></interp>
               <interp inst="t16891009-29" type="uri" value="sessionsPapers/16891009"></interp>
