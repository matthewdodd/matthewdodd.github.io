                        <interp inst="t18250915-184-victim972" type="gender" value="male"></interp>
                     </persName>
                  , their master
            </rs>; and 
               <persName id="t18250915-184-defend973" type="defendantName">
                  WILLIAM 
                  SOMERFIELD
               <interp inst="t18250915-184-defend973" type="surname" value="SOMERFIELD"></interp>
                     <interp inst="t18250915-184-defend973" type="given" value="WILLIAM"></interp>
