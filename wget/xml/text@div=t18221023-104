               <p>1591. 
               
                  <persName id="t18221023-104-defend1078" type="defendantName">
                     CONRAD 
                     STEIGER
                  <interp inst="t18221023-104-defend1078" type="surname" value="STEIGER"></interp>
                     <interp inst="t18221023-104-defend1078" type="given" value="CONRAD"></interp>
