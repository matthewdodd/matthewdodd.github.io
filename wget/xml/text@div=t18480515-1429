                     <rs id="t18480515-1429-verdict-1" type="verdictDescription">
                        <interp inst="t18480515-1429-verdict-1" type="verdictCategory" value="guilty"></interp>
                        <interp inst="t18480515-1429-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>.</hi> Aged 32.—<hi rend="italic">
                     <rs id="t18480515-1429-punishment-235" type="punishmentDescription">
                        <interp inst="t18480515-1429-punishment-235" type="punishmentCategory" value="imprison"></interp>
