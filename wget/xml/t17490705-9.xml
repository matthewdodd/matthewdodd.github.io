<div1 type="trialAccount" id="t17490705-9">
               <interp inst="t17490705-9" type="collection" value="BAILEY"></interp>
               <interp inst="t17490705-9" type="year" value="1749"></interp>
               <interp inst="t17490705-9" type="uri" value="sessionsPapers/17490705"></interp>
