                     <hi rend="largeCaps">GEORGE OWEN</hi> (20)</persName>, <persName id="def3-211-18770108" type="defendantName">
                     <interp inst="def3-211-18770108" type="gender" value="male"></interp>
                     <interp inst="def3-211-18770108" type="age" value="24"></interp>
