            . I <rs id="t18310407-233-viclabel1252" type="occupation">keep <placeName id="t18310407-233-crimeloc1253">Fladong's-hotel, Oxford-street</placeName>
                     <interp inst="t18310407-233-crimeloc1253" type="placeName" value="Fladong's-hotel, Oxford-street"></interp>
