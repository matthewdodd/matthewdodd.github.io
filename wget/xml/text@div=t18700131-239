                        <interp inst="t18700131-239-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18700131-239-punishment-51" type="punishmentDescription">
                        <interp inst="t18700131-239-punishment-51" type="punishmentCategory" value="imprison"></interp>
