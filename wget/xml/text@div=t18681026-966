                        <interp inst="t18681026-966-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>—<hi rend="italic">
                     <rs id="t18681026-966-punishment-68" type="punishmentDescription">
                        <interp inst="t18681026-966-punishment-68" type="punishmentCategory" value="imprison"></interp>
