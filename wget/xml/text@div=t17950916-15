               <p>388. 
               
                  <persName id="t17950916-15-defend189" type="defendantName">
                     WILLIAM 
                     SINFIELD
                  <interp inst="t17950916-15-defend189" type="surname" value="SINFIELD"></interp>
                     <interp inst="t17950916-15-defend189" type="given" value="WILLIAM"></interp>
