                        <interp inst="t18771022-780-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>—<hi rend="italic">
                     <rs id="t18771022-780-punishment-28" type="punishmentDescription">
                        <interp inst="t18771022-780-punishment-28" type="punishmentCategory" value="imprison"></interp>
