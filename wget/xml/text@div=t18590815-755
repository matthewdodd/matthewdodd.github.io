                     <hi rend="largeCaps">JAMES ROBINSON</hi> (30)</persName>
                  <rs id="t18590815-755-offence-1" type="offenceDescription">
                     <interp inst="t18590815-755-offence-1" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18590815-755-offence-1" type="offenceSubcategory" value="burglary"></interp>, Burglary in the dwelling-house of <persName id="t18590815-name-219" type="victimName">
                        <interp inst="t18590815-name-219" type="gender" value="male"></interp>
                        <interp inst="t18590815-name-219" type="surname" value="DEAL"></interp>
