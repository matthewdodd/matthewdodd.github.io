                     <hi rend="largeCaps">MAURICE HOGAN</hi> (21)</persName>, and <persName id="def2-935-18691025" type="defendantName">
                     <interp inst="def2-935-18691025" type="gender" value="male"></interp>
                     <interp inst="def2-935-18691025" type="age" value="20"></interp>
