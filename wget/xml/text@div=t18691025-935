                     <interp inst="def2-935-18691025" type="given" value="CHARLES"></interp>
                     <hi rend="largeCaps">CHARLES REFFELL</hi> (20)</persName>
                  <rs id="t18691025-935-offence-1" type="offenceDescription">
                     <interp inst="t18691025-935-offence-1" type="offenceCategory" value="violentTheft"></interp>
                     <interp inst="t18691025-935-offence-1" type="offenceSubcategory" value="robbery"></interp>, Robbery on <persName id="t18691025-name-236" type="victimName">
                        <interp inst="t18691025-name-236" type="gender" value="female"></interp>
                        <interp inst="t18691025-name-236" type="surname" value="NEWCOMBE"></interp>
