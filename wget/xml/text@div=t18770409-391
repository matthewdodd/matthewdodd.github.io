               <p>
                  <hi rend="largeCaps">WILLIAM KURR, BALE</hi>,</p>
               <xptr type="pageFacsimile" doc="187704090125"></xptr>
               <p>
                  <hi rend="italic">and</hi> 
                  <hi rend="largeCaps">FREDERICK KURR</hi>—<hi rend="italic">
                     <rs id="t18770409-391-punishment-54" type="punishmentDescription">
                        <interp inst="t18770409-391-punishment-54" type="punishmentCategory" value="imprison"></interp>
                        <interp inst="t18770409-391-punishment-54" type="punishmentSubcategory" value="penalServitude"></interp>
                        <join result="defendantPunishment" targOrder="Y" targets="def2-391-18770409 t18770409-391-punishment-54"></join>
                        <join result="defendantPunishment" targOrder="Y" targets="def3-391-18770409 t18770409-391-punishment-54"></join>
                        <join result="defendantPunishment" targOrder="Y" targets="def4-391-18770409 t18770409-391-punishment-54"></join>Ten Years' Penal Servitude;</rs>
                  </hi> 
                  <hi rend="largeCaps">MURRAY</hi>—<hi rend="italic">
