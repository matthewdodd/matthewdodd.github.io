                     <persName id="t18270712-44-person342">
                        Theodosia 
                        O'Keeffe
                     <interp inst="t18270712-44-person342" type="surname" value="O'Keeffe"></interp>
                        <interp inst="t18270712-44-person342" type="given" value="Theodosia"></interp>
                        <interp inst="t18270712-44-person342" type="gender" value="female"></interp>
