                        <join result="offenceVictim" targOrder="Y" targets="t18470920-2253-offence-1 t18470920-name-1281"></join>William Kinnaird Jenkins</persName>, her master; and </rs>
                  <persName id="def2-2253-18470920" type="defendantName">
                     <interp inst="def2-2253-18470920" type="gender" value="female"></interp>
                     <interp inst="def2-2253-18470920" type="age" value="27"></interp>
                     <interp inst="def2-2253-18470920" type="surname" value="ASHBERRY"></interp>
                     <interp inst="def2-2253-18470920" type="given" value="SARAH"></interp>
