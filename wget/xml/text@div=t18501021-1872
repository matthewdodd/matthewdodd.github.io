                  <rs id="t18501021-1872-offence-1" type="offenceDescription">
                     <interp inst="t18501021-1872-offence-1" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18501021-1872-offence-1" type="offenceSubcategory" value="simpleLarceny"></interp>, stealing 1 pair of trowsers, value 10<hi rend="italic">s</hi>.; the goods of <persName id="t18501021-name-964" type="victimName">
                        <interp inst="t18501021-name-964" type="gender" value="male"></interp>
                        <interp inst="t18501021-name-964" type="surname" value="BARSHAM"></interp>
