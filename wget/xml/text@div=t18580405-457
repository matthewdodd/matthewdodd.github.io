                        <interp inst="t18580405-457-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18580405-457-punishment-96" type="punishmentDescription">
                        <interp inst="t18580405-457-punishment-96" type="punishmentCategory" value="imprison"></interp>
