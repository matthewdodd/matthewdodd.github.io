                     <interp inst="def1-662-18790630" type="given" value="ALFRED"></interp>
                     <hi rend="largeCaps">ALFRED PATTERSON</hi> (35)</persName>, <persName id="def2-662-18790630" type="defendantName">
                     <interp inst="def2-662-18790630" type="gender" value="male"></interp>
