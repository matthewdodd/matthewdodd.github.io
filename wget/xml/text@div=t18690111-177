                     <interp inst="def1-177-18690111" type="surname" value="LINDSAY"></interp>
                     <interp inst="def1-177-18690111" type="given" value="ANDREW STEWART"></interp>
                     <hi rend="largeCaps">ANDREW STEWART LINDSAY</hi> (28)</persName>
                  <rs id="t18690111-177-offence-1" type="offenceDescription">
                     <interp inst="t18690111-177-offence-1" type="offenceCategory" value="theft"></interp>
                     <interp inst="t18690111-177-offence-1" type="offenceSubcategory" value="stealingFromMaster"></interp>, Stealing 2001. of <persName id="t18690111-name-107" type="victimName">
                        <interp inst="t18690111-name-107" type="gender" value="male"></interp>
                        <interp inst="t18690111-name-107" type="surname" value="DUNCAN"></interp>
