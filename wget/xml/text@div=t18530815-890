                     <hi rend="largeCaps">JEAN LE GRAND</hi> (<hi rend="italic">alias <rs id="t18530815-alias-1" type="alias">
                           <join result="nameAlias" targOrder="Y" targets="def1-890-18530815 t18530815-alias-1"></join>BOURMONT</rs>
