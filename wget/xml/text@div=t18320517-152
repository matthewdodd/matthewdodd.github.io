                  , his master
            </rs>; and 
               
                  <persName id="t18320517-152-defend1274" type="defendantName">
                     JOHN 
                     LEWER
                  <interp inst="t18320517-152-defend1274" type="surname" value="LEWER"></interp>
                     <interp inst="t18320517-152-defend1274" type="given" value="JOHN"></interp>
