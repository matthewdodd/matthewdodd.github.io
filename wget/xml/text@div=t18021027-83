            , and 
               
                  <persName id="t18021027-83-defend755" type="defendantName">
                     WILLIAM 
                     STAFFORD
                  <interp inst="t18021027-83-defend755" type="surname" value="STAFFORD"></interp>
                     <interp inst="t18021027-83-defend755" type="given" value="WILLIAM"></interp>
                     <interp inst="t18021027-83-defend755" type="gender" value="male"></interp>
