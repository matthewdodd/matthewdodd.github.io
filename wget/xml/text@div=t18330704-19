                  , his master
            </rs>; and 
               
                  <persName id="t18330704-19-defend288" type="defendantName">
                     JAMES 
                     GODWIN
                  <interp inst="t18330704-19-defend288" type="surname" value="GODWIN"></interp>
                     <interp inst="t18330704-19-defend288" type="given" value="JAMES"></interp>
                     <interp inst="t18330704-19-defend288" type="gender" value="male"></interp>
