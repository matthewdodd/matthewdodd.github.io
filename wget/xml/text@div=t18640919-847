               <interp inst="t18640919-847" type="uri" value="sessionsPapers/18640919"></interp>
               <interp inst="t18640919-847" type="date" value="18640919"></interp>
               <join result="criminalCharge" id="t18640919-847-charge-1" targOrder="Y" targets="def1-847-18640919 t18640919-847-offence-1 t18640919-847-verdict-1"></join>
