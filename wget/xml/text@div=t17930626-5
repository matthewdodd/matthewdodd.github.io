               <p>492. 
               <persName id="t17930626-5-defend83" type="defendantName">
                  
                     JOHN 
                     RICHARDS
                   otherwise <rs id="t17930626-5-alias-1" type="alias">
                        <join result="nameAlias" targOrder="Y" targets="t17930626-5-defend83 t17930626-5-alias-1"></join>RICHARDSON</rs>
                     <interp inst="t17930626-5-defend83" type="surname" value="RICHARDS"></interp>
