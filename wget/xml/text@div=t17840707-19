               <p>679. 
               
                  <persName id="t17840707-19-defend259" type="defendantName">
                     JAMES 
                     STODDARD
                  <interp inst="t17840707-19-defend259" type="surname" value="STODDARD"></interp>
                     <interp inst="t17840707-19-defend259" type="given" value="JAMES"></interp>
                     <interp inst="t17840707-19-defend259" type="gender" value="male"></interp>
