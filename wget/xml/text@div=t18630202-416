                        <interp inst="t18630202-416-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18630202-416-punishment-70" type="punishmentDescription">
                        <interp inst="t18630202-416-punishment-70" type="punishmentCategory" value="imprison"></interp>
