                         and Elizabeth
                         the 
                        <rs id="t17790707-48-viclabel241" type="occupation">daughter</rs>
                        <join result="persNameOccupation" targOrder="Y" targets="t17790707-48-victim511 t17790707-48-viclabel241"></join>
