             and 
               <persName id="t18240603-227-victim1949" type="victimName">
                  John 
                  Spurgeon
               <interp inst="t18240603-227-victim1949" type="surname" value="Spurgeon"></interp>
                     <interp inst="t18240603-227-victim1949" type="given" value="John"></interp>
