                     <interp inst="t18020113-56-victim594" type="gender" value="male"></interp>
                  </persName>
               
            , 
               
                  <persName id="t18020113-56-victim596" type="victimName">
                     John 
                     Twalin
                  <interp inst="t18020113-56-victim596" type="surname" value="Twalin"></interp>
