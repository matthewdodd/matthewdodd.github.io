                        <interp inst="t18370227-name-919" type="gender" value="male"></interp>
                        <interp inst="t18370227-name-919" type="surname" value="BAKER"></interp>
                        <interp inst="t18370227-name-919" type="given" value="FREDERICK"></interp>
                        <join result="offenceVictim" targOrder="Y" targets="t18370227-821-offence-1 t18370227-name-919"></join>Frederick Baker</persName>.</rs>
