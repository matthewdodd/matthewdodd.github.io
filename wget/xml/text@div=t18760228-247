                     <interp inst="t18760228-247-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>
                     <hi rend="smallCaps">GUILTY</hi> 
                     <hi rend="italic">on second and third counts only.</hi>
                  </rs>  
