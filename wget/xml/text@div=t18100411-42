               <p>302. 
               
                  <persName id="t18100411-42-defend388" type="defendantName">
                     JOHN 
                     INGRAM
                  <interp inst="t18100411-42-defend388" type="surname" value="INGRAM"></interp>
                     <interp inst="t18100411-42-defend388" type="given" value="JOHN"></interp>
