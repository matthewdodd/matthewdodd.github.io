                        <interp inst="t18210411-20-victim305" type="gender" value="male"></interp>
                        <join result="offenceVictim" targOrder="Y" targets="t18210411-20-off116 t18210411-20-victim305"></join>
                     </persName>
                     
                  , at <placeName id="t18210411-20-crimeloc117">St. Marylebone</placeName>
                     <interp inst="t18210411-20-crimeloc117" type="placeName" value="St. Marylebone"></interp>
                     <interp inst="t18210411-20-crimeloc117" type="type" value="crimeLocation"></interp>
                     <join result="offencePlace" targOrder="Y" targets="t18210411-20-off116 t18210411-20-crimeloc117"></join>, about four o'clock in the afternoon of the <rs id="t18210411-20-cd118" type="crimeDate">6th of March</rs>
                     <join result="offenceCrimeDate" targOrder="Y" targets="t18210411-20-off116 t18210411-20-cd118"></join>, the said 
                     <persName id="t18210411-20-person306">
                        Ephraim 
                        Harris
