                     <interp inst="def5-168-18790113" type="surname" value="ROCKE"></interp>
                     <interp inst="def5-168-18790113" type="given" value="ALFRED BEAL"></interp>
                     <hi rend="largeCaps">ALFRED BEAL ROCKE</hi> (45)</persName>, <persName id="def6-168-18790113" type="defendantName">
                     <interp inst="def6-168-18790113" type="gender" value="male"></interp>
                     <interp inst="def6-168-18790113" type="age" value="26"></interp>
                     <interp inst="def6-168-18790113" type="surname" value="REEVES"></interp>
                     <interp inst="def6-168-18790113" type="given" value="FRANCIS CARLTON"></interp>
                     <hi rend="largeCaps">FRANCIS CARLTON REEVES</hi> (26)</persName>, and <persName id="def7-168-18790113" type="defendantName">
                     <interp inst="def7-168-18790113" type="gender" value="male"></interp>
                     <interp inst="def7-168-18790113" type="age" value="30"></interp>
