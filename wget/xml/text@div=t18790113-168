                     <hi rend="largeCaps">JAMES BEAUMONT</hi>, <hi rend="italic">alias</hi> 
                     <rs id="t18790113-alias-2" type="alias">
                        <join result="nameAlias" targOrder="Y" targets="def1-168-18790113 t18790113-alias-2"></join>
                        <hi rend="largeCaps">HUGHES</hi>
                     </rs> (34)</persName>, <persName id="def2-168-18790113" type="defendantName">
