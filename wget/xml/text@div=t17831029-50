                  , <rs id="t17831029-50-viclabel269" type="occupation">widow</rs>
                     <join result="persNameOccupation" targOrder="Y" targets="t17831029-50-victim760 t17831029-50-viclabel269"></join>, in the dwelling-house of 
                     <persName id="t17831029-50-person761">
                        Joseph
                         Bengough
                     <interp inst="t17831029-50-person761" type="surname" value="Bengough"></interp>
