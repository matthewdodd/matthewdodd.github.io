               <p>
                  <hi rend="smallCaps">
                     <persName id="t18780311-name-438" type="witnessName">
                        <interp inst="t18780311-name-438" type="gender" value="male"></interp>
                        <interp inst="t18780311-name-438" type="surname" value="MICHELE"></interp>
