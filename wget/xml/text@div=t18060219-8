                     <interp inst="t18060219-8-verdict40" type="verdictCategory" value="guilty"></interp>
                     <interp inst="t18060219-8-verdict40" type="verdictSubcategory" value="withRecommendation"></interp>
               GUILTY
            </rs> - <rs id="t18060219-8-punish41" type="punishmentDescription">
