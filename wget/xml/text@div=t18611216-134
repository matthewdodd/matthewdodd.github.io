                        <interp inst="t18611216-134-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.*—<hi rend="italic">
                     <rs id="t18611216-134-punishment-48" type="punishmentDescription">
                        <interp inst="t18611216-134-punishment-48" type="punishmentCategory" value="imprison"></interp>
