                        <interp inst="t18630511-710-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18630511-710-punishment-55" type="punishmentDescription">
                        <interp inst="t18630511-710-punishment-55" type="punishmentCategory" value="imprison"></interp>
