               <p>1286. 
               <persName id="t18270531-273-defend1501" type="defendantName">
                  JOHN CHARLES 
                  PRINCE
               <interp inst="t18270531-273-defend1501" type="surname" value="PRINCE"></interp>
                     <interp inst="t18270531-273-defend1501" type="given" value="JOHN CHARLES"></interp>
