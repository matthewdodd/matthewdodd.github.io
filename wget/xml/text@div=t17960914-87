               <p>544. 
               
                  <persName id="t17960914-87-defend845" type="defendantName">
                     BARNARD 
                     BARNARD
                  <interp inst="t17960914-87-defend845" type="surname" value="BARNARD"></interp>
                     <interp inst="t17960914-87-defend845" type="given" value="BARNARD"></interp>
