                        <interp inst="t18800112-171-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18800112-171-punishment-29" type="punishmentDescription">
                        <interp inst="t18800112-171-punishment-29" type="punishmentCategory" value="imprison"></interp>
