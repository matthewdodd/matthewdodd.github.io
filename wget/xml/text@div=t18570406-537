                        <interp inst="t18570406-537-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>.—<hi rend="italic">
                     <rs id="t18570406-537-punishment-87" type="punishmentDescription">
                        <interp inst="t18570406-537-punishment-87" type="punishmentCategory" value="imprison"></interp>
