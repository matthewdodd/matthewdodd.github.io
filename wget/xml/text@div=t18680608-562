                        <join result="offenceVictim" targOrder="Y" targets="t18680608-562-offence-1 t18680608-name-394"></join>Christopher Edwards</persName> and stealing 12.<hi rend="italic">s</hi>. 6<hi rend="italic">d</hi>
                  </rs>
