                  </persName>
               
             and 
               
                  <persName id="t18290115-230-defend1789" type="defendantName">
                     THOMAS 
                     LINDSEY
                  <interp inst="t18290115-230-defend1789" type="surname" value="LINDSEY"></interp>
                     <interp inst="t18290115-230-defend1789" type="given" value="THOMAS"></interp>
