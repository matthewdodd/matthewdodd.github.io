                     <interp inst="t18490226-661-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>
                     <hi rend="smallCaps">GUILTY</hi> Aged 15.—</rs> 
                  <rs id="t18490226-661-punishment-42" type="punishmentDescription">
