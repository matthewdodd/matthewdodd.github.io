                     <interp inst="def1-143-18700110" type="surname" value="THOMAS"></interp>
                     <interp inst="def1-143-18700110" type="given" value="JOHN"></interp>
                     <hi rend="largeCaps">JOHN THOMAS</hi> (38)</persName>, and <persName id="def2-143-18700110" type="defendantName">
                     <interp inst="def2-143-18700110" type="gender" value="female"></interp>
                     <interp inst="def2-143-18700110" type="age" value="30"></interp>
                     <interp inst="def2-143-18700110" type="surname" value="BROWN"></interp>
                     <interp inst="def2-143-18700110" type="given" value="MARY ANN"></interp>
                     <hi rend="largeCaps">MARY ANN BROWN</hi> (30)</persName>
                  <rs id="t18700110-143-offence-1" type="offenceDescription">
                     <interp inst="t18700110-143-offence-1" type="offenceCategory" value="royalOffences"></interp>
                     <interp inst="t18700110-143-offence-1" type="offenceSubcategory" value="coiningOffences"></interp>, for a like offence.</rs>
               </p>
               <p>
                  <hi rend="largeCaps">THOMAS</hi> 
                  <hi rend="smallCaps">
                     <rs id="t18700110-143-verdict-1" type="verdictDescription">
                        <interp inst="t18700110-143-verdict-1" type="verdictCategory" value="guilty"></interp>
                        <interp inst="t18700110-143-verdict-1" type="verdictSubcategory" value="pleadedGuilty"></interp>PLEADED GUILTY</rs>
                  </hi>—<hi rend="italic">
                     <rs id="t18700110-143-punishment-7" type="punishmentDescription">
                        <interp inst="t18700110-143-punishment-7" type="punishmentCategory" value="imprison"></interp>
                        <interp inst="t18700110-143-punishment-7" type="punishmentSubcategory" value="no_subcategory"></interp>
                        <join result="defendantPunishment" targOrder="Y" targets="def1-143-18700110 t18700110-143-punishment-7"></join>Twelve Months' Imprisonment.</rs>
                  </hi>
