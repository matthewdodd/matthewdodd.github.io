               <p>RICHARD-
               <persName id="t18020428-13-person105">
                  ALEXANDER 
                  NELSON
               <interp inst="t18020428-13-person105" type="surname" value="NELSON"></interp>
                     <interp inst="t18020428-13-person105" type="given" value="ALEXANDER"></interp>
                     <interp inst="t18020428-13-person105" type="gender" value="male"></interp>
