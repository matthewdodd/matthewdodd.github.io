                        <interp inst="t18760228-234-verdict-1" type="verdictSubcategory" value="no_subcategory"></interp>GUILTY</rs>
                  </hi>——<hi rend="italic">
                     <rs id="t18760228-234-punishment-36" type="punishmentDescription">
