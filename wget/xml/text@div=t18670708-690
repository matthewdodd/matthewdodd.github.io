               <p>
                  <hi rend="largeCaps">WOOD</hi> 
                  <hi rend="smallCaps">

                     <rs id="t18670708-690-verdict-1" type="verdictDescription">
                        <interp inst="t18670708-690-verdict-1" type="verdictCategory" value="guilty"></interp>
