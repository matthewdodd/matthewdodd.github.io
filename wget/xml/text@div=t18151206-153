                     <join result="defendantPunishment" targOrder="Y" targets="t18151206-153-defend1277 t18151206-153-punish838"></join>
               Confined one year
            </rs>, and <rs id="t18151206-153-punish839" type="punishmentDescription">
                     <interp inst="t18151206-153-punish839" type="punishmentCategory" value="miscPunish"></interp>
