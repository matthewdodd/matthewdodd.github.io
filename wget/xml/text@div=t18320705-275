               <p>
            
                  <persName id="t18320705-275-person2249">
                  GEORGE 
                  CHAPMAN
               <interp inst="t18320705-275-person2249" type="surname" value="CHAPMAN"></interp>
                     <interp inst="t18320705-275-person2249" type="given" value="GEORGE"></interp>
                     <interp inst="t18320705-275-person2249" type="gender" value="male"></interp>
