                  <persName id="t18240916-254-person2121">
                  WILLIAM 
                  PICKETT
               <interp inst="t18240916-254-person2121" type="surname" value="PICKETT"></interp>
                     <interp inst="t18240916-254-person2121" type="given" value="WILLIAM"></interp>
                     <interp inst="t18240916-254-person2121" type="gender" value="male"></interp>
