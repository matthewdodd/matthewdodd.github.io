                     <join result="offenceCrimeDate" targOrder="Y" targets="t18270111-6-off33 t18270111-6-cd34"></join>, at <placeName id="t18270111-6-crimeloc35">St. Martin in the Fields</placeName>
                     <interp inst="t18270111-6-crimeloc35" type="placeName" value="St. Martin in the Fields"></interp>
