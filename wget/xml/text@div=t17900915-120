            , 
               
                  <persName id="t17900915-120-defend1168" type="defendantName">
                     THOMAS 
                     ARNOLD
                  <interp inst="t17900915-120-defend1168" type="surname" value="ARNOLD"></interp>
                     <interp inst="t17900915-120-defend1168" type="given" value="THOMAS"></interp>
                     <interp inst="t17900915-120-defend1168" type="gender" value="male"></interp>
                  </persName>
               
            , and 
               
                  <persName id="t17900915-120-defend1170" type="defendantName">
                     ALEXANDER 
                     BARCLAY
                  <interp inst="t17900915-120-defend1170" type="surname" value="BARCLAY"></interp>
                     <interp inst="t17900915-120-defend1170" type="given" value="ALEXANDER"></interp>
