               <p>239. 
               <persName id="t18030216-20-defend122" type="defendantName">
                  THOMAS 
                  GOULD
               <interp inst="t18030216-20-defend122" type="surname" value="GOULD"></interp>
                     <interp inst="t18030216-20-defend122" type="given" value="THOMAS"></interp>
