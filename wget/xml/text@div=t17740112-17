               <p>122. (2d. M.) 
               
                  <persName id="t17740112-17-defend204" type="defendantName">
                     JAMES
                      BANNING
                  <interp inst="t17740112-17-defend204" type="surname" value="BANNING"></interp>
                     <interp inst="t17740112-17-defend204" type="given" value="JAMES"></interp>
                     <interp inst="t17740112-17-defend204" type="gender" value="male"></interp>
