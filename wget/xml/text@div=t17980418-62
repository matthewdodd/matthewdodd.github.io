               <p>297. 
               
                  <persName id="t17980418-62-defend487" type="defendantName">
                     AUGUSTUS 
                     SEATON
                  <interp inst="t17980418-62-defend487" type="surname" value="SEATON"></interp>
                     <interp inst="t17980418-62-defend487" type="given" value="AUGUSTUS"></interp>
