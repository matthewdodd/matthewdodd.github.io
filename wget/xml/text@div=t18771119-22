                     <interp inst="t18771119-22-verdict-1" type="verdictSubcategory" value="withRecommendation"></interp>
                     <hi rend="smallCaps">GUILTY</hi>. </rs> 
                  <rs id="t18771119-22-punishment-21" type="punishmentDescription">
