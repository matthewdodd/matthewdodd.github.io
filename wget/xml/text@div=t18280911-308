               <persName id="t18280911-308-victim1682" type="victimName">
                  James 
                  Franklin
               <interp inst="t18280911-308-victim1682" type="surname" value="Franklin"></interp>
                     <interp inst="t18280911-308-victim1682" type="given" value="James"></interp>
